---
import Head from '../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Topbar -->
        <div class="bg-primary-pale py-2 small text-muted d-none d-md-block">
          <div class="container">
            <div class="row align-items-center text-center text-md-start gx-3 gy-2">
              <!-- Left: Phone & Email -->
              <div
                class="col-12 col-md-auto d-flex justify-content-center justify-content-md-start flex-wrap gap-3"
              >
                <div>
                  <i class="ri-phone-fill me-1"></i>
                  <a href="tel:+12345678901" class="text-muted text-decoration-none"
                    >+1 (234) 567-8901</a
                  >
                </div>
                <div>
                  <i class="ri-mail-fill me-1"></i>
                  <a href="mailto:hello@email.com" class="text-muted text-decoration-none"
                    >hello@email.com</a
                  >
                </div>
              </div>

              <!-- Right: Hours & Location -->
              <div
                class="col-12 col-md-auto d-flex justify-content-center justify-content-md-end flex-wrap gap-3 ms-md-auto"
              >
                <div>
                  <i class="ri-time-fill me-1"></i>
                  Mon–Fri: 9am–6pm
                </div>
                <div>
                  <i class="ri-map-pin-fill me-1"></i>
                  123 Main Street, Austin, TX
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-body shadow-sm z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/6/home">
              <img
                src="/dist/assets/img/breederspot-images/logo.svg"
                alt="Logo"
                class="me-2 mt-1"
                style="height: 28px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/6/home">
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 28px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul
                  class="navbar-nav flex-grow-1 pe-3 justify-content-start justify-content-lg-center"
                >
                  <!-- Home -->
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/6/home">Home</a>
                  </li>

                  <!-- About Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="aboutDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      About
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                      <li><a class="dropdown-item" href="/6/about">About</a></li>
                      <li>
                        <a class="dropdown-item" href="/6/breeding-philosophy"
                          >Breeding Philosophy</a
                        >
                      </li>
                      <li><a class="dropdown-item" href="/6/testimonials">Testimonials</a></li>
                    </ul>
                  </li>

                  <!-- Explore Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="exploreDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Explore
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="exploreDropdown">
                      <li><a class="dropdown-item" href="/6/puppies">Puppies</a></li>
                      <li><a class="dropdown-item" href="/6/gallery">Gallery</a></li>
                      <li><a class="dropdown-item" href="/6/shop">Shop</a></li>
                    </ul>
                  </li>

                  <!-- Blog Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="blogDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Blog
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="blogDropdown">
                      <li><a class="dropdown-item" href="/6/blog-1">Blog – No Sidebar</a></li>
                      <li><a class="dropdown-item" href="/6/blog-2">Blog – Left Sidebar</a></li>
                      <li><a class="dropdown-item" href="/6/blog-3">Blog – Right Sidebar</a></li>
                      <li><a class="dropdown-item" href="/6/post-1">Blog Post – No Sidebar</a></li>
                      <li>
                        <a class="dropdown-item" href="/6/post-2">Blog Post – Left Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/6/post-3">Blog Post – Right Sidebar</a>
                      </li>
                    </ul>
                  </li>

                  <!-- FAQs -->
                  <li class="nav-item">
                    <a class="nav-link" href="/6/faq">FAQs</a>
                  </li>

                  <!-- Contact -->
                  <li class="nav-item">
                    <a class="nav-link active" href="/6/contact">Contact</a>
                  </li>
                </ul>

                <!-- Bottom Section -->
                <div class="d-block d-lg-none mt-4">
                  <a href="tel:+12345678901" class="btn btn-outline-primary rounded w-100 mb-2">
                    <i class="ri-phone-fill me-2"></i>Book Consultation
                  </a>
                  <a class="btn btn-primary rounded w-100" href="#"
                    ><i class="ri-sparkling-2-fill me-2"></i> Get Started Now</a
                  >
                </div>
              </div>
            </div>

            <div class="d-none d-lg-flex align-items-center gap-3">
              <div class="text-start">
                <small class="text-muted d-block">Book Consultation</small>
                <a href="tel:+12345678901" class="text-decoration-none fw-medium">
                  +1 (234) 567-8901
                </a>
              </div>

              <a class="btn btn-lg btn-primary rounded" href="#">Get Started</a>
            </div>
          </div>
        </nav>

        <!-- Hero Section -->
        <section
          class="position-relative text-light text-center"
          style="background-image: url('/dist/assets/img/breederspot-images/dog-img-9-wide.jpg'); background-size: cover; background-position: center; height: 500px;"
        >
          <!-- Overlay -->
          <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>

          <!-- Content -->
          <div
            class="position-relative d-flex flex-column justify-content-center align-items-center h-100 px-3"
          >
            <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <h1 class="display-4 fw-semibold">Get in Touch With Us</h1>
                <p class="lead mb-0">
                  Whether you have questions, need guidance, or just want to say hello — we’re here
                  to help you on your journey to responsible puppy ownership.
                </p>
              </div>
            </div>
          </div>
        </section>

        <!-- Contact Section -->
        <section class="bg-body py-5">
          <div class="container">
            <div class="row g-4">
              <div class="col-md-6">
                <i class="ri-customer-service-fill text-primary fs-1"></i>

                <h1 class="display-6 fw-semibold mb-2">Contact Us</h1>

                <p class="lead mb-4">
                  Whether you have a question, need support, or just want to say hello — we’re here
                  for you.
                </p>

                <form>
                  <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      id="name"
                      placeholder="John Doe"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      id="email"
                      placeholder="you@example.com"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea
                      class="form-control form-control-lg"
                      id="message"
                      rows="3"
                      placeholder="Write your message here..."></textarea>
                  </div>
                  <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                  </div>
                </form>
              </div>
              <div class="col-md-6 pt-4 pt-md-0">
                <div class="ratio ratio-1x1">
                  <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23181.182903463836!2d-97.75408308207732!3d30.268331893788808!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b599a0cc032f%3A0x5d9b464bd469d57a!2sAustin%2C%20TX%2C%20USA!5e0!3m2!1sen!2sin!4v1746533935359!5m2!1sen!2sin"
                    width="600"
                    height="600"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                  >
                  </iframe>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Contact Info Section -->
        <section class="bg-primary-pale py-5">
          <div class="container">
            <div class="row text-center g-4">
              <!-- Phone -->
              <div class="col-sm-4">
                <i class="ri-phone-line text-primary display-5 mb-3"></i>
                <h5 class="fw-semibold mb-1">Phone</h5>
                <p class="mb-0 text-muted">+1 (234) 567-8901</p>
              </div>

              <!-- Email -->
              <div class="col-sm-4">
                <i class="ri-mail-line text-primary display-5 mb-3"></i>
                <h5 class="fw-semibold mb-1">Email</h5>
                <p class="mb-0 text-muted">hello@yourcompany.com</p>
              </div>

              <!-- Location -->
              <div class="col-sm-4">
                <i class="ri-map-pin-line text-primary display-5 mb-3"></i>
                <h5 class="fw-semibold mb-1">Location</h5>
                <p class="mb-0 text-muted">
                  1234 Market Street, Suite 500 <br />San Francisco, CA 94103, USA
                </p>
              </div>
            </div>
          </div>
        </section>

        <!-- FAQ Section -->
        <section class="bg-body py-5">
          <div class="container">
            <div class="row">
              <div class="col-lg-8 offset-lg-2">
                <h2 class="fw-semibold text-center display-6 mb-2">Frequently Asked Questions</h2>
                <p class="lead text-center mb-4">
                  Answers to some of the most common questions we receive about our puppies,
                  process, and philosophy.
                </p>
                <div class="accordion" id="faqAccordion">
                  <!-- FAQ 1 -->
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="faq1-heading">
                      <button
                        class="accordion-button"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#faq1"
                        aria-expanded="true"
                        aria-controls="faq1"
                      >
                        How do I apply for a puppy?
                      </button>
                    </h2>
                    <div
                      id="faq1"
                      class="accordion-collapse collapse show"
                      aria-labelledby="faq1-heading"
                      data-bs-parent="#faqAccordion"
                    >
                      <div class="accordion-body">
                        You may simply fill out our application form. Once reviewed, we’ll follow up
                        with next steps.
                      </div>
                    </div>
                  </div>

                  <!-- FAQ 2 -->
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="faq2-heading">
                      <button
                        class="accordion-button collapsed"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#faq2"
                        aria-expanded="false"
                        aria-controls="faq2"
                      >
                        Can I visit puppies before adoption?
                      </button>
                    </h2>
                    <div
                      id="faq2"
                      class="accordion-collapse collapse"
                      aria-labelledby="faq2-heading"
                      data-bs-parent="#faqAccordion"
                    >
                      <div class="accordion-body">
                        Yes! We welcome scheduled visits. It’s important to us that you feel
                        confident and connected.
                      </div>
                    </div>
                  </div>

                  <!-- FAQ 3 -->
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="faq3-heading">
                      <button
                        class="accordion-button collapsed"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#faq3"
                        aria-expanded="false"
                        aria-controls="faq3"
                      >
                        Do you offer any health guarantees?
                      </button>
                    </h2>
                    <div
                      id="faq3"
                      class="accordion-collapse collapse"
                      aria-labelledby="faq3-heading"
                      data-bs-parent="#faqAccordion"
                    >
                      <div class="accordion-body">
                        Yes. All puppies come with a health guarantee and vaccinations appropriate
                        for their age.
                      </div>
                    </div>
                  </div>

                  <!-- FAQ 4 -->
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="faq4-heading">
                      <button
                        class="accordion-button collapsed"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#faq4"
                        aria-expanded="false"
                        aria-controls="faq4"
                      >
                        Will I receive updates before pickup?
                      </button>
                    </h2>
                    <div
                      id="faq4"
                      class="accordion-collapse collapse"
                      aria-labelledby="faq4-heading"
                      data-bs-parent="#faqAccordion"
                    >
                      <div class="accordion-body">
                        Yes, we provide regular updates with development milestones so you can
                        follow your puppy’s early life.
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- CTA Section -->
        <section class="bg-primary-pale py-5">
          <div class="container">
            <div class="row">
              <div class="col-lg-6 offset-lg-3 text-center">
                <h2 class="display-6 fw-semibold mb-2">Your Puppy Journey Starts Here</h2>
                <p class="lead mb-4">
                  Sign up to get updates on upcoming litters, and tips for new dog parents.
                </p>

                <!-- Email Input -->
                <form class="row g-2 justify-content-center">
                  <div class="col-sm-9">
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      placeholder="Enter your email"
                      required
                    />
                  </div>
                  <div class="col-sm-3">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Subscribe</button>
                  </div>
                </form>

                <!-- Note below input -->
                <p class="text-muted small mt-2">
                  *We respect your privacy. No spam—just adorable puppies and helpful updates.
                </p>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer>
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 px-3 px-lg-5 pt-5 pb-4">
            <div class="col mb-3">
              <a
                href="/"
                class="d-inline-flex align-items-center text-decoration-none mb-2"
                aria-label="Your Company Logo"
              >
                <img
                  src="/dist/assets/img/breederspot-images/logo.svg"
                  alt="Your Company Logo"
                  style="height: 28px;"
                  class="me-2"
                />
              </a>
              <p class="text-body-secondary mb-3">
                Over 200 happy families have found their perfect pup with us — yours could be next.
              </p>
              <button class="btn btn-outline-primary">Get in touch</button>
            </div>

            <div class="col mb-3"></div>

            <div class="col mb-3">
              <nav aria-label="Quick Links">
                <h5 class="mb-3">Quick Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/6/home" class="nav-link p-0 text-body-secondary">Home</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/6/about" class="nav-link p-0 text-body-secondary">About</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/6/puppies" class="nav-link p-0 text-body-secondary">Puppies</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/6/shop" class="nav-link p-0 text-body-secondary">Shop</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/6/faq" class="nav-link p-0 text-body-secondary">FAQs</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/6/contact" class="nav-link p-0 text-body-secondary">Contact</a>
                  </li>
                </ul>
              </nav>
            </div>

            <div class="col mb-3">
              <nav aria-label="Legal">
                <h5 class="mb-3">Legal</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Terms of Use</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Privacy Policy</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Cookies Policy</a>
                  </li>
                </ul>
              </nav>
            </div>

            <div class="col mb-3">
              <h5 class="mb-3">Contact</h5>
              <ul class="nav flex-column">
                <li class="nav-item mb-2 text-body-secondary">
                  <i class="ri-phone-fill text-primary me-2"></i>
                  <a
                    href="tel:+12345678901"
                    class="text-body-secondary text-decoration-none text-break">+1 (234) 567-8901</a
                  >
                </li>
                <li class="nav-item mb-2 text-body-secondary">
                  <i class="ri-mail-fill text-primary me-2"></i>
                  <a
                    href="mailto:hello@email.com"
                    class="text-body-secondary text-decoration-none text-break">hello@email.com</a
                  >
                </li>
                <li class="nav-item mb-2 text-body-secondary">
                  <address class="text-body-secondary">
                    <i class="ri-map-pin-fill text-primary me-2"></i>
                    123 Main Street, Austin, TX
                  </address>
                </li>
              </ul>
            </div>
          </div>
          <div class="text-center bg-primary-subtle py-4">
            <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
