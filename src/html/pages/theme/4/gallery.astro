---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout title="Gallery" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Gallery Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <h1
            class="text-primary text-center text-uppercase fw-semibold fs-5 mb-2"
            data-aos="fade-down"
            data-aos-duration="1200"
          >
            Gallery
          </h1>
          <h2
            class="display-5 text-center fw-bold mb-2"
            data-aos="fade-down"
            data-aos-delay="100"
            data-aos-duration="1200"
          >
            Our Special Moments
          </h2>
          <p
            class="text-center lead fs-5 mb-3"
            data-aos="fade-in"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            Lorem ipsum dolor sit amet consectet adipisi elit dolorum quibus, libero corporis
            dignis.
          </p>

          <ul
            class="nav nav-tabs justify-content-center flex-wrap gap-2 mb-4"
            data-aos="fade-in"
            data-aos-delay="300"
            data-aos-duration="1200"
          >
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">All Photos</a>
            </li>
            <li class="nav-item"><a class="nav-link" href="#">Puppies</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Adults</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Families</a></li>
          </ul>

          <div class="row g-3">
            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/breederspot-images/poodle-2.jpg')}
              >
                <figure
                  class="img-scale rounded-4 h-100 w-100"
                  data-aos="fade-in"
                  data-aos-delay="100"
                  data-aos-duration="1200"
                >
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/poodle-2.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>

            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/breederspot-images/poodle-3.jpg')}
              >
                <figure
                  class="img-scale rounded-4 h-100 w-100"
                  data-aos="fade-in"
                  data-aos-delay="200"
                  data-aos-duration="1200"
                >
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/poodle-3.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>

            <div class="col-sm-12 col-md-6">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/breederspot-images/poodle-1.jpg')}
              >
                <figure
                  class="img-scale rounded-4 h-100 w-100"
                  data-aos="fade-in"
                  data-aos-delay="300"
                  data-aos-duration="1200"
                >
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/poodle-1.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>

            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/breederspot-images/poodle-puppy-1.jpg')}
              >
                <figure
                  class="img-scale rounded-4 h-100 w-100"
                  data-aos="fade-in"
                  data-aos-delay="400"
                  data-aos-duration="1200"
                >
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/poodle-puppy-1.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>

            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/breederspot-images/poodle-1.jpg')}
              >
                <figure
                  class="img-scale rounded-4 h-100 w-100"
                  data-aos="fade-in"
                  data-aos-delay="500"
                  data-aos-duration="1200"
                >
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/poodle-1.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>

            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/breederspot-images/poodle-2.jpg')}
              >
                <figure
                  class="img-scale rounded-4 h-100 w-100"
                  data-aos="fade-in"
                  data-aos-delay="600"
                  data-aos-duration="1200"
                >
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/poodle-2.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>

            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/breederspot-images/poodle-3.jpg')}
              >
                <figure
                  class="img-scale rounded-4 h-100 w-100"
                  data-aos="fade-in"
                  data-aos-delay="700"
                  data-aos-duration="1200"
                >
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/poodle-3.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content bg-transparent border-0">
        <div class="modal-body p-0">
          <img id="modalImage" src="" class="img-fluid rounded-4 w-100" alt="Full Size Image" />
        </div>
      </div>
    </div>
  </div>

  <!-- Share Your Photos Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-10 offset-md-1 col-lg-6 offset-lg-3">
          <h2
            class="text-primary text-uppercase fw-semibold fs-5 mb-2"
            data-aos="fade-right"
            data-aos-duration="1200"
          >
            Share Your Photos
          </h2>
          <h3
            class="display-6 fw-bold mb-3"
            data-aos="fade-right"
            data-aos-delay="100"
            data-aos-duration="1200"
          >
            Share your Poodle moments with us
          </h3>
          <p class="mb-3" data-aos="fade-up" data-aos-duration="1200">
            We'd love to feature your furry family member! Send us your favorite photos — whether
            it's your pup's first day home, playtime in the yard, or cozy moments on the couch.
          </p>
          <p class="mb-3" data-aos="fade-up" data-aos-duration="1200">
            To share, simply email your images to <strong>hello@email.com</strong> with the following
            details:
          </p>
          <ul class="list-unstyled mb-3" data-aos="fade-up" data-aos-duration="1200">
            <li><i class="ri-check-line text-primary me-2"></i>Dog's Name</li>
            <li><i class="ri-check-line text-primary me-2"></i>Dog's Age</li>
            <li><i class="ri-check-line text-primary me-2"></i>Description</li>
          </ul>
          <small class="text-muted d-block" data-aos="fade-up" data-aos-duration="1200">
            Submitted photos may be featured on our website or social channels. We will never share
            personal contact information.
          </small>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/poodle-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>

    <!-- Content -->
    <div
      class="position-relative d-flex flex-column justify-content-center h-100 px-3"
      data-aos="fade-in"
      data-aos-duration="1200"
    >
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h5 class="display-6 fw-bold mb-2">Don't Miss Our Next Litter</h5>
          <p class="fs-5 mb-4">
            Be the first to know about upcoming poodle puppies, early adoption openings, and expert
            puppy care tips.
          </p>

          <!-- Email Form -->
          <form class="row g-2 justify-content-center">
            <div class="col-sm-9">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Enter your email"
                required
              />
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-primary btn-lg w-100">Notify Me</button>
            </div>
          </form>

          <!-- Small note -->
          <p class="text-light mt-3 mb-0">We send only what matters—no spam, just poodles.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
