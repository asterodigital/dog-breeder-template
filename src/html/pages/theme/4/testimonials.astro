  <!-- Info Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="row g-4">
        <div class="col-md-4">
          <div class="text-center">
            <div>
              <i class="ri-star-fill text-yellow fs-3"></i>
              <i class="ri-star-fill text-yellow fs-3"></i>
              <i class="ri-star-fill text-yellow fs-3"></i>
              <i class="ri-star-fill text-yellow fs-3"></i>
              <i class="ri-star-half-fill text-yellow fs-3"></i>
            </div>
            <div><span class="fw-semibold fs-5 ms-2">4.5/5 Average Rating</span></div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="text-center">
            <div><i class="ri-group-fill text-primary fs-3"></i></div>
            <div><span class="fw-semibold fs-5 ms-2">100+ Happy Families</span></div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="text-center">
            <div><i class="ri-hand-heart-fill text-primary fs-3"></i></div>
            <div><span class="fw-semibold fs-5 ms-2">Lifetime Support</span></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Testimonials Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h2 class="text-primary fs-5 text-uppercase mb-2">Video Testimonials</h2>
          <h3 class="display-6 fw-bold mb-2">Happy tails & families</h3>
          <p class="mb-3">
            Heartfelt stories from real families who've welcomed our puppies into their homes—with
            love, joy, and wagging tails.
          </p>
          <a href="#" class="btn btn-lg btn-outline-primary">
            View Puppies <i class="ri-arrow-right-line ms-1"></i>
          </a>
        </div>
        <div class="col-md-8 mt-4 mt-md-0">
          <div class="row g-4">
            <div class="col-md-6">
              <div class="card card-lift border h-100 p-0">
                <div class="position-relative">
                  <a href="#" class="d-block">
                    <img
                      src={getAssetPrefix('/assets/img/breederspot-images/poodle-2.jpg')}
                      alt="Testimonial Video Thumbnail"
                      class="card-img-top"
                      style="object-fit: cover; height: 225px;"
                    />
                    <div class="position-absolute top-50 start-50 translate-middle">
                      <i
                        class="ri-play-fill fs-1 text-light bg-dark bg-opacity-75 rounded-circle p-2"
                      ></i>
                    </div>
                  </a>
                </div>
                <div class="card-body p-3">
                  <h5 class="card-title fs-4 mb-1">
                    <a href="#" class="text-decoration-none text-dark">The Johnson Family</a>
                  </h5>

                  <p class="text-muted mb-0">Austin, Texas</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card card-lift border h-100 p-0">
                <div class="position-relative">
                  <a href="#" class="d-block">
                    <img
                      src={getAssetPrefix('/assets/img/breederspot-images/poodle-2.jpg')}
                      alt="Testimonial Video Thumbnail"
                      class="card-img-top"
                      style="object-fit: cover; height: 225px;"
                    />
                    <div class="position-absolute top-50 start-50 translate-middle">
                      <i
                        class="ri-play-fill fs-1 text-light bg-dark bg-opacity-75 rounded-circle p-2"
                      ></i>
                    </div>
                  </a>
                </div>
                <div class="card-body p-3">
                  <h5 class="card-title fs-4 mb-1">
                    <a href="#" class="text-decoration-none text-dark">The Williams Family</a>
                  </h5>

                  <p class="text-muted mb-0">Las Vegas, Nevada</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/poodle-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h5 class="display-6 fw-bold mb-2">Don't Miss Our Next Litter</h5>
          <p class="fs-5 mb-4">
            Be the first to know about upcoming poodle puppies, early adoption openings, and expert
            puppy care tips.
          </p>
          <!-- Email Form -->
          <form class="row g-2 justify-content-center">
            <div class="col-sm-9">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Enter your email"
                required=""
              />
              <div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div>
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-primary btn-lg w-100">Notify Me</button>
            </div>
          </form>
          <!-- Small note -->
          <p class="text-light mt-3 mb-0">We send only what matters—no spam, just poodles.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
