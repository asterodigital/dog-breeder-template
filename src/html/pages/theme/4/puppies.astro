---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Puppies" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Header Section -->
  <section class="bg-body py-5 position-relative">
    <div
      class="container bg-primary-subtle rounded p-4 p-md-5 position-relative overflow-hidden"
      data-aos="fade-in"
      data-aos-duration="1200"
    >
      <img
        src={getAssetPrefix('/assets/img/breederspot-images/multiple-paws.png')}
        alt="Decorative Paws Image"
        class="position-absolute paw-overlay-img"
      />
      <h1 class="text-primary text-center text-uppercase fw-semibold fs-5 mb-2">
        Available Puppies
      </h1>
      <h2 class="text-center display-6 fw-bold mb-2">
        Meet Our Adorable Puppies Ready for Adoption
      </h2>
    </div>
  </section>

  <!-- Puppies Section -->
  <section class="bg-body pb-5">
    <div class="container">
      <div class="row gy-4">
        <!-- Sidebar / Filter Column -->
        <div class="col-lg-3">
          <div class="sticky-top z-1" style="top: 80px;">
            <div class="card border p-3" data-aos="fade-right" data-aos-duration="1200">
              <div class="card-body">
                <h5 class="fw-semibold mb-3">Filter Puppies</h5>
                <div class="mb-3">
                  <label for="breed" class="form-label">Breed</label>
                  <select class="form-select form-select-lg" id="breed">
                    <option value="">All Breeds</option>
                    <option>Poodle</option>
                    <option>Golden Retriever</option>
                    <option>German Shepherd</option>
                    <option>Labrador</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="location" class="form-label">Location</label>
                  <input
                    type="text"
                    class="form-control form-control-lg"
                    id="location"
                    placeholder="City or ZIP"
                  />
                </div>
                <div class="mb-3">
                  <label class="form-label">Gender</label>
                  <div class="form-check form-check-lg">
                    <input class="form-check-input" type="radio" name="gender" id="male" />
                    <label class="form-check-label" for="male">Male</label>
                  </div>
                  <div class="form-check form-check-lg">
                    <input class="form-check-input" type="radio" name="gender" id="female" />
                    <label class="form-check-label" for="female">Female</label>
                  </div>
                </div>
                <button class="btn btn-lg btn-primary w-100 mt-2">Search</button>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-9">
          <div class="row g-4">
            <!-- Pet 1 -->
            <div class="col-md-4">
              <div
                class="card border h-100 position-relative p-0"
                data-aos="fade-in"
                data-aos-duration="1200"
              >
                <figure class="img-scale rounded-top-4 mb-0">
                  <a href={getPathPrefix('/theme/4/puppy-details')}
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/poodle-puppy-1.jpg')}
                      class="card-img-top rounded-0"
                      style="max-height: 300px; object-fit: cover;"
                      alt="Pet Image"
                    /></a
                  >
                </figure>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-2"
                >
                  <i class="ri-women-line"></i>
                </span>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a
                        href={getPathPrefix('/theme/4/puppy-details')}
                        class="text-decoration-none text-body">Olive</a
                      >
                    </h5>
                    <p class="text-muted fs-4 fw-semibold mb-0">$1200</p>
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge text-primary bg-primary-subtle fs-6">Poodle</span>
                    <span class="badge text-primary bg-primary-subtle fs-6">4 Weeks</span>
                  </div>
                  <p class="card-text">
                    A curious little explorer who loves sniffing out new adventures and snuggling
                    after.
                  </p>
                </div>
                <a
                  href={getPathPrefix('/theme/4/puppy-details')}
                  class="btn btn-lg btn-primary rounded-top-0 w-100"
                >
                  More Info <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>

            <!-- Pet 2 -->
            <div class="col-md-4">
              <div
                class="card border h-100 position-relative p-0"
                data-aos="fade-in"
                data-aos-delay="100"
                data-aos-duration="1200"
              >
                <figure class="img-scale rounded-top-4 mb-0">
                  <a href={getPathPrefix('/theme/4/puppy-details')}
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/poodle-puppy-2.jpg')}
                      class="card-img-top rounded-0"
                      style="max-height: 300px; object-fit: cover;"
                      alt="Pet Image"
                    /></a
                  >
                </figure>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-2"
                >
                  <i class="ri-men-line"></i>
                </span>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a
                        href={getPathPrefix('/theme/4/puppy-details')}
                        class="text-decoration-none text-body">Finn</a
                      >
                    </h5>
                    <p class="text-muted fs-4 fw-semibold mb-0">$1400</p>
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge text-primary bg-primary-subtle fs-6">Poodle</span>
                    <span class="badge text-primary bg-primary-subtle fs-6">4 Weeks</span>
                  </div>
                  <p class="card-text">
                    Bright-eyed and always eager to play, Finn is a bundle of energy with a gentle
                    heart.
                  </p>
                </div>
                <a
                  href={getPathPrefix('/theme/4/puppy-details')}
                  class="btn btn-lg btn-primary rounded-top-0 w-100"
                >
                  More Info <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>

            <!-- Pet 3 -->
            <div class="col-md-4">
              <div
                class="card border h-100 position-relative p-0"
                data-aos="fade-in"
                data-aos-delay="200"
                data-aos-duration="1200"
              >
                <figure class="img-scale rounded-top-4 mb-0">
                  <a href={getPathPrefix('/theme/4/puppy-details')}
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/poodle-puppy-3.jpg')}
                      class="card-img-top rounded-0"
                      style="max-height: 300px; object-fit: cover;"
                      alt="Pet Image"
                    /></a
                  >
                </figure>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-2"
                >
                  <i class="ri-women-line"></i>
                </span>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a
                        href={getPathPrefix('/theme/4/puppy-details')}
                        class="text-decoration-none text-body">Luna</a
                      >
                    </h5>
                    <p class="text-muted fs-4 fw-semibold mb-0">$1200</p>
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge text-primary bg-primary-subtle fs-6">Poodle</span>
                    <span class="badge text-primary bg-primary-subtle fs-6">4 Weeks</span>
                  </div>
                  <p class="card-text">
                    Graceful and calm, Luna adores quiet moments and has a naturally nurturing vibe.
                  </p>
                </div>
                <a
                  href={getPathPrefix('/theme/4/puppy-details')}
                  class="btn btn-lg btn-primary rounded-top-0 w-100"
                >
                  More Info <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>

            <!-- Pet 4 -->
            <div class="col-md-4">
              <div
                class="card border h-100 position-relative p-0"
                data-aos="fade-in"
                data-aos-delay="300"
                data-aos-duration="1200"
              >
                <figure class="img-scale rounded-top-4 mb-0">
                  <a href={getPathPrefix('/theme/4/puppy-details')}
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/poodle-puppy-4.jpg')}
                      class="card-img-top rounded-0"
                      style="max-height: 300px; object-fit: cover;"
                      alt="Pet Image"
                    /></a
                  >
                </figure>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-2"
                >
                  <i class="ri-men-line"></i>
                </span>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a
                        href={getPathPrefix('/theme/4/puppy-details')}
                        class="text-decoration-none text-body">Jasper</a
                      >
                    </h5>
                    <p class="text-muted fs-4 fw-semibold mb-0">$1200</p>
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge text-primary bg-primary-subtle fs-6">Poodle</span>
                    <span class="badge text-primary bg-primary-subtle fs-6">4 Weeks</span>
                  </div>
                  <p class="card-text">
                    The class clown of the litter, Jasper keeps everyone laughing with his goofy
                    antics.
                  </p>
                </div>
                <a
                  href={getPathPrefix('/theme/4/puppy-details')}
                  class="btn btn-lg btn-primary rounded-top-0 w-100"
                >
                  More Info <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>

            <!-- Pet 5 -->
            <div class="col-md-4">
              <div
                class="card border h-100 position-relative p-0"
                data-aos="fade-in"
                data-aos-delay="400"
                data-aos-duration="1200"
              >
                <figure class="img-scale rounded-top-4 mb-0">
                  <a href={getPathPrefix('/theme/4/puppy-details')}
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/poodle-puppy-1.jpg')}
                      class="card-img-top rounded-0"
                      style="max-height: 300px; object-fit: cover;"
                      alt="Pet Image"
                    /></a
                  >
                </figure>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-2"
                >
                  <i class="ri-women-line"></i>
                </span>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a
                        href={getPathPrefix('/theme/4/puppy-details')}
                        class="text-decoration-none text-body">Pluto</a
                      >
                    </h5>
                    <p class="text-muted fs-4 fw-semibold mb-0">$1200</p>
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge text-primary bg-primary-subtle fs-6">Poodle</span>
                    <span class="badge text-primary bg-primary-subtle fs-6">4 Weeks</span>
                  </div>
                  <p class="card-text">
                    A curious little explorer who loves sniffing out new adventures and snuggling
                    after.
                  </p>
                </div>
                <a
                  href={getPathPrefix('/theme/4/puppy-details')}
                  class="btn btn-lg btn-primary rounded-top-0 w-100"
                >
                  More Info <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>

            <!-- Pet 6 -->
            <div class="col-md-4">
              <div
                class="card border h-100 position-relative p-0"
                data-aos="fade-in"
                data-aos-delay="500"
                data-aos-duration="1200"
              >
                <figure class="img-scale rounded-top-4 mb-0">
                  <a href={getPathPrefix('/theme/4/puppy-details')}
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/poodle-puppy-2.jpg')}
                      class="card-img-top rounded-0"
                      style="max-height: 300px; object-fit: cover;"
                      alt="Pet Image"
                    /></a
                  >
                </figure>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-2"
                >
                  <i class="ri-men-line"></i>
                </span>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a
                        href={getPathPrefix('/theme/4/puppy-details')}
                        class="text-decoration-none text-body">Rocky</a
                      >
                    </h5>
                    <p class="text-muted fs-4 fw-semibold mb-0">$1400</p>
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge text-primary bg-primary-subtle fs-6">Poodle</span>
                    <span class="badge text-primary bg-primary-subtle fs-6">4 Weeks</span>
                  </div>
                  <p class="card-text">
                    Bright-eyed and always eager to play, Rocky is a bundle of energy with a gentle
                    heart.
                  </p>
                </div>
                <a
                  href={getPathPrefix('/theme/4/puppy-details')}
                  class="btn btn-lg btn-primary rounded-top-0 w-100"
                >
                  More Info <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>
          </div>

          <!-- Pagination -->
          <nav class="mt-5 d-flex justify-content-center">
            <ul class="pagination pagination-lg z-1">
              <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Litters Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="text-center">
        <h2
          class="text-primary fs-5 text-uppercase mb-2"
          data-aos="fade-up"
          data-aos-duration="1200"
        >
          Upcoming Litters
        </h2>
        <h3
          class="display-6 fw-bold mb-4"
          data-aos="fade-up"
          data-aos-delay="100"
          data-aos-duration="1200"
        >
          New poodle pups coming soon!
        </h3>
      </div>
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <div class="row g-4">
            <div class="col-md-6">
              <div
                class="card bg-primary-subtle border border-primary-soft card-lift h-100 p-0"
                data-aos="flip-up"
                data-aos-delay="100"
                data-aos-duration="1200"
              >
                <img
                  src={getAssetPrefix('/assets/img/breederspot-images/poodle-2.jpg')}
                  class="card-img-top"
                  style="max-height: 300px; width: 100%; object-fit: cover;"
                  alt="The Willow Litter"
                />
                <div class="card-body p-4">
                  <h5 class="card-title fs-3 fw-bold mb-1">The Willow Litter</h5>
                  <p class="text-primary fs-5 fw-semibold mb-1">Parents: Rocky × Mini</p>
                  <p class="text-body-secondary mb-2">Expected Date: June 15, 2025</p>
                  <p class="mb-3">
                    This pairing brings together two gentle Poodles - known for their calm
                    personalities and beautiful coats.
                  </p>
                  <a href="#" class="btn btn-lg btn-primary">
                    Join Waitlist <i class="ri-arrow-right-line align-middle ms-1"></i>
                  </a>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div
                class="card bg-primary-subtle border border-primary-soft card-lift h-100 p-0"
                data-aos="flip-up"
                data-aos-delay="200"
                data-aos-duration="1200"
              >
                <img
                  src={getAssetPrefix('/assets/img/breederspot-images/poodle-2.jpg')}
                  class="card-img-top"
                  style="max-height: 300px; width: 100%; object-fit: cover;"
                  alt="The Maple Litter"
                />
                <div class="card-body p-4">
                  <h5 class="card-title fs-3 fw-bold mb-1">The Maple Litter</h5>
                  <p class="text-primary fs-5 fw-semibold mb-1">Parents: Caesar × Angel</p>
                  <p class="text-body-secondary mb-2">Expected Date: July 2, 2025</p>
                  <p class="mb-3">
                    These Poodle pups will be loving, smart, and irresistibly sweet - perfect for
                    allergy-sensitive homes.
                  </p>
                  <a href="#" class="btn btn-lg btn-primary">
                    Join Waitlist <i class="ri-arrow-right-line align-middle ms-1"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="text-center">
        <h2
          class="text-primary fs-5 text-uppercase mb-2"
          data-aos="fade-down"
          data-aos-duration="1200"
        >
          Adoption Process
        </h2>
        <h3
          class="display-6 fw-bold mb-4"
          data-aos="fade-down"
          data-aos-delay="100"
          data-aos-duration="1200"
        >
          Your journey to puppy parenthood
        </h3>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="d-grid gap-4">
            <div
              class="card bg-primary-subtle card-lift h-100 p-4"
              data-aos="flip-up"
              data-aos-duration="1200"
            >
              <div class="card-body">
                <span class="display-5 fw-semibold text-primary">01.</span>
                <p class="fs-4 fw-semibold mb-2">Application</p>
                <p class="mb-0">
                  Start by filling out our quick form so we can learn more about you and match you
                  with the right puppy.
                </p>
              </div>
            </div>
            <div
              class="card bg-primary-subtle card-lift h-100 p-4"
              data-aos="flip-up"
              data-aos-duration="1200"
            >
              <div class="card-body">
                <span class="display-5 fw-semibold text-primary">02.</span>
                <p class="fs-4 fw-semibold mb-2">Approval</p>
                <p class="mb-0">
                  We'll review your application and reach out for a short conversation to ensure our
                  puppies go to loving homes.
                </p>
              </div>
            </div>
            <div
              class="card bg-primary-subtle card-lift h-100 p-4"
              data-aos="flip-up"
              data-aos-duration="1200"
            >
              <div class="card-body">
                <span class="display-5 fw-semibold text-primary">03.</span>
                <p class="fs-4 fw-semibold mb-2">Waitlist</p>
                <p class="mb-0">
                  Once approved, you'll join the waitlist for upcoming litters. We'll keep you
                  updated with litter announcements.
                </p>
              </div>
            </div>
            <div
              class="card bg-primary-subtle card-lift h-100 p-4"
              data-aos="flip-up"
              data-aos-duration="1200"
            >
              <div class="card-body">
                <span class="display-5 fw-semibold text-primary">04.</span>
                <p class="fs-4 fw-semibold mb-2">Homecoming</p>
                <p class="mb-0">
                  When your puppy is ready, you'll be invited to meet them. After final checks,
                  you'll bring home a happy companion!
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/poodle-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>

    <!-- Content -->
    <div
      class="position-relative d-flex flex-column justify-content-center h-100 px-3"
      data-aos="fade-in"
      data-aos-duration="1200"
    >
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h5 class="display-6 fw-bold mb-2">Don't Miss Our Next Litter</h5>
          <p class="fs-5 mb-4">
            Be the first to know about upcoming poodle puppies, early adoption openings, and expert
            puppy care tips.
          </p>

          <!-- Email Form -->
          <form class="row g-2 justify-content-center">
            <div class="col-sm-9">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Enter your email"
                required
              />
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-primary btn-lg w-100">Notify Me</button>
            </div>
          </form>

          <!-- Small note -->
          <p class="text-light mt-3 mb-0">We send only what matters—no spam, just poodles.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
