---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Shop Details"
  description="Dedicated to raising happy, healthy puppies in loving homes."
>
  <!-- Main Section -->
  <section class="bg-body py-5">
    <div class="container">
      <!-- Back Button -->
      <div class="mb-4">
        <a href={getPathPrefix('/theme/4/shop')} class="btn btn-lg btn-outline-primary">
          <i class="ri-arrow-left-line"></i> Back to Shop
        </a>
      </div>

      <!-- Product Info Row -->
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <!-- Image Column -->
        <div class="col">
          <figure class="img-scale rounded">
            <img
              src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-1.jpg')}
              class="img-fluid"
              alt="Duck Toy"
            />
          </figure>
          <div class="d-flex gap-2">
            <figure class="img-scale rounded mb-0" style="height: 80px; width: 80px;">
              <img
                src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-1-angle-1.jpg')}
                class="img-fluid"
                style="object-fit: cover;"
                alt="Duck Toy"
              />
            </figure>
            <figure class="img-scale rounded mb-0" style="height: 80px; width: 80px;">
              <img
                src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-1-angle-2.jpg')}
                class="img-fluid"
                style="object-fit: cover;"
                alt="Duck Toy"
              />
            </figure>
            <figure class="img-scale rounded mb-0" style="height: 80px; width: 80px;">
              <img
                src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-1-angle-3.jpg')}
                class="img-fluid"
                style="object-fit: cover;"
                alt="Duck Toy"
              />
            </figure>
          </div>
        </div>

        <!-- Details Column -->
        <div class="col">
          <span class="text-primary fw-semibold text-uppercase">Toys</span>
          <h2 class="display-6 fw-bold mt-1 mb-2">Duck Toy</h2>

          <!-- Rating -->
          <div class="d-flex align-items-center mb-3">
            <div class="text-yellow">
              <i class="ri-star-fill"></i>
              <i class="ri-star-fill"></i>
              <i class="ri-star-fill"></i>
              <i class="ri-star-fill"></i>
              <i class="ri-star-line"></i>
              <span class="text-muted ms-1">(124 reviews)</span>
            </div>
          </div>

          <!-- Description -->
          <p class="mb-3">
            Turn bath time, playtime, or anytime into a splash of fun with this Duck Toy! Specially
            designed for curious canines and playful puppies, this cheerful yellow duck is made from
            durable, pet-safe rubber that's built to withstand even the most enthusiastic chewers.
          </p>

          <!-- Price and Availability -->
          <div class="mb-3">
            <h4 class="fw-bold fs-3 mb-1">$25.00</h4>
            <span class="fw-semibold text-success text-uppercase">In Stock</span>
          </div>

          <!-- Quantity and Color Selection -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Quantity:</label>
            <input
              type="number"
              class="form-control w-auto d-inline-block ms-2"
              value="1"
              min="1"
            />
          </div>

          <div class="mb-4">
            <label class="form-label fw-semibold">Color:</label>
            <div class="d-flex gap-2 mt-1">
              <button
                class="rounded bg-yellow border border-primary"
                style="width: 32px; height: 32px;"
                title="Yellow"
              >
              </button>
              <button
                class="rounded bg-orange border"
                style="width: 32px; height: 32px;"
                title="Orange"
              >
              </button>
              <button class="rounded bg-red border" style="width: 32px; height: 32px;" title="Red">
              </button>
            </div>
          </div>

          <div class="d-flex gap-2 mb-4">
            <a href="#" class="btn btn-lg btn-primary">
              <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
            </a>
            <a href="#" class="btn btn-lg btn-outline-primary">
              <i class="ri-heart-line"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Details Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <h4 class="text-primary text-center text-uppercase fw-semibold fs-5 mb-2">Product Details</h4>
      <h3 class="display-6 fw-bold text-center mb-4">More details about the product</h3>
      <!-- Nav Tabs -->
      <ul class="nav nav-underline mb-4" id="productTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button
            class="nav-link nav-link-lg active"
            id="details-tab"
            data-bs-toggle="tab"
            data-bs-target="#details"
            type="button"
            role="tab"
            aria-controls="details"
            aria-selected="true"
          >
            Details
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link nav-link-lg"
            id="reviews-tab"
            data-bs-toggle="tab"
            data-bs-target="#reviews"
            type="button"
            role="tab"
            aria-controls="reviews"
            aria-selected="false"
          >
            Reviews
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link nav-link-lg"
            id="shipping-tab"
            data-bs-toggle="tab"
            data-bs-target="#shipping"
            type="button"
            role="tab"
            aria-controls="shipping"
            aria-selected="false"
          >
            Shipping & Returns
          </button>
        </li>
      </ul>

      <!-- Tab Content -->
      <div class="tab-content" id="productTabContent">
        <!-- Details Tab -->
        <div
          class="tab-pane fade show active"
          id="details"
          role="tabpanel"
          aria-labelledby="details-tab"
        >
          <p class="mb-3">
            Our Duck Toy is crafted from high-quality, non-toxic rubber, making it safe and fun for
            your pup. Its squeaky feature and floating ability offer versatile entertainment indoors
            and outdoors.
          </p>
          <ul>
            <li>Material: Durable rubber</li>
            <li>Size: 6" x 3" x 3"</li>
            <li>Recommended for: Small to medium-sized dogs</li>
          </ul>
        </div>

        <!-- Reviews Tab -->
        <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
          <div class="text-yellow mb-1">
            <i class="ri-star-fill"></i>
            <i class="ri-star-fill"></i>
            <i class="ri-star-fill"></i>
            <i class="ri-star-fill"></i>
            <i class="ri-star-half-line"></i>
          </div>
          <p class="mb-1"><strong>Jane D.</strong></p>
          <p>"My puppy is obsessed with this duck. It's been two weeks and still going strong!"</p>
          <hr />
          <div class="text-yellow mb-1">
            <i class="ri-star-fill"></i>
            <i class="ri-star-fill"></i>
            <i class="ri-star-fill"></i>
            <i class="ri-star-fill"></i>
            <i class="ri-star-line"></i>
          </div>
          <p class="mb-1"><strong>Mike R.</strong></p>
          <p>"Good quality. Squeaker is loud, which my dog loves but not my ears ðŸ˜„"</p>
        </div>

        <!-- Shipping & Returns Tab -->
        <div class="tab-pane fade" id="shipping" role="tabpanel" aria-labelledby="shipping-tab">
          <p>
            We offer fast and reliable shipping across the country. Orders are processed within 1â€“2
            business days.
          </p>
          <ul>
            <li><strong>Standard Shipping:</strong> 3â€“5 business days</li>
            <li><strong>Express Shipping:</strong> 1â€“2 business days</li>
            <li><strong>Easy Returns:</strong> 30-day money-back guarantee</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Similar Items Section -->
  <section class="bg-body py-5">
    <div class="container">
      <h4 class="text-primary text-center text-uppercase fw-semibold fs-5 mb-2">
        Similar Products
      </h4>
      <h3 class="display-6 fw-bold text-center mb-4">Explore similar items</h3>
      <div class="row g-4 mb-4">
        <!-- Product 1 -->
        <div class="col-sm-6 col-xl-3">
          <div class="card border h-100 p-0">
            <figure class="img-scale rounded-top-3 mb-0">
              <img
                src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-2.jpg')}
                class="card-img-top rounded-0"
                alt="Product Image"
              />
            </figure>
            <div class="card-body p-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <h5 class="card-title mb-0">Rubber Toy</h5>
                <span class="badge text-primary-emphasis bg-secondary-subtle border">Toys</span>
              </div>
              <p class="card-text text-muted fs-5 mb-2">$15.00</p>
              <div class="d-flex gap-2">
                <a href="#" class="btn btn-lg btn-primary w-100">
                  <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                </a>
                <a href="#" class="btn btn-lg btn-outline-primary">
                  <i class="ri-heart-line"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <!-- Product 2 -->
        <div class="col-sm-6 col-xl-3">
          <div class="card border h-100 p-0">
            <figure class="img-scale rounded-top-3 mb-0">
              <img
                src={getAssetPrefix('/assets/img/breederspot-images/dog-collar-3.jpg')}
                class="card-img-top rounded-0"
                alt="Product Image"
              />
            </figure>
            <div class="card-body p-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <h5 class="card-title mb-0">Dog Collar</h5>
                <span class="badge text-primary-emphasis bg-secondary-subtle border">Collars</span>
              </div>
              <p class="card-text text-muted fs-5 mb-2">$30.00</p>
              <div class="d-flex gap-2">
                <a href="#" class="btn btn-lg btn-primary w-100">
                  <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                </a>
                <a href="#" class="btn btn-lg btn-outline-primary">
                  <i class="ri-heart-line"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <!-- Product 3 -->
        <div class="col-sm-6 col-xl-3">
          <div class="card border h-100 p-0">
            <figure class="img-scale rounded-top-3 mb-0">
              <img
                src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-3.jpg')}
                class="card-img-top rounded-0"
                alt="Product Image"
              />
            </figure>
            <div class="card-body p-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <h5 class="card-title mb-0">Rubber Toy</h5>
                <span class="badge text-primary-emphasis bg-secondary-subtle border">Toys</span>
              </div>
              <p class="card-text text-muted fs-5 mb-2">$35.00</p>
              <div class="d-flex gap-2">
                <a href="#" class="btn btn-lg btn-primary w-100">
                  <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                </a>
                <a href="#" class="btn btn-lg btn-outline-primary">
                  <i class="ri-heart-line"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <!-- Product 4 -->
        <div class="col-sm-6 col-xl-3">
          <div class="card border h-100 p-0">
            <figure class="img-scale rounded-top-3 mb-0">
              <img
                src={getAssetPrefix('/assets/img/breederspot-images/dog-collar-1.jpg')}
                class="card-img-top rounded-0"
                alt="Product Image"
              />
            </figure>
            <div class="card-body p-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <h5 class="card-title mb-0">Dog Collar</h5>
                <span class="badge text-primary-emphasis bg-secondary-subtle border">Collars</span>
              </div>
              <p class="card-text text-muted fs-5 mb-2">$10.00</p>
              <div class="d-flex gap-2">
                <a href="#" class="btn btn-lg btn-primary w-100">
                  <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                </a>
                <a href="#" class="btn btn-lg btn-outline-primary">
                  <i class="ri-heart-line"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="text-end">
        <button class="btn btn-lg btn-outline-primary"
          >See all products <i class="ri-arrow-right-line"></i></button
        >
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/poodle-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h5 class="display-6 fw-bold mb-2">Don't Miss Our Next Litter</h5>
          <p class="fs-5 mb-4">
            Be the first to know about upcoming poodle puppies, early adoption openings, and expert
            puppy care tips.
          </p>
          <!-- Email Form -->
          <form class="row g-2 justify-content-center">
            <div class="col-sm-9">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Enter your email"
                required=""
              />
              <div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div><div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div>
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-primary btn-lg w-100">Notify Me</button>
            </div>
          </form>
          <!-- Small note -->
          <p class="text-light mt-3 mb-0">We send only what mattersâ€”no spam, just poodles.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
