---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Home" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Hero Section -->
  <section class="text-bg-dark">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6 col-lg-5 offset-lg-1 order-2 order-md-1 px-3 pe-lg-5 py-5 my-auto">
          <h1 class="display-5 fw-bold mb-3" data-aos="fade-up" data-aos-duration="1200">
            Ethical. Loving. <em class="text-primary">Trusted.</em>
          </h1>
          <h2 class="fs-4 mb-3" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1200">
            Raising German Shepherds With Heart and Purpose.
          </h2>
          <p class="fs-5 mb-4" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1200">
            We are dedicated to the responsible breeding of German Shepherds, focusing on health,
            stability, and the true spirit of the breed—raising companions you can trust for life.
          </p>
          <div
            class="d-flex flex-wrap gap-2 mb-2"
            data-aos="fade-in"
            data-aos-delay="300"
            data-aos-duration="1200"
          >
            <button class="btn btn-lg btn-primary">
              View Puppies<i class="ri-arrow-right-line ms-1"></i>
            </button>
            <button class="btn btn-lg btn-outline-light"> Our Philosophy </button>
          </div>
        </div>
        <div class="col-md-6 order-1 order-md-2 p-0" style="min-height: 100%;">
          <img
            src={getAssetPrefix('/assets/img/breederspot-images/german-shepherd-1.jpg')}
            style="width: 100%; height: 100%; object-fit: cover;"
            alt="Puppy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="text-bg-gray-800 py-5">
    <div class="container text-center">
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <h2
            class="bg-gray-700 text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
            style="letter-spacing: 0.05rem;"
            data-aos="fade-in"
            data-aos-duration="1200"
          >
            About Us
          </h2>

          <h3
            class="display-6 fw-semibold mb-4"
            data-aos="fade-up"
            data-aos-delay="100"
            data-aos-duration="1200"
          >
            What makes us different?
          </h3>
          <p class="lead mb-4" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1200">
            We believe every puppy deserves a loving start and a forever home. Our approach to dog
            breeding is guided by compassion, responsibility, and a deep respect for the animals in
            our care. With a focus on health, temperament, and ethical practices, we raise each
            puppy in a nurturing, family-oriented environment where socialization and wellbeing come
            first.
          </p>
          <div data-aos="fade-up" data-aos-delay="300" data-aos-duration="1200">
            <a href="#" class="btn btn-lg btn-primary me-2">About Us</a>
            <a href="#" class="btn btn-lg btn-outline-light">Learn More</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Puppies Section -->
  <section class="text-bg-dark py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <div class="text-center">
            <h2
              class="bg-gray-700 text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
              style="letter-spacing: 0.05rem;"
              data-aos="fade-in"
              data-aos-duration="1200"
            >
              Featured Pets
            </h2>
            <h3
              class="display-6 fw-semibold mb-4"
              data-aos="fade-up"
              data-aos-delay="100"
              data-aos-duration="1200"
            >
              Puppies available for adoption
            </h3>
          </div>
          <!-- Puppies' Cards -->
          <div class="row g-4 mb-4">
            <!-- Pet 1 -->
            <div class="col-md-4" data-aos="flip-up" data-aos-duration="1200">
              <div class="card bg-gray-800 text-light h-100 position-relative p-0">
                <figure class="img-scale rounded-top-3 mb-0">
                  <a href={getPathPrefix('/theme/5/puppy-details')}
                    ><img
                      src={getAssetPrefix(
                        '/assets/img/breederspot-images/german-shepherd-puppy-1.jpg'
                      )}
                      class="card-img-top rounded-0"
                      style="max-height: 300px; object-fit: cover;"
                      alt="Pet Image"
                    /></a
                  >
                </figure>
                <span
                  class="badge bg-gray-800 text-light rounded shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-2"
                >
                  <i class="ri-women-line"></i>
                </span>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a
                        href={getPathPrefix('/theme/5/puppy-details')}
                        class="text-decoration-none text-light">Olive</a
                      >
                    </h5>
                    <p class="fs-4 fw-semibold mb-0">$1200</p>
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge text-bg-dark fs-6">German Shepherd</span>
                    <span class="badge text-bg-dark fs-6">4 Weeks</span>
                  </div>
                  <p class="card-text">
                    A curious little explorer who loves sniffing out new adventures and snuggling
                    after.
                  </p>
                </div>
                <a
                  href={getPathPrefix('/theme/5/puppy-details')}
                  class="btn btn-lg btn-primary rounded-top-0 w-100"
                >
                  More Info <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>
            <!-- Pet 2 -->
            <div class="col-md-4" data-aos="flip-up" data-aos-delay="100" data-aos-duration="1200">
              <div class="card bg-gray-800 text-light h-100 position-relative p-0">
                <figure class="img-scale rounded-top-3 mb-0">
                  <a href={getPathPrefix('/theme/5/puppy-details')}
                    ><img
                      src={getAssetPrefix(
                        '/assets/img/breederspot-images/german-shepherd-puppy-2.jpg'
                      )}
                      class="card-img-top rounded-0"
                      style="max-height: 300px; object-fit: cover;"
                      alt="Pet Image"
                    /></a
                  >
                </figure>
                <span
                  class="badge bg-gray-800 text-light rounded shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-2"
                >
                  <i class="ri-men-line"></i>
                </span>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a
                        href={getPathPrefix('/theme/5/puppy-details')}
                        class="text-decoration-none text-light">Finn</a
                      >
                    </h5>
                    <p class="fs-4 fw-semibold mb-0">$1400</p>
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge text-bg-dark fs-6">German Shepherd</span>
                    <span class="badge text-bg-dark fs-6">4 Weeks</span>
                  </div>
                  <p class="card-text">
                    Bright-eyed and always eager to play, Finn is a bundle of energy with a gentle
                    heart.
                  </p>
                </div>
                <a
                  href={getPathPrefix('/theme/5/puppy-details')}
                  class="btn btn-lg btn-primary rounded-top-0 w-100"
                >
                  More Info <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>
            <!-- Pet 3 -->
            <div class="col-md-4" data-aos="flip-up" data-aos-delay="200" data-aos-duration="1200">
              <div class="card bg-gray-800 text-light h-100 position-relative p-0">
                <figure class="img-scale rounded-top-3 mb-0">
                  <a href={getPathPrefix('/theme/5/puppy-details')}
                    ><img
                      src={getAssetPrefix(
                        '/assets/img/breederspot-images/german-shepherd-puppy-3.jpg'
                      )}
                      class="card-img-top rounded-0"
                      style="max-height: 300px; object-fit: cover;"
                      alt="Pet Image"
                    /></a
                  >
                </figure>
                <span
                  class="badge bg-gray-800 text-light rounded shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-2"
                >
                  <i class="ri-women-line"></i>
                </span>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a
                        href={getPathPrefix('/theme/5/puppy-details')}
                        class="text-decoration-none text-light">Luna</a
                      >
                    </h5>
                    <p class="fs-4 fw-semibold mb-0">$1200</p>
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge text-bg-dark fs-6">German Shepherd</span>
                    <span class="badge text-bg-dark fs-6">4 Weeks</span>
                  </div>
                  <p class="card-text">
                    Graceful and calm, Luna adores quiet moments and has a naturally nurturing vibe.
                  </p>
                </div>
                <a
                  href={getPathPrefix('/theme/5/puppy-details')}
                  class="btn btn-lg btn-primary rounded-top-0 w-100"
                >
                  More Info <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>
          </div>
          <div class="text-center" data-aos="fade-up" data-aos-delay="300" data-aos-duration="1200">
            <a href="#" class="btn btn-lg btn-outline-light text-decoration-none">
              View All Puppies <i class="ri-arrow-right-line"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Litters Section -->
  <section class="text-bg-gray-800 py-5">
    <div class="container">
      <div class="text-center">
        <h2
          class="bg-gray-700 text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
          style="letter-spacing: 0.05rem;"
          data-aos="fade-in"
          data-aos-duration="1200"
        >
          Upcoming Litters
        </h2>
        <h3
          class="display-6 fw-semibold mb-4"
          data-aos="fade-up"
          data-aos-delay="100"
          data-aos-duration="1200"
        >
          New pups coming soon!
        </h3>
      </div>
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <div class="row g-4">
            <div class="col-md-6" data-aos="zoom-in" data-aos-duration="1200">
              <div class="card text-bg-dark card-lift h-100 p-0">
                <img
                  src={getAssetPrefix('/assets/img/breederspot-images/german-shepherd-1.jpg')}
                  class="card-img-top"
                  style="max-height: 300px; width: 100%; object-fit: cover;"
                  alt="The Willow Litter"
                />
                <div class="card-body p-4">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-3 fw-semibold mb-0">The Willow Litter</h5>
                    <p class="mb-0"><i class="ri-calendar-line me-1"></i>July 2, 2025</p>
                  </div>

                  <p class="bg-gray-700 fw-semibold d-inline-flex rounded-pill px-3 py-2 mb-2">
                    Parents: Rocky × Mini
                  </p>

                  <p class="mb-2">
                    Our next litter will be confident, affectionate, and eager to learn — perfect
                    for families and first-time shepherd owners alike.
                  </p>
                  <a href="#" class="btn btn-lg btn-primary">
                    Join Waitlist <i class="ri-arrow-right-line align-middle ms-1"></i>
                  </a>
                </div>
              </div>
            </div>
            <div class="col-md-6" data-aos="zoom-in" data-aos-delay="100" data-aos-duration="1200">
              <div class="card text-bg-dark card-lift h-100 p-0">
                <img
                  src={getAssetPrefix('/assets/img/breederspot-images/german-shepherd-1.jpg')}
                  class="card-img-top"
                  style="max-height: 300px; width: 100%; object-fit: cover;"
                  alt="The Willow Litter"
                />
                <div class="card-body p-4">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-3 fw-semibold mb-0">The Maple Litter</h5>
                    <p class="mb-0"><i class="ri-calendar-line me-1"></i>July 8, 2025</p>
                  </div>

                  <p class="bg-gray-700 fw-semibold d-inline-flex rounded-pill px-3 py-2 mb-2">
                    Parents: Caesar × Angel
                  </p>

                  <p class="mb-2">
                    Bred for sound temperament and strong character, our upcoming puppies will make
                    loving, trainable additions to the right home.
                  </p>
                  <a href="#" class="btn btn-lg btn-primary">
                    Join Waitlist <i class="ri-arrow-right-line align-middle ms-1"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="text-bg-dark py-5">
    <div class="container">
      <div class="text-center">
        <h2
          class="bg-gray-700 text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
          style="letter-spacing: 0.05rem;"
          data-aos="fade-up"
          data-aos-duration="1200"
        >
          Process
        </h2>
        <h3
          class="display-6 fw-semibold mb-4"
          data-aos="fade-up"
          data-aos-delay="100"
          data-aos-duration="1200"
        >
          Your journey to puppy parenthood
        </h3>
      </div>
      <div class="row g-4">
        <div class="col-sm-6 col-lg-3" data-aos="flip-up" data-aos-duration="1200">
          <div class="card text-bg-gray-800 card-lift h-100 p-4">
            <div class="card-body">
              <span class="display-5 fw-semibold text-primary">01.</span>
              <p class="fs-4 fw-semibold mb-2">Application</p>
              <p class="mb-0">
                Start by filling out our quick form so we can learn more about you and match you
                with the right puppy companion for life.
              </p>
            </div>
          </div>
        </div>
        <div
          class="col-sm-6 col-lg-3"
          data-aos="flip-up"
          data-aos-delay="100"
          data-aos-duration="1200"
        >
          <div class="card text-bg-gray-800 card-lift h-100 p-4">
            <div class="card-body">
              <span class="display-5 fw-semibold text-primary">02.</span>
              <p class="fs-4 fw-semibold mb-2">Approval</p>
              <p class="mb-0">
                We'll review your application and reach out for a short conversation to ensure our
                puppies go to loving and cherishing homes.
              </p>
            </div>
          </div>
        </div>
        <div
          class="col-sm-6 col-lg-3"
          data-aos="flip-up"
          data-aos-delay="200"
          data-aos-duration="1200"
        >
          <div class="card text-bg-gray-800 card-lift h-100 p-4">
            <div class="card-body">
              <span class="display-5 fw-semibold text-primary">03.</span>
              <p class="fs-4 fw-semibold mb-2">Waitlist</p>
              <p class="mb-0">
                Once approved, you'll join the waitlist for upcoming litters. We'll always keep you
                updated with litter updates and announcements.
              </p>
            </div>
          </div>
        </div>
        <div
          class="col-sm-6 col-lg-3"
          data-aos="flip-up"
          data-aos-delay="300"
          data-aos-duration="1200"
        >
          <div class="card text-bg-gray-800 card-lift h-100 p-4">
            <div class="card-body">
              <span class="display-5 fw-semibold text-primary">04.</span>
              <p class="fs-4 fw-semibold mb-2">Homecoming</p>
              <p class="mb-0">
                When your puppy is ready, you'll be invited to meet them. After final checks are
                done, you'll bring home a happy companion!
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="text-bg-dark pb-5">
    <div class="container">
      <div class="text-center">
        <h2
          class="bg-gray-700 text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
          style="letter-spacing: 0.05rem;"
          data-aos="fade-up"
          data-aos-duration="1200"
        >
          Testimonials
        </h2>
        <h3
          class="display-6 fw-semibold mb-4"
          data-aos="fade-up"
          data-aos-delay="100"
          data-aos-duration="1200"
        >
          What people are saying about us?
        </h3>
      </div>
      <div class="row g-4">
        <div class="col-md-6">
          <div
            class="card text-bg-gray-800 card-lift h-100"
            data-aos="flip-up"
            data-aos-duration="1200"
          >
            <div class="card-body">
              <i class="ri-double-quotes-l text-primary fs-1 mb-0"></i>
              <p class="mb-3">
                "From the very first call to bringing our puppy home, the experience was seamless
                and full of care. It was clear these breeders truly love what they do. Our little
                Rosie came home healthy and happy—we truly couldn't be more grateful!"
              </p>
              <div class="d-flex align-items-center mt-auto">
                <img
                  src={getAssetPrefix('/assets/img/avatars/avatar1.jpg')}
                  alt="Avatar"
                  class="rounded-circle me-3"
                  width="64"
                  height="64"
                />
                <div>
                  <h6 class="fw-semibold fs-5 mb-0">Jane Smith</h6>
                  <p class="mb-0">Austin, TX</p>
                  <div>
                    <i class="ri-star-fill text-yellow"></i>
                    <i class="ri-star-fill text-yellow"></i>
                    <i class="ri-star-fill text-yellow"></i>
                    <i class="ri-star-fill text-yellow"></i>
                    <i class="ri-star-fill text-yellow"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div
            class="card text-bg-gray-800 card-lift h-100"
            data-aos="flip-up"
            data-aos-delay="100"
            data-aos-duration="1200"
          >
            <div class="card-body">
              <i class="ri-double-quotes-l text-primary fs-1 mb-0"></i>
              <p class="mb-3">
                "From the moment we reached out, we felt completely supported. Every question we had
                was answered with patience. Our puppy arrived healthy, playful, and clearly
                well-loved. We couldn't have asked for a sweeter addition to our family!"
              </p>
              <div class="d-flex align-items-center mt-auto">
                <img
                  src={getAssetPrefix('/assets/img/avatars/avatar7.jpg')}
                  alt="Avatar"
                  class="rounded-circle me-3"
                  width="64"
                  height="64"
                />
                <div>
                  <h6 class="fw-semibold fs-5 mb-0">Nguyen Minh</h6>
                  <p class="mb-0">San Diego, CA</p>
                  <div>
                    <i class="ri-star-fill text-yellow"></i>
                    <i class="ri-star-fill text-yellow"></i>
                    <i class="ri-star-fill text-yellow"></i>
                    <i class="ri-star-fill text-yellow"></i>
                    <i class="ri-star-half-fill text-yellow"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Visit Us Section -->
  <section class="text-bg-dark pb-5">
    <div class="container">
      <div class="card text-bg-primary p-0 p-md-3" data-aos="fade-up" data-aos-duration="1200">
        <div class="card-body p-3">
          <div class="row align-items-center g-4">
            <div class="col-lg-3 text-center">
              <i class="ri-map-pin-line text-yellow fs-2"></i>
              <p class="text-uppercase mb-0">Visit Us in</p>
              <p class="fw-semibold fs-5 mb-0">Austin, TX</p>
            </div>
            <div class="col-lg-3 fs-5">
              <div class="mb-2">
                <i class="ri-phone-fill text-yellow me-2"></i>
                <a href="tel:+12345678901" class="text-light text-decoration-none text-break"
                  >+1 (234) 567-8901</a
                >
              </div>
              <div>
                <address class="mb-0">
                  <i class="ri-map-pin-fill text-yellow me-2"></i>
                  123 Main Street, Austin, TX
                </address>
              </div>
            </div>
            <div class="col-lg-6">
              <p class="lead mb-0">
                Visit us in Austin to see where our pups are raised and meet the newest members of
                your family.
                <strong>Schedule your visit today — tails are already wagging!</strong>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/german-shepherd-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-75"></div>
    <!-- Content -->
    <div
      class="position-relative d-flex flex-column justify-content-center h-100 px-3"
      data-aos="fade-in"
      data-aos-delay="100"
      data-aos-duration="1200"
    >
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h5 class="display-6 fw-semibold mb-2">Stay connected with the pack</h5>
          <p class="fs-5 mb-4">
            Subscribe to our newsletter for updates on upcoming litters, training tips, and stories
            from our shepherd family — straight to your inbox.
          </p>
          <!-- Email Form -->
          <form class="row g-2 justify-content-center">
            <div class="col-sm-9">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Enter your email"
                required=""
              />
              <div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div>
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-primary btn-lg w-100">Notify Me</button>
            </div>
          </form>
          <!-- Small note -->
          <p class="mt-3 mb-0">We send only what matters. No spam, ever.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
