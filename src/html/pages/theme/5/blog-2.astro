---
import Head from '../../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/theme/5/home">
              <img
                src="/dist/assets/img/breederspot-images/logo.svg"
                alt="Logo"
                class="me-2 mt-1"
                style="height: 28px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/theme/5/home">
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 28px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul
                  class="navbar-nav flex-grow-1 pe-3 justify-content-start justify-content-lg-center"
                >
                  <!-- Home -->
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/theme/5/home">Home</a>
                  </li>

                  <!-- About Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="aboutDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      About
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                      <li><a class="dropdown-item" href="/theme/5/about">About</a></li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/breeding-philosophy"
                          >Breeding Philosophy</a
                        >
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/testimonials">Testimonials</a>
                      </li>
                    </ul>
                  </li>

                  <!-- Explore Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="exploreDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Explore
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="exploreDropdown">
                      <li><a class="dropdown-item" href="/theme/5/puppies">Puppies</a></li>
                      <li><a class="dropdown-item" href="/theme/5/gallery">Gallery</a></li>
                      <li><a class="dropdown-item" href="/theme/5/shop">Shop</a></li>
                    </ul>
                  </li>

                  <!-- Blog Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="blogDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Blog
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="blogDropdown">
                      <li>
                        <a class="dropdown-item" href="/theme/5/blog-1">Blog – No Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item active" href="/theme/5/blog-2"
                          >Blog – Left Sidebar</a
                        >
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/blog-3">Blog – Right Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/post-1">Blog Post – No Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/post-2">Blog Post – Left Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/post-3">Blog Post – Right Sidebar</a
                        >
                      </li>
                    </ul>
                  </li>

                  <!-- FAQs -->
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/5/faq">FAQs</a>
                  </li>

                  <!-- Contact -->
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/5/contact">Contact</a>
                  </li>
                </ul>

                <!-- Bottom Section -->
                <div class="d-block d-lg-none mt-4">
                  <a href="tel:+12345678901" class="btn btn-outline-primary rounded w-100 mb-2">
                    <i class="ri-phone-fill me-2"></i>Book Consultation
                  </a>
                  <a class="btn btn-primary rounded w-100" href="#"
                    ><i class="ri-sparkling-2-fill me-2"></i> Get Started Now</a
                  >
                </div>
              </div>
            </div>

            <div class="d-none d-lg-flex align-items-center gap-3">
              <div class="text-start">
                <small class="text-gray-500 d-block">Book Consultation</small>
                <a href="tel:+12345678901" class="text-decoration-none fw-medium">
                  +1 (234) 567-8901
                </a>
              </div>

              <a class="btn btn-lg btn-primary rounded" href="#">Get Started</a>
            </div>
          </div>
        </nav>

        <!-- Blogs Section -->
        <section class="text-bg-dark py-5">
          <div class="container">
            <div class="text-center">
              <h1
                class="bg-gray-700 text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
                style="letter-spacing: 0.05rem;"
              >
                Blogs
              </h1>
              <h2 class="display-6 fw-semibold mb-4">Read our latest articles and tips</h2>
            </div>
            <div class="row gy-4">
              <!-- Sidebar Column -->
              <div class="col-lg-3">
                <div class="sticky-top z-1" style="top: 80px;">
                  <!-- Search Card -->
                  <div class="card text-bg-gray-800 p-3 mb-4">
                    <div class="card-body">
                      <h5 class="card-title mb-3">
                        <i class="ri-search-line me-2"></i>Search Blog Posts
                      </h5>
                      <form>
                        <div class="mb-3">
                          <input
                            type="text"
                            class="form-control form-control-lg"
                            placeholder="Search topics, titles..."
                          />
                        </div>
                        <button type="submit" class="btn btn-lg btn-outline-light w-100"
                          >Search</button
                        >
                      </form>
                    </div>
                  </div>
                  <!-- Tags Card -->
                  <div class="card text-bg-gray-800 p-3 mb-4">
                    <div class="card-body">
                      <h5 class="card-title mb-3">
                        <i class="ri-price-tag-3-line me-2"></i>Browse by Tags
                      </h5>
                      <div class="d-flex flex-wrap gap-2">
                        <a href="#" class="badge bg-dark text-decoration-none px-3 py-2">Health</a>
                        <a href="#" class="badge bg-dark text-decoration-none px-3 py-2">Ethics</a>
                        <a href="#" class="badge bg-dark text-decoration-none px-3 py-2">Value</a>
                        <a href="#" class="badge bg-dark text-decoration-none px-3 py-2">Breeders</a
                        >
                        <a href="#" class="badge bg-dark text-decoration-none px-3 py-2">Process</a>
                        <a href="#" class="badge bg-dark text-decoration-none px-3 py-2">Puppies</a>
                      </div>
                    </div>
                  </div>

                  <!-- Recent Posts Card -->
                  <div class="card text-bg-gray-800 p-3">
                    <div class="card-body">
                      <h5 class="card-title mb-3">
                        <i class="ri-history-line me-2"></i>Recent Posts
                      </h5>
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item text-bg-gray-800">
                          <a
                            href="#"
                            class="text-decoration-none link-light fw-semibold d-block mb-1"
                          >
                            Why Health Testing Matters in Dog Breeding
                          </a>
                          <p class="mb-2">
                            12 Jan 2025 • <span class="badge bg-dark">Health</span>
                          </p>
                        </li>
                        <li class="list-group-item text-bg-gray-800">
                          <a
                            href="#"
                            class="text-decoration-none link-light fw-semibold d-block mb-1"
                          >
                            Puppy Mills vs. Ethical Breeders: Learn the Difference
                          </a>
                          <p class="mb-2">
                            20 Feb 2025 • <span class="badge bg-dark">Ethics</span>
                          </p>
                        </li>
                        <li class="list-group-item text-bg-gray-800">
                          <a
                            href="#"
                            class="text-decoration-none link-light fw-semibold d-block mb-1"
                          >
                            The True Cost of a Well-Bred Puppy
                          </a>
                          <p class="mb-2">
                            6 Jan 2025 • <span class="badge bg-dark">Value</span>
                          </p>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-9">
                <div class="card text-bg-gray-800 p-0 mb-4">
                  <img
                    src="/dist/assets/img/breederspot-images/german-shepherd-1.jpg"
                    class="card-img-top"
                    style="max-height: 400px; object-fit: cover;"
                    alt="blog image"
                  />
                  <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                      <span class="badge bg-dark fs-6">Health</span>
                      <span>12 Jan 2025</span>
                    </div>
                    <h5 class="card-title fs-4 mb-2">
                      <a href="#" class="text-light text-decoration-none">
                        Why Health Testing Matters in Dog Breeding
                      </a>
                    </h5>
                    <p class="mb-2">
                      Explaining the importance of genetic and health screenings in ethical breeding
                      practices.
                    </p>
                    <a href="#" class="text-decoration-none link-light mb-0"
                      >Read more <i class="ri-arrow-right-line"></i></a
                    >
                  </div>
                </div>
                <div class="card text-bg-gray-800 p-0 mb-4">
                  <img
                    src="/dist/assets/img/breederspot-images/german-shepherd-1.jpg"
                    class="card-img-top"
                    style="max-height: 400px; object-fit: cover;"
                    alt="blog image"
                  />
                  <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                      <span class="badge bg-dark fs-6">Ethics</span>
                      <span>20 Feb 2025</span>
                    </div>
                    <h5 class="card-title fs-4 mb-2">
                      <a href="#" class="text-light text-decoration-none">
                        Puppy Mills vs. Ethical Breeders: Learn the Difference
                      </a>
                    </h5>
                    <p class="mb-2">
                      Comparing unethical breeding operations to responsible ones, with clear
                      distinctions.
                    </p>
                    <a href="#" class="text-decoration-none link-light mb-0"
                      >Read more <i class="ri-arrow-right-line"></i></a
                    >
                  </div>
                </div>
                <div class="card text-bg-gray-800 p-0">
                  <img
                    src="/dist/assets/img/breederspot-images/german-shepherd-1.jpg"
                    class="card-img-top"
                    style="max-height: 400px; object-fit: cover;"
                    alt="blog image"
                  />
                  <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                      <span class="badge bg-dark fs-6">Value</span>
                      <span>6 Jan 2025</span>
                    </div>
                    <h5 class="card-title fs-4 mb-2">
                      <a href="#" class="text-light text-decoration-none">
                        The True Cost of a Well-Bred Puppy
                      </a>
                    </h5>
                    <p class="mb-2">
                      Why puppies from ethical breeders cost more and what goes into responsible
                      pricing.
                    </p>
                    <a href="#" class="text-decoration-none link-light mb-0"
                      >Read more <i class="ri-arrow-right-line"></i></a
                    >
                  </div>
                </div>

                <!-- Pagination -->
                <nav class="mt-5 d-flex justify-content-center" aria-label="Pagination">
                  <ul class="pagination pagination-lg z-1">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </section>

        <!-- CTA Section -->
        <section
          class="position-relative text-light text-center"
          style="background-image: url('/dist/assets/img/breederspot-images/german-shepherd-1.jpg'); background-size: cover; background-position: center; height: 500px;"
        >
          <!-- Overlay -->
          <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-75"></div>
          <!-- Content -->
          <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
            <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <h5 class="display-6 fw-semibold mb-2">Stay connected with the pack</h5>
                <p class="fs-5 mb-4">
                  Subscribe to our newsletter for updates on upcoming litters, training tips, and
                  stories from our shepherd family — straight to your inbox.
                </p>
                <!-- Email Form -->
                <form class="row g-2 justify-content-center">
                  <div class="col-sm-9">
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      placeholder="Enter your email"
                      required=""
                    />
                    <div
                      data-lastpass-icon-root=""
                      style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
                    >
                    </div><div
                      data-lastpass-icon-root=""
                      style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
                    >
                    </div>
                  </div>
                  <div class="col-sm-3">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Notify Me</button>
                  </div>
                </form>
                <!-- Small note -->
                <p class="mt-3 mb-0">We send only what matters. No spam, ever.</p>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="text-bg-dark">
          <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-5 px-3 px-lg-5 pt-5 pb-4">
              <div class="col mb-3">
                <a
                  href="/"
                  class="d-inline-flex align-items-center text-decoration-none mb-2"
                  aria-label="Your Company Logo"
                >
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Your Company Logo"
                    style="height: 28px;"
                    class="me-2"
                  />
                </a>
                <p class="mb-3">
                  Over 200 happy families have found their perfect pup with us — yours could be
                  next.
                </p>
                <button class="btn btn-lg btn-outline-light mb-2">Get in touch</button>
              </div>

              <div class="col mb-3"></div>

              <div class="col mb-3">
                <nav aria-label="Quick Links">
                  <h5 class="mb-3">Quick Links</h5>
                  <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                      <a href="/theme/5/home" class="nav-link text-light p-0">Home</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/about" class="nav-link text-light p-0">About</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/puppies" class="nav-link text-light p-0">Puppies</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/shop" class="nav-link text-light p-0">Shop</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/faq" class="nav-link text-light p-0">FAQs</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/blog" class="nav-link text-light p-0">Blog</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/contact" class="nav-link text-light p-0">Contact</a>
                    </li>
                  </ul>
                </nav>
              </div>

              <div class="col mb-3">
                <nav aria-label="Legal">
                  <h5 class="mb-3">Legal</h5>
                  <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link text-light p-0">Terms of Use</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link text-light p-0">Privacy Policy</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link text-light p-0">Cookies Policy</a>
                    </li>
                  </ul>
                </nav>
              </div>

              <div class="col mb-3">
                <h5 class="mb-3">Contact</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <i class="ri-phone-fill text-primary me-2"></i>
                    <a href="tel:+12345678901" class="text-decoration-none text-light text-break"
                      >+1 (234) 567-8901</a
                    >
                  </li>
                  <li class="nav-item mb-2">
                    <i class="ri-mail-fill text-primary me-2"></i>
                    <a
                      href="mailto:hello@email.com"
                      class="text-decoration-none text-light text-break">hello@email.com</a
                    >
                  </li>
                  <li class="nav-item mb-2">
                    <address class="text-light">
                      <i class="ri-map-pin-fill text-primary me-2"></i>
                      123 Main Street, Austin, TX
                    </address>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="text-center bg-gray-800 py-4">
            <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
