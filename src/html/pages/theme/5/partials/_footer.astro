---
import { getPathPrefix } from '../../../../../utils/path.js'
import Logo from './_topbar/_logo.astro'
---

<!-- Footer -->
<footer class="text-bg-dark pt-5">
  <div class="container">
    <div class="row gy-4">
      <!-- Logo and Contact Info -->
      <div class="col-lg-5 pe-lg-5">
        <Logo />
