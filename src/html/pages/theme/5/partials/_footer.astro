        <form class="mb-3 mb-lg-0">
          <div class="mb-3">
            <input
              type="email"
              class="form-control form-control-lg"
              placeholder="Enter your email"
              required=""
            />
          </div>
          <button
            type="submit"
            class="btn btn-primary w-100 d-flex align-items-center justify-content-center"
          >
            <i class="ri-send-plane-fill me-2"></i>Subscribe
          </button>
        </form>
      </div>

      <!-- Navigation Links -->
      <div class="col-lg-4">
        <div class="row">
          <div class="col-6">
            <h5 class="fs-5 mb-3">Quick Links</h5>
            <ul class="list-unstyled">
              <li>
                <a
                  href={getPathPrefix('/theme/5/home')}
                  class="text-light text-decoration-none d-block mb-2">Home</a
                >
              </li>
              <li>
                <a
                  href={getPathPrefix('/theme/5/about')}
