import Scripts from '../../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/theme/5/home">
              <img
                src="/dist/assets/img/breederspot-images/logo.svg"
                alt="Logo"
                class="me-2 mt-1"
                style="height: 28px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/theme/5/home">
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 28px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul
                  class="navbar-nav flex-grow-1 pe-3 justify-content-start justify-content-lg-center"
                >
                  <!-- Home -->
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/theme/5/home">Home</a>
                  </li>

                  <!-- About Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="aboutDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      About
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                      <li><a class="dropdown-item" href="/theme/5/about">About</a></li>
                      <li>
                        <a class="dropdown-item active" href="/theme/5/breeding-philosophy"
                          >Breeding Philosophy</a
                        >
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/testimonials">Testimonials</a>
                      </li>
                    </ul>
                  </li>

                  <!-- Explore Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="exploreDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Explore
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="exploreDropdown">
                      <li><a class="dropdown-item" href="/theme/5/puppies">Puppies</a></li>
                      <li><a class="dropdown-item" href="/theme/5/gallery">Gallery</a></li>
                      <li><a class="dropdown-item" href="/theme/5/shop">Shop</a></li>
                    </ul>
                  </li>

                  <!-- Blog Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="blogDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Blog
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="blogDropdown">
                      <li>
                        <a class="dropdown-item" href="/theme/5/blog-1">Blog – No Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/blog-2">Blog – Left Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/blog-3">Blog – Right Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/post-1">Blog Post – No Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/post-2">Blog Post – Left Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/5/post-3">Blog Post – Right Sidebar</a
                        >
                      </li>
                    </ul>
                  </li>

                  <!-- FAQs -->
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/5/faq">FAQs</a>
                  </li>

                  <!-- Contact -->
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/5/contact">Contact</a>
                  </li>
                </ul>

                <!-- Bottom Section -->
                <div class="d-block d-lg-none mt-4">
                  <a href="tel:+12345678901" class="btn btn-outline-primary rounded w-100 mb-2">
                    <i class="ri-phone-fill me-2"></i>Book Consultation
                  </a>
                  <a class="btn btn-primary rounded w-100" href="#"
                    ><i class="ri-sparkling-2-fill me-2"></i> Get Started Now</a
                  >
                </div>
              </div>
            </div>

            <div class="d-none d-lg-flex align-items-center gap-3">
              <div class="text-start">
                <small class="text-gray-500 d-block">Book Consultation</small>
                <a href="tel:+12345678901" class="text-decoration-none fw-medium">
                  +1 (234) 567-8901
                </a>
              </div>

              <a class="btn btn-lg btn-primary rounded" href="#">Get Started</a>
            </div>
          </div>
        </nav>

        <!-- Hero Section -->
        <section
          class="position-relative text-light text-center"
          style="background-image: url('/dist/assets/img/breederspot-images/german-shepherd-1.jpg'); background-size: cover; background-position: center; height: 500px;"
        >
          <!-- Overlay -->
          <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
          <!-- Content -->
          <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
            <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <h1 class="display-4 fw-semibold mb-2">Our breeding philosophy</h1>
                <p class="fs-4 mb-4">
                  We believe that ethical breeding starts with love, continues with responsibility,
                  and ends in a lifelong bond between dog and human. Our breeding practices are
                  guided by transparency, veterinary excellence, and the emotional enrichment of
                  every puppy.
                </p>
                <div class="d-flex justify-content-center flex-wrap gap-2 mb-2">
                  <button class="btn btn-lg btn-primary">
                    View Puppies<i class="ri-arrow-right-line ms-1"></i>
                  </button>
                  <button class="btn btn-lg btn-outline-light">
                    <i class="ri-information-2-line me-1"></i>Learn More
                  </button>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Cards Section -->
        <section class="text-bg-dark py-5">
          <div class="container">
            <div>
              <h2
                class="bg-gray-700 text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
                style="letter-spacing: 0.05rem;"
              >
                What Sets Us Apart
              </h2>
              <h3 class="display-6 fw-semibold mb-4">
                Our core values guide every step of the journey
              </h3>
            </div>
            <div class="row g-4">
              <div class="col-sm-6 col-lg-3">
                <div class="card card-lift text-bg-gray-800 p-4">
                  <div class="card-body">
                    <i class="ri-home-heart-fill text-primary fs-1"></i>
                    <p class="fs-4 fw-semibold mb-2">Home-Like Spaces</p>
                    <p class="mb-2">
                      Puppies are raised in warm, home-like settings—not cages—so they grow up
                      confident and social.
                    </p>
                    <a href="#" class="text-primary text-decoration-none">
                      Learn more <i class="ri-arrow-right-line"></i>
                    </a>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-lg-3">
                <div class="card card-lift text-bg-gray-800 p-4">
                  <div class="card-body">
                    <i class="ri-shield-check-fill text-primary fs-1"></i>
                    <p class="fs-4 fw-semibold mb-2">Health &amp; Safety</p>
                    <p class="mb-2">
                      Clean, climate-controlled areas maintained with veterinary-approved hygiene
                      practices.
                    </p>
                    <a href="#" class="text-primary text-decoration-none">
                      Learn more <i class="ri-arrow-right-line"></i>
                    </a>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-lg-3">
                <div class="card card-lift text-bg-gray-800 p-4">
                  <div class="card-body">
                    <i class="ri-tree-fill text-primary fs-1"></i>
                    <p class="fs-4 fw-semibold mb-2">Outdoor Play</p>
                    <p class="mb-2">
                      Secure outdoor spaces where puppies can run, play, and develop motor skills
                      through daily exercise.
                    </p>
                    <a href="#" class="text-primary text-decoration-none">
                      Learn more <i class="ri-arrow-right-line"></i>
                    </a>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-lg-3">
                <div class="card card-lift text-bg-gray-800 p-4">
                  <div class="card-body">
                    <i class="ri-user-heart-fill text-primary fs-1"></i>
                    <p class="fs-4 fw-semibold mb-2">Socialization</p>
                    <p class="mb-2">
                      Daily human interaction and sensory exposure help puppies become emotionally
                      balanced.
                    </p>
                    <a href="#" class="text-primary text-decoration-none">
                      Learn more <i class="ri-arrow-right-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Protocol Section -->
        <section class="text-bg-gray-800 py-5">
          <div class="container">
            <div class="text-center">
              <h2
                class="bg-gray-700 text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
                style="letter-spacing: 0.05rem;"
              >
                Puppy Development Protocol
              </h2>
              <h3 class="display-6 fw-semibold mb-4">
                A structured, loving approach to raise well-rounded puppies
              </h3>
            </div>
            <div class="row justify-content-center">
              <div class="col-md-6">
                <div class="d-grid gap-4">
                  <div class="card text-bg-dark card-lift h-100 p-4">
                    <div class="card-body">
                      <span class="display-5 fw-semibold text-primary">01.</span>
                      <p class="fs-4 fw-semibold mb-2">Week 0–2</p>
                      <p class="mb-0">
                        Puppies stay close to their mother, focusing on warmth, nursing, and
                        bonding. We monitor health and begin gentle handling.
                      </p>
                    </div>
                  </div>
                  <div class="card text-bg-dark card-lift h-100 p-4">
                    <div class="card-body">
                      <span class="display-5 fw-semibold text-primary">02.</span>
                      <p class="fs-4 fw-semibold mb-2">Week 3–4</p>
                      <p class="mb-0">
                        Eyes and ears open; puppies begin to walk. We introduce new textures to the
                        puppies, gentle sounds, and human interaction daily.
                      </p>
                    </div>
                  </div>
                  <div class="card text-bg-dark card-lift h-100 p-4">
                    <div class="card-body">
                      <span class="display-5 fw-semibold text-primary">03.</span>
                      <p class="fs-4 fw-semibold mb-2">Week 5–8</p>
                      <p class="mb-0">
                        Puppies explore more actively. We begin crate exposure, introduce solid
                        food, and increase socialization with people.
                      </p>
                    </div>
                  </div>
                  <div class="card text-bg-dark card-lift h-100 p-4">
                    <div class="card-body">
                      <span class="display-5 fw-semibold text-primary">04.</span>
                      <p class="fs-4 fw-semibold mb-2">Week 9+</p>
                      <p class="mb-0">
                        Puppies are ready to transition home. We offer support, resources, and
                        guidance to families for continued development.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Health Testing Section -->
        <section class="text-bg-dark py-5">
          <div class="container">
            <div class="row g-4">
              <!-- Text Column -->
              <div class="col-lg-8">
                <h2
                  class="bg-gray-700 text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
                  style="letter-spacing: 0.05rem;"
                >
                  Health Testing
                </h2>
                <h3 class="display-6 fw-semibold mb-3">Comprehensive health testing</h3>

                <p class="mb-3">
                  The health of our dogs is our top priority. Every parent dog undergoes thorough
                  genetic screening, regular veterinary checkups, and OFA/CERF certifications where
                  applicable. We ensure each puppy starts life with the strongest foundation—free
                  from hereditary conditions and nurtured through responsible, science-backed care
                  from day one.
                </p>
                <ul class="list-unstyled mb-3">
                  <li><i class="ri-check-line text-primary me-2"></i>Genetic Screening</li>
                  <li>
                    <i class="ri-check-line text-primary me-2"></i>Regular Veterinary Checkups
                  </li>
                  <li><i class="ri-check-line text-primary me-2"></i>OFA/CERF Certifications</li>
                </ul>
                <a href="#" class="btn btn-lg btn-outline-light text-decoration-none">
                  Learn More<i class="ri-arrow-right-line ms-1"></i>
                </a>
              </div>
              <!-- Image Column -->
              <div class="col-lg-4 d-flex justify-content-center">
                <figure class="img-scale rounded">
                  <img
                    src="/dist/assets/img/breederspot-images/german-shepherd-1.jpg"
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Health Testing"
                  />
                </figure>
              </div>
            </div>
          </div>
        </section>

        <!-- CTA Section -->
        <section
          class="position-relative text-light text-center"
          style="background-image: url('/dist/assets/img/breederspot-images/german-shepherd-1.jpg'); background-size: cover; background-position: center; height: 500px;"
        >
          <!-- Overlay -->
          <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-75"></div>
          <!-- Content -->
          <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
            <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <h5 class="display-6 fw-semibold mb-2">Stay connected with the pack</h5>
                <p class="fs-5 mb-4">
                  Subscribe to our newsletter for updates on upcoming litters, training tips, and
                  stories from our shepherd family — straight to your inbox.
                </p>
                <!-- Email Form -->
                <form class="row g-2 justify-content-center">
                  <div class="col-sm-9">
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      placeholder="Enter your email"
                      required=""
                    />
                    <div
                      data-lastpass-icon-root=""
                      style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
                    >
                    </div><div
                      data-lastpass-icon-root=""
                      style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
                    >
                    </div>
                  </div>
                  <div class="col-sm-3">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Notify Me</button>
                  </div>
                </form>
                <!-- Small note -->
                <p class="mt-3 mb-0">We send only what matters. No spam, ever.</p>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="text-bg-dark">
          <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-5 px-3 px-lg-5 pt-5 pb-4">
              <div class="col mb-3">
                <a
                  href="/"
                  class="d-inline-flex align-items-center text-decoration-none mb-2"
                  aria-label="Your Company Logo"
                >
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Your Company Logo"
                    style="height: 28px;"
                    class="me-2"
                  />
                </a>
                <p class="mb-3">
                  Over 200 happy families have found their perfect pup with us — yours could be
                  next.
                </p>
                <button class="btn btn-lg btn-outline-light mb-2">Get in touch</button>
              </div>

              <div class="col mb-3"></div>

              <div class="col mb-3">
                <nav aria-label="Quick Links">
                  <h5 class="mb-3">Quick Links</h5>
                  <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                      <a href="/theme/5/home" class="nav-link text-light p-0">Home</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/about" class="nav-link text-light p-0">About</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/puppies" class="nav-link text-light p-0">Puppies</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/shop" class="nav-link text-light p-0">Shop</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/faq" class="nav-link text-light p-0">FAQs</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/blog" class="nav-link text-light p-0">Blog</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/5/contact" class="nav-link text-light p-0">Contact</a>
                    </li>
                  </ul>
                </nav>
              </div>

              <div class="col mb-3">
                <nav aria-label="Legal">
                  <h5 class="mb-3">Legal</h5>
                  <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link text-light p-0">Terms of Use</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link text-light p-0">Privacy Policy</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link text-light p-0">Cookies Policy</a>
                    </li>
                  </ul>
                </nav>
              </div>

              <div class="col mb-3">
                <h5 class="mb-3">Contact</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <i class="ri-phone-fill text-primary me-2"></i>
                    <a href="tel:+12345678901" class="text-decoration-none text-light text-break"
                      >+1 (234) 567-8901</a
                    >
                  </li>
                  <li class="nav-item mb-2">
                    <i class="ri-mail-fill text-primary me-2"></i>
                    <a
                      href="mailto:hello@email.com"
                      class="text-decoration-none text-light text-break">hello@email.com</a
                    >
                  </li>
                  <li class="nav-item mb-2">
                    <address class="text-light">
                      <i class="ri-map-pin-fill text-primary me-2"></i>
                      123 Main Street, Austin, TX
                    </address>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="text-center bg-gray-800 py-4">
            <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
