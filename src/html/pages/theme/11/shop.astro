---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Shop" description="Dedicated to raising happy, healthy kittens in loving homes.">
  <!-- Shop Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row mb-4">
        <div class="col-lg-10 offset-lg-1 text-center">
          <h1 class="display-5 fw-semibold" data-aos="fade-up" data-aos-duration="1000">
            Our Shop
          </h1>
        </div>
      </div>
      <div class="row gy-4">
        <!-- Sidebar / Filter Column -->
        <div class="col-lg-3">
          <div class="sticky-top z-1" style="top: 80px;">
            <div class="card border rounded-0 p-3" data-aos="fade-right" data-aos-duration="1200">
              <div class="card-body">
                <h5 class="fs-4 fw-semibold mt-1 mb-3">Filter Products</h5>
                <!-- Category -->
                <div class="mb-3">
                  <label for="category" class="form-label">Category</label>
                  <select class="form-select form-select-lg" id="category">
                    <option value="">All Products</option>
                    <option>Apparel</option>
                    <option>Essentials</option>
                    <option>Toys</option>
                  </select>
                </div>
                <!-- Size -->
                <div class="mb-3">
                  <label for="size" class="form-label">Size</label>
                  <select class="form-select form-select-lg" id="size">
                    <option value="">All Sizes</option>
                    <option>Small</option>
                    <option>Medium</option>
                    <option>Large</option>
                  </select>
                </div>
                <!-- Age Group -->
                <div class="mb-3">
                  <label for="ageGroup" class="form-label">Age Group</label>
                  <select class="form-select form-select-lg" id="ageGroup">
                    <option value="">Any</option>
                    <option>Kitten</option>
                    <option>Adult</option>
                  </select>
                </div>
                <!-- Price Range -->
                <div class="mb-3">
                  <label class="form-label">Price Range</label>
                  <div class="d-flex gap-2">
                    <input type="number" class="form-control form-control-lg" placeholder="Min" />
                    <input type="number" class="form-control form-control-lg" placeholder="Max" />
                  </div>
                </div>
                <!-- Sort By -->
                <div class="mb-3">
                  <label for="sortBy" class="form-label">Sort By</label>
                  <select class="form-select form-select-lg" id="sortBy">
                    <option value="default">Default</option>
                    <option value="newest">Newest First</option>
                    <option value="priceLowHigh">Price: Low to High</option>
                    <option value="priceHighLow">Price: High to Low</option>
                  </select>
                </div>
                <!-- Search Button -->
                <button class="btn btn-lg btn-outline-primary rounded-0 w-100 mt-2"
                  >Apply Filters</button
                >
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-9">
          <div class="row g-4">
            <!-- Product 1 -->
            <div class="col-sm-6 col-xl-4" data-aos="zoom-in-up" data-aos-duration="1200">
              <div class="card border rounded-0 h-100 p-0">
                <figure class="img-scale rounded-top-0 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/cat-theme/shop/product-1.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>
                <div class="card-body p-3">
                  <h5 class="card-title fs-5 mb-1">
                    <a
                      href={getPathPrefix('/theme/11/shop-details')}
                      class="text-decoration-none text-body">Woolen Ball</a
                    >
                  </h5>
                  <span class="badge bg-primary-subtle text-primary fs-6 mb-1">Toys</span>
                  <p class="card-text text-muted fs-5 mb-2">$5.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary rounded-0 w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary rounded-0">
                      <i class="ri-heart-line"></i>
