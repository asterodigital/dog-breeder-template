---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Shop Details"
  description="Dedicated to raising happy, healthy kittens in loving homes."
>
  <!-- Main Section -->
  <section class="bg-body py-5">
    <div class="container">
      <!-- Back Button -->
      <div class="mb-4">
        <a
          href={getPathPrefix('/theme/11/shop')}
          class="btn btn-lg btn-outline-primary rounded-0"
          data-aos="fade-in"
          data-aos-duration="600"
        >
          <i class="ri-arrow-left-line me-1"></i>Back to Shop
        </a>
      </div>

      <!-- Product Info Row -->
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <!-- Image Column -->
        <div class="col">
          <figure class="img-scale" data-aos="fade-in" data-aos-duration="1200">
            <img
              src={getAssetPrefix('/assets/img/cat-theme/shop/product-1.jpg')}
              class="img-fluid"
              alt="Woolen Ball"
            />
          </figure>
          <div class="d-flex gap-2">
            <figure
              class="img-scale mb-0"
              style="height: 80px; width: 80px;"
              data-aos="fade-in"
              data-aos-delay="100"
              data-aos-duration="1200"
            >
              <img
                src={getAssetPrefix('/assets/img/cat-theme/shop/product-1.jpg')}
                class="img-fluid"
                style="object-fit: cover;"
                alt="Woolen Ball"
              />
            </figure>
            <figure
              class="img-scale mb-0"
              style="height: 80px; width: 80px;"
              data-aos="fade-in"
              data-aos-delay="200"
              data-aos-duration="1200"
            >
              <img
                src={getAssetPrefix('/assets/img/cat-theme/shop/product-1.jpg')}
                class="img-fluid"
                style="object-fit: cover;"
                alt="Woolen Ball"
              />
            </figure>
            <figure
              class="img-scale mb-0"
              style="height: 80px; width: 80px;"
              data-aos="fade-in"
              data-aos-delay="300"
              data-aos-duration="1200"
            >
              <img
                src={getAssetPrefix('/assets/img/cat-theme/shop/product-1.jpg')}
                class="img-fluid"
                style="object-fit: cover;"
                alt="Woolen Ball"
              />
            </figure>
          </div>
        </div>

        <!-- Details Column -->
        <div class="col" data-aos="fade-up" data-aos-duration="1200">
          <span class="badge text-primary bg-primary-subtle fs-6">Toys</span>
          <h2 class="display-5 fw-semibold mt-1 mb-2">Woolen Ball</h2>

          <!-- Rating -->
          <div class="d-flex align-items-center mb-3">
            <div class="text-yellow">
              <i class="ri-star-fill"></i>
              <i class="ri-star-fill"></i>
              <i class="ri-star-fill"></i>
              <i class="ri-star-fill"></i>
              <i class="ri-star-line"></i>
              <span class="text-muted ms-1">(98 reviews)</span>
            </div>
          </div>

          <!-- Description -->
          <p class="mb-3">
            The Woolen Ball Toy is a timeless favorite for cats and kittens. Made from natural,
            pet-safe wool, it encourages healthy play, exercise, and mental stimulation. Lightweight
            and soft, it's perfect for batting, chasing, and carrying around the house.
          </p>

          <!-- Price and Availability -->
          <div class="mb-3">
            <h4 class="fs-1 mb-1">$5.00</h4>
            <span class="text-success text-uppercase fw-medium">In Stock</span>
          </div>

          <!-- Quantity and Color Selection -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Quantity:</label>
            <input
              type="number"
              class="form-control w-auto d-inline-block ms-2"
              value="1"
              min="1"
            />
          </div>

          <div class="mb-4">
            <label class="form-label fw-semibold">Color:</label>
            <div class="d-flex gap-2 mt-1">
              <button
                class="rounded bg-pink border border-2 border-primary"
                style="width: 32px; height: 32px;"
                title="Pink"
              >
              </button>
              <button
                class="rounded bg-blue border"
                style="width: 32px; height: 32px;"
                title="Blue"
              >
              </button>
              <button
                class="rounded bg-green border"
                style="width: 32px; height: 32px;"
                title="Green"
              >
              </button>
            </div>
          </div>

          <div class="d-flex gap-2 mb-4">
            <a href="#" class="btn btn-lg btn-primary rounded-0">
              <i class="ri-shopping-cart-2-line me-1"></i>Add to Cart
            </a>
            <a href="#" class="btn btn-lg btn-outline-primary rounded-0">
              <i class="ri-heart-line"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Details Section -->
  <section class="bg-body pt-3 pb-5">
    <div class="container">
      <div class="text-center">
        <h3 class="display-5 fw-semibold mb-4" data-aos="fade-up" data-aos-duration="1200">
          Product Details
        </h3>
      </div>
      <div class="row g-4 align-items-stretch">
        <!-- Features Card -->
        <div class="col-md-4">
          <div
            class="card bg-primary-subtle border rounded-0 h-100"
            data-aos="fade-up"
            data-aos-delay="100"
            data-aos-duration="1200"
          >
            <div class="card-body">
              <h5 class="card-title fs-3 text-body mb-3">Key Features</h5>
              <ul class="list-unstyled mb-0">
                <li class="mb-2">
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>100% natural wool
                </li>
                <li class="mb-2">
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>2" diameter, lightweight
                </li>
                <li class="mb-2">
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Perfect for cats &
                  kittens
                </li>
                <li class="mb-2">
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Hand-washable &
                  eco-friendly
                </li>
                <li class="mb-2">
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Encourages active play
                </li>
              </ul>
            </div>
          </div>
        </div>
        <!-- Customer Reviews Card -->
        <div class="col-md-4">
          <div
            class="card bg-primary-subtle border rounded-0 h-100"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <div class="card-body">
              <h5 class="card-title fs-3 text-body mb-3">Customer Reviews</h5>
              <div class="mb-3">
                <div class="d-flex align-items-center mb-1">
                  <div class="text-yellow fs-5">
                    <i class="ri-star-s-fill"></i>
                    <i class="ri-star-s-fill"></i>
                    <i class="ri-star-s-fill"></i>
                    <i class="ri-star-s-fill"></i>
                    <i class="ri-star-half-s-line"></i>
                  </div>
                  <span class="ms-2 text-muted">4.5/5 (98 reviews)</span>
                </div>
              </div>
              <div>
                <p class="mb-1 fw-semibold">Emily C.</p>
                <p class="fst-italic small">
                  "My kitten loves chasing this woolen ball around the house! It's soft, safe, and
                  keeps her busy for hours."
                </p>
              </div>
              <div class="mt-3">
                <a href="#" class="link-primary text-decoration-none">Write a Review</a>
              </div>
            </div>
          </div>
        </div>
        <!-- Shipping & Returns Card -->
        <div class="col-md-4">
          <div
            class="card bg-primary-subtle border rounded-0 h-100"
            data-aos="fade-up"
            data-aos-delay="300"
            data-aos-duration="1200"
          >
            <div class="card-body">
              <h5 class="card-title fs-3 text-body mb-3">Shipping & Returns</h5>
              <ul class="list-unstyled mb-0">
                <li class="mb-2">
                  <i class="ri-truck-fill text-primary me-2"></i>Standard: 3–5 business days
                </li>
                <li class="mb-2">
                  <i class="ri-flashlight-fill text-primary me-2"></i>Express: 1–2 business days
                </li>
                <li class="mb-2">
                  <i class="ri-arrow-go-back-fill text-primary me-2"></i>30-day money-back guarantee
                </li>
                <li class="mb-2">
                  <i class="ri-global-fill text-primary me-2"></i>Nationwide delivery
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Similar Items Section -->
  <section class="bg-body pt-3 pb-5">
    <div class="container">
      <div class="text-center">
        <h3 class="display-5 fw-semibold mb-4" data-aos="fade-up" data-aos-duration="1200">
          Similar Products
        </h3>
      </div>
      <div class="row g-4 mb-4">
        <!-- Product 1 -->
        <div class="col-sm-6 col-xl-3">
          <div
            class="card border rounded-0 h-100 p-0"
            data-aos="flip-up"
            data-aos-delay="100"
            data-aos-duration="1200"
          >
            <figure class="img-scale rounded-top-0 mb-0">
              <img
                src={getAssetPrefix('/assets/img/cat-theme/shop/product-2.jpg')}
                class="card-img-top rounded-0"
                alt="Product Image"
              />
            </figure>
            <div class="card-body p-3">
              <h5 class="card-title fs-5 mb-1">
                <a href="#" class="text-decoration-none text-body">Food Bowl</a>
              </h5>
              <span class="badge bg-primary-subtle text-primary fs-6 mb-1">Essentials</span>
              <p class="card-text text-muted fs-5 mb-2">$15.00</p>
              <div class="d-flex gap-2">
                <a href="#" class="btn btn-lg btn-primary rounded-0 w-100">
                  <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                </a>
                <a href="#" class="btn btn-lg btn-outline-primary rounded-0">
                  <i class="ri-heart-line"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <!-- Product 2 -->
        <div class="col-sm-6 col-xl-3">
          <div
            class="card border rounded-0 h-100 p-0"
            data-aos="flip-up"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <figure class="img-scale rounded-top-0 mb-0">
              <img
                src={getAssetPrefix('/assets/img/cat-theme/shop/product-3.jpg')}
                class="card-img-top rounded-0"
                alt="Product Image"
              />
            </figure>
            <div class="card-body p-3">
              <h5 class="card-title fs-5 mb-1">
                <a href="#" class="text-decoration-none text-body">Mouse Toy</a>
              </h5>
              <span class="badge bg-primary-subtle text-primary fs-6 mb-1">Toys</span>
              <p class="card-text text-muted fs-5 mb-2">$10.00</p>
              <div class="d-flex gap-2">
                <a href="#" class="btn btn-lg btn-primary rounded-0 w-100">
                  <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                </a>
                <a href="#" class="btn btn-lg btn-outline-primary rounded-0">
                  <i class="ri-heart-line"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <!-- Product 3 -->
        <div class="col-sm-6 col-xl-3">
          <div
            class="card border rounded-0 h-100 p-0"
            data-aos="flip-up"
            data-aos-delay="300"
            data-aos-duration="1200"
          >
            <figure class="img-scale rounded-top-0 mb-0">
              <img
                src={getAssetPrefix('/assets/img/cat-theme/shop/product-2.jpg')}
                class="card-img-top rounded-0"
                alt="Product Image"
              />
            </figure>
            <div class="card-body p-3">
              <h5 class="card-title fs-5 mb-1">
                <a href="#" class="text-decoration-none text-body">Food Bowl</a>
              </h5>
              <span class="badge bg-primary-subtle text-primary fs-6 mb-1">Essentials</span>
              <p class="card-text text-muted fs-5 mb-2">$15.00</p>
              <div class="d-flex gap-2">
                <a href="#" class="btn btn-lg btn-primary rounded-0 w-100">
                  <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                </a>
                <a href="#" class="btn btn-lg btn-outline-primary rounded-0">
                  <i class="ri-heart-line"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <!-- Product 4 -->
        <div class="col-sm-6 col-xl-3">
          <div
            class="card border rounded-0 h-100 p-0"
            data-aos="flip-up"
            data-aos-delay="400"
            data-aos-duration="1200"
          >
            <figure class="img-scale rounded-top-0 mb-0">
              <img
                src={getAssetPrefix('/assets/img/cat-theme/shop/product-3.jpg')}
                class="card-img-top rounded-0"
                alt="Product Image"
              />
            </figure>
            <div class="card-body p-3">
              <h5 class="card-title fs-5 mb-1">
                <a href="#" class="text-decoration-none text-body">Mouse Toy</a>
              </h5>
              <span class="badge bg-primary-subtle text-primary fs-6 mb-1">Toys</span>
              <p class="card-text text-muted fs-5 mb-2">$10.00</p>
              <div class="d-flex gap-2">
                <a href="#" class="btn btn-lg btn-primary rounded-0 w-100">
                  <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                </a>
                <a href="#" class="btn btn-lg btn-outline-primary rounded-0">
                  <i class="ri-heart-line"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="text-end">
        <a
          href={getPathPrefix('/theme/11/shop')}
          class="btn btn-lg btn-outline-primary rounded-0"
          data-aos="fade-in"
          data-aos-duration="600">See all products <i class="ri-arrow-right-line"></i></a
        >
      </div>
    </div>
  </section>
</Layout>
