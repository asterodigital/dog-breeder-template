---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Contact"
  description="Ethical, loving Himalayan cat breeders in Austin, TX. Discover our kittens, philosophy, and community."
>
  <!-- Contact Hero Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="row align-items-center g-4">
        <div class="col-lg-7" data-aos="fade-right" data-aos-duration="1200">
          <h1 class="display-4 fw-semibold mb-2">Contact Us</h1>
          <p class="fs-5 mb-0">
            We love connecting with fellow cat lovers! Whether you have questions about our kittens,
            want to schedule a visit, or just want to chat about Himalayan cats, weâ€™re here for you.
          </p>
        </div>
        <div class="col-lg-5 text-center" data-aos="fade-left" data-aos-duration="1200">
          <img
            src={getAssetPrefix('/assets/img/cat-theme/5/himalayan-3.jpg')}
            class="img-fluid"
            alt="Himalayan Cat"
            style="max-width: 350px;"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row g-4 align-items-start">
        <div class="col-lg-7">
          <div
            class="card bg-primary-subtle border rounded-0 h-100 p-4"
            data-aos="fade-up"
            data-aos-duration="1200"
          >
            <h2 class="fw-semibold mb-3">Send Us a Message</h2>
            <form>
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control form-control-lg"
                  id="name"
                  placeholder="Your Name"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control form-control-lg"
                  id="email"
                  placeholder="you@email.com"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea
                  class="form-control form-control-lg"
                  id="message"
                  rows="2"
                  placeholder="Your message.."
                  required></textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-lg rounded-0 mt-2"
                >Send Message</button
              >
            </form>
          </div>
        </div>
        <div class="col-lg-5">
          <div
            class="card bg-primary-subtle border rounded-0 h-100 p-4"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <h2 class="fw-semibold mb-3">Visit or Reach Out</h2>
            <ul class="list-unstyled mb-3">
              <li class="mb-3">
                <i class="ri-map-pin-fill text-primary me-2"></i> Austin, TX (by appointment only)
              </li>
              <li class="mb-3">
                <i class="ri-mail-fill text-primary me-2"></i>
                <a href="mailto:hello@email.com" class="text-decoration-none text-body"
                  >hello@email.com</a
                >
              </li>
              <li class="mb-3">
                <i class="ri-phone-fill text-primary me-2"></i>
                <a href="tel:+12345678901" class="text-decoration-none text-body"
                  >+1 (234) 567-8901</a
                >
              </li>
            </ul>
            <div class="ratio ratio-16x9 overflow-hidden">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23181.182903463836!2d-97.75408308207732!3d30.268331893788808!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b599a0cc032f%3A0x5d9b464bd469d57a!2sAustin%2C%20TX%2C%20USA!5e0!3m2!1sen!2sin!4v1746533935359!5m2!1sen!2sin"
                style="border:0; width:100%; height:100%;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
