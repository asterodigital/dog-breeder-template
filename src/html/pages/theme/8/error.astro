---
import Layout from './layout.astro'
import { getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Error" description="Dedicated to raising happy, healthy kittens in loving homes.">
  <section class="bg-body d-flex align-items-center py-5">
    <div class="container text-center">
      <h1
        class="display-2 fw-semibold mb-0"
        data-aos="fade-up"
        data-aos-delay="100"
        data-aos-duration="1200"
      >
        404
      </h1>
      <h2 class="mb-3" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1200">
        Oops, page not found!
      </h2>
      <p class="mb-4 text-muted" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1200">
        The page you are looking for does not exist or has been moved.
      </p>
      <div
        class="d-flex justify-content-center gap-2"
        data-aos="fade-up"
        data-aos-delay="300"
        data-aos-duration="1200"
      >
        <a href={getPathPrefix('/theme/8/home')} class="btn btn-lg btn-primary"
          ><i class="ri-home-2-line me-2"></i>Go to Home</a
        >
        <a href={getPathPrefix('/theme/8/contact')} class="btn btn-lg btn-outline-primary"
          ><i class="ri-information-2-line me-2"></i>Contact Us</a
        >
      </div>
    </div>
  </section>
</Layout>
