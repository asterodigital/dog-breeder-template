---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Kittens" description="Dedicated to raising happy, healthy kittens in loving homes.">
  <!-- Kittens Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="text-center mb-4">
        <h2 class="display-5 fw-semibold" data-aos="fade-up" data-aos-duration="1200">
          Meet Our Siamese Kittens
        </h2>
      </div>
      <div class="row g-4">
        <div class="col-md-4">
          <div
            class="card border rounded-4 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="100"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/2/siamese-1.jpg')}
              alt="Kitten Luna"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body p-3">
              <h5 class="fw-semibold mb-1">
                <a
                  href={getPathPrefix('/theme/8/kitten-details')}
                  class="text-body text-decoration-none">Luna</a
                >
              </h5>
              <p class="mb-1 text-muted">8 weeks old</p>
              <p class="mb-2">A playful blue-cream female with a gentle, affectionate nature.</p>
              <a href={getPathPrefix('/theme/8/kitten-details')} class="btn btn-primary w-100"
                >Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div
            class="card border rounded-4 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/2/siamese-3.jpg')}
              alt="Kitten Felix"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body p-3">
              <h5 class="fw-semibold mb-1">
                <a href="#" class="text-body text-decoration-none">Felix</a>
              </h5>
              <p class="mb-1 text-muted">10 weeks old</p>
              <p class="mb-2">A curious white male with striking eyes and a loving personality.</p>
              <a href={getPathPrefix('/theme/8/kitten-details')} class="btn btn-primary w-100"
                >Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div
            class="card border rounded-4 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="300"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/2/siamese-1.jpg')}
              alt="Kitten Willow"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body p-3">
              <h5 class="fw-semibold mb-1">
                <a href="#" class="text-body text-decoration-none">Willow</a>
              </h5>
              <p class="mb-1 text-muted">7 weeks old</p>
              <p class="mb-2">A sweet tortoiseshell female, very gentle and loves to cuddle.</p>
              <a href={getPathPrefix('/theme/8/kitten-details')} class="btn btn-primary w-100"
                >Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div
            class="card border rounded-4 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="400"
            data-aos-duration="1200"
          >
