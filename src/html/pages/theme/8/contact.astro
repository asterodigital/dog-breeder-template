---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Contact"
  description="Dedicated to raising happy, healthy Siamese kittens in loving homes."
>
  <!-- Contact Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
          <h1 class="display-5 fw-semibold mb-3" data-aos="fade-up" data-aos-duration="1000">
            Get in Touch
          </h1>
          <p class="mb-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="900">
            Have questions about our Siamese kittens, adoption process, or cattery? We’re here to
            help! Fill out the form below and we’ll get back to you as soon as possible.
          </p>
          <form class="row g-3" data-aos="fade-up" data-aos-delay="200" data-aos-duration="900">
            <div class="col-12">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="name"
                name="name"
                required
              />
            </div>
            <div class="col-12">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                name="email"
                required
              />
            </div>
            <div class="col-12">
              <label for="message" class="form-label">Message</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                name="message"
                rows="2"
                required></textarea>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary btn-lg w-100">Send Message</button>
            </div>
          </form>
          <div class="mt-4" data-aos="fade-in" data-aos-delay="300" data-aos-duration="800">
            <p class="mb-1">
              <i class="ri-mail-fill text-primary me-2"></i><a
                href="mailto:hello@email.com"
                class="text-body text-decoration-none">hello@email.com</a
              >
            </p>
            <p class="mb-1">
              <i class="ri-phone-fill text-primary me-2"></i>
              <a href="tel:+12345678901" class="text-body text-decoration-none">+1 (234) 567-8901</a
              >
            </p>
            <p class="mb-0">
              <i class="ri-map-pin-fill text-primary me-2"></i>123 Main Street, Austin, TX
            </p>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="overflow-hidden">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!2m12!1m3!1d11034.5656!2d-97.7431!3d30.2672!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b5e4c51e3b7b%3A0x8d2fd94b632cf761!2sAustin%2C%20TX!5e0!3m2!1sen!2sus!4v1615555555555"
              width="100%"
              height="600"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
