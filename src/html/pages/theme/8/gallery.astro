---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Gallery"
  description="Dedicated to raising healthy, well-socialized Siamese kittens in loving homes."
>
  <!-- Gallery Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row mb-5">
        <div class="col-lg-10 offset-lg-1 text-center">
          <h1 class="display-5 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="1000">
            Gallery
          </h1>
          <p
            class="fs-5 text-muted mb-0"
            data-aos="fade-up"
            data-aos-delay="100"
            data-aos-duration="900"
          >
            Explore moments from our cattery and our extended kitten families. Every photo
            celebrates the beauty, personality, and joy of Siamese cats raised with love.
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <div class="row g-4">
            <div
              class="col-sm-6 col-md-4"
              data-aos="zoom-in"
              data-aos-delay="100"
              data-aos-duration="1200"
            >
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/cat-theme/2/siamese-1.jpg')}
              >
                <figure class="img-scale rounded-4 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/cat-theme/2/siamese-1.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div
