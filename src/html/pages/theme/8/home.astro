---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Home"
  description="Dedicated to raising happy, healthy Siamese kittens in loving homes."
>
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/cat-theme/2/siamese-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <h1 class="display-4 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="1200">
            Ethically Bred Siamese Cats
          </h1>
          <p class="fs-4 mb-4" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1200">
            We specialize in healthy, well-socialized Siamese cats, raised with care, compassion,
            and transparency.
          </p>
          <div
            class="d-flex justify-content-center flex-wrap gap-2 mb-2"
            data-aos="fade-in"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <a href={getPathPrefix('/theme/8/kittens')} class="btn btn-lg btn-primary">
              View Kittens<i class="ri-arrow-right-line ms-1"></i>
            </a>
            <a href={getPathPrefix('/theme/8/about')} class="btn btn-lg btn-outline-light">
              <i class="ri-information-2-line me-1"></i>Learn More
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Search Section -->
  <section class="text-bg-primary border-bottom py-5">
    <div class="container">
      <h2 class="mb-3" data-aos="fade-up" data-aos-duration="1200">Find Your Perfect Kitten</h2>
      <form data-aos="fade-in" data-aos-delay="200" data-aos-duration="1200">
        <div class="row g-3 align-items-end">
          <!-- Breed -->
          <div class="col-12 col-md-3">
            <label for="breed" class="form-label fs-5">Breed</label>
            <select class="form-select form-select-lg" id="breed" name="breed">
              <option selected disabled>Choose...</option>
              <option>Persian</option>
              <option>Siamese</option>
              <option>Bengali</option>
              <option>Abyssinian</option>
              <option>Himalayan</option>
            </select>
          </div>

          <!-- Location -->
          <div class="col-12 col-md-3">
            <label for="location" class="form-label fs-5">Location</label>
            <input
              type="text"
              class="form-control form-control-lg"
              id="location"
              name="location"
              placeholder="City or ZIP"
            />
          </div>

          <!-- Price Range -->
          <div class="col-6 col-md-2">
            <label for="minPrice" class="form-label fs-5">Min Price</label>
            <input
              type="number"
              class="form-control form-control-lg"
              id="minPrice"
              name="minPrice"
              placeholder="0"
            />
          </div>
          <div class="col-6 col-md-2">
            <label for="maxPrice" class="form-label fs-5">Max Price</label>
            <input
              type="number"
              class="form-control form-control-lg"
              id="maxPrice"
              name="maxPrice"
              placeholder="1000"
            />
          </div>

          <!-- Availability -->
          <div class="col-12 col-md-2">
            <label for="availability" class="form-label fs-5">Availability</label>
            <select class="form-select form-select-lg" id="availability" name="availability">
              <option selected>Any</option>
              <option>Available Now</option>
              <option>Upcoming Litters</option>
            </select>
          </div>

          <!-- Submit Button -->
          <div class="col-12 text-end mt-3">
            <button type="submit" class="btn btn-lg btn-outline-light">Search</button>
          </div>
        </div>
      </form>
    </div>
  </section>

  <!-- Features Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="text-center">
        <h2 class="display-5 fw-semibold mb-4" data-aos="fade-up" data-aos-duration="1200">
          Built on Care & Compassion
        </h2>
      </div>
      <div class="row g-4">
        <div class="col-md-4">
          <div
            class="card bg-secondary-subtle h-100 p-4"
            data-aos="flip-up"
            data-aos-delay="100"
            data-aos-duration="1200"
          >
            <div class="card-body">
              <i class="ri-heart-fill text-primary fs-1"></i>
              <p class="fs-4 fw-semibold mb-2">Health Guarantee</p>
              <p class="mb-2">
                All our kittens come with a health guarantee to ensure they start life strong and
                fully healthy.
              </p>
              <a href="#" class="text-primary text-decoration-none">
                Learn more<i class="ri-arrow-right-line ms-1"></i>
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div
            class="card bg-secondary-subtle h-100 p-4"
            data-aos="flip-up"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <div class="card-body">
              <i class="ri-hand-heart-fill text-primary fs-1"></i>
              <p class="fs-4 fw-semibold mb-2">Lifetime Support</p>
              <p class="mb-2">
                We are here for you and your cat with our guidance and support - and we'll be here
                for life.
              </p>
              <a href="#" class="text-primary text-decoration-none">
                Learn more<i class="ri-arrow-right-line ms-1"></i>
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div
            class="card bg-secondary-subtle h-100 p-4"
            data-aos="flip-up"
            data-aos-delay="400"
            data-aos-duration="1200"
          >
            <div class="card-body">
              <i class="ri-empathize-fill text-primary fs-1"></i>
              <p class="fs-4 fw-semibold mb-2">Kitten Updates</p>
              <p class="mb-2">
                Stay connected with regular photos and updates as your kitten grows up before coming
                home.
              </p>
              <a href="#" class="text-primary text-decoration-none">
                Learn more<i class="ri-arrow-right-line ms-1"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

