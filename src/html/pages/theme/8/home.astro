  <section class="bg-body py-5">
    <div class="container">
      <h2
        class="display-5 fw-semibold text-center mb-4"
        data-aos="fade-up"
        data-aos-duration="1000"
      >
        Testimonials
      </h2>
      <div class="row g-4">
