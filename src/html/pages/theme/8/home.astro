        </div>
      </div>
      <div class="d-block d-md-none text-center">
        <a href={getPathPrefix('/theme/8/kittens')} class="btn btn-lg btn-outline-primary px-4 mt-4"
          >See All Kittens</a
        >
      </div>
    </div>
  </section>

  <!-- Kitten Care Tips Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
          <h2 class="display-5 fw-semibold mb-3" data-aos="fade-up" data-aos-duration="1000">
            Kitten Care Tips
