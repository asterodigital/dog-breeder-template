        <div class="col-lg-6 text-center">
          <img
            src={getAssetPrefix('/assets/img/cat-theme/2/siamese-1.jpg')}
            alt="Siamese Cat"
            class="img-fluid rounded-4"
            style="max-height: 340px; object-fit: cover;"
            data-aos="zoom-in"
            data-aos-duration="1000"
          />
        </div>
      </div>
    </div>
  </section>

