---
import { getPathPrefix } from '../../../../../utils/path.js'
import Logo from './_topbar/_logo.astro'
---

<!-- Footer -->
<footer class="bg-secondary-subtle pt-5 border-top">
  <div class="container">
    <div class="row mb-4">
      <!-- Left Column -->
      <div class="col-md-5">
        <a
          href={getPathPrefix('/theme/3/home')}
          class="d-inline-flex align-items-center text-decoration-none"
        >
          <Logo />
        </a>
        <p class="text-body mt-2 pe-lg-4">
          We're committed to raising healthy, happy French Bulldogs. Reach out with questions or to
          express interest in an upcoming litter.
        </p>
      </div>

      <!-- Right Column: Contact Form -->
      <div class="col-md-7">
        <form class="row g-3">
          <div class="col-md-6">
            <input
              type="text"
              placeholder="John Doe"
              class="form-control form-control-lg"
              id="name"
              name="name"
              required
            />
          </div>
          <div class="col-md-6">
            <input
              type="email"
              placeholder="example@email.com"
              class="form-control form-control-lg"
              id="email"
              name="email"
              required
            />
          </div>
          <div class="col-md-12">
            <textarea
              class="form-control form-control-lg"
              id="message"
              name="message"
              rows="2"
              required
              placeholder="Tell us what you're looking for in a puppy or ask us anything!"
            ></textarea>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-lg btn-primary rounded-pill px-4"
              >Send Message</button
            >
          </div>
        </form>
      </div>
    </div>

    <div class="row text-bg-dark p-4 rounded-5 mx-1 mx-sm-0">
      <!-- Navigation Links -->
      <div class="col-md-4 mb-4 mb-md-0 px-0">
        <h5 class="fs-5 mb-3">Quick Links</h5>
        <ul class="list-unstyled mb-0">
          <li>
            <a
              href={getPathPrefix('/theme/3/home')}
              class="text-light text-decoration-none d-block mb-2">Home</a
            >
          </li>
          <li>
            <a
              href={getPathPrefix('/theme/3/about')}
              class="text-light text-decoration-none d-block mb-2">About</a
            >
          </li>
          <li>
            <a
              href={getPathPrefix('/theme/3/faq')}
              class="text-light text-decoration-none d-block mb-2">FAQs</a
            >
          </li>
          <li>
            <a
              href={getPathPrefix('/theme/3/testimonials')}
              class="text-light text-decoration-none d-block mb-2">Testimonials</a
            >
          </li>
          <li>
            <a
              href={getPathPrefix('/theme/3/contact')}
              class="text-light text-decoration-none d-block">Contact</a
            >
          </li>
        </ul>
      </div>
      <div class="col-md-4 mb-4 mb-md-0 px-0">
        <h5 class="fs-5 mb-3">Explore</h5>
        <ul class="list-unstyled mb-0">
          <li>
            <a
              href={getPathPrefix('/theme/3/blog-1')}
              class="text-light text-decoration-none d-block mb-2">Blog</a
            >
          </li>
          <li>
            <a
              href={getPathPrefix('/theme/3/breeding-philosophy')}
              class="text-light text-decoration-none d-block mb-2">Breeding Philosophy</a
            >
          </li>
          <li>
            <a
              href={getPathPrefix('/theme/3/gallery')}
              class="text-light text-decoration-none d-block mb-2">Gallery</a
            >
          </li>
          <li>
            <a
              href={getPathPrefix('/theme/3/puppies')}
              class="text-light text-decoration-none d-block mb-2">Puppies</a
            >
          </li>
          <li>
            <a href={getPathPrefix('/theme/3/shop')} class="text-light text-decoration-none d-block"
              >Shop<span class="badge bg-primary ms-2">new</span></a
            >
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div class="col-md-4 px-0">
        <h5 class="fs-5 mb-2">Contact Us</h5>
        <p class="text-light mb-3">
          Whether you have a question, need support, or just want to say hello â€” we're here for you.
        </p>
        <ul class="list-unstyled mt-3 mb-0">
          <li class="mb-2">
            <a href="tel:+12345678901" class="text-light text-decoration-none">
              <i class="ri-phone-fill text-primary me-2"></i>+1 (234) 567-8901
            </a>
          </li>
          <li class="mb-2">
            <a href="mailto:hello@email.com" class="text-light text-decoration-none">
              <i class="ri-mail-fill text-primary me-2"></i>hello@email.com
            </a>
          </li>
          <li>
            <i class="ri-map-pin-fill text-primary me-2"></i>123 Main Street, Austin, TX
          </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- Footer Bottom -->
  <div class="border-top py-4 mt-4">
    <div
      class="container d-flex flex-column flex-md-row justify-content-between align-items-center text-center text-md-start"
    >
      <p class="mb-2 mb-md-0">&copy; 2025 Company, Inc. All rights reserved.</p>
      <div>
        <a href="#" class="text-decoration-none text-body me-3">Terms & Conditions</a>
        <a href="#" class="text-decoration-none text-body">Privacy Policy</a>
      </div>
    </div>
  </div>
</footer>
