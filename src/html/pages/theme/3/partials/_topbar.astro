---
import Logo from './_topbar/_logo.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../../utils/path'
---

<!-- Navbar -->
<nav class="navbar sticky-top navbar-expand-lg navbar-light bg-body shadow-sm z-3">
  <div class="container">
    <!-- Brand Logo -->
    <a class="navbar-brand d-flex align-items-center" href={getPathPrefix('/theme/3/home')}>
      <Logo />
    </a>

    <!-- Offcanvas Toggler -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#offcanvasNavbar"
      aria-controls="offcanvasNavbar"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Offcanvas Content -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
      <div class="offcanvas-header">
        <a class="navbar-brand d-flex align-items-center" href={getPathPrefix('/theme/3/home')}>
          <Logo />
        </a>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"
        ></button>
      </div>
      <div
        class="offcanvas-body d-flex flex-column justify-content-between ms-lg-auto me-md-2 h-100"
      >
        <!-- Desktop Nav Links -->
        <ul class="navbar-nav flex-grow-1 me-auto d-none d-lg-flex">
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/home')}>Home</a>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="aboutDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              About
            </a>
            <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
              <li><a class="dropdown-item" href={getPathPrefix('/theme/3/about')}>About</a></li>
              <li>
                <a class="dropdown-item" href={getPathPrefix('/theme/3/breeding-philosophy')}
                  >Breeding Philosophy</a
                >
              </li>
              <li>
                <a class="dropdown-item" href={getPathPrefix('/theme/3/testimonials')}
                  >Testimonials</a
                >
              </li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="exploreDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Explore
            </a>
            <ul class="dropdown-menu" aria-labelledby="exploreDropdown">
              <li>
                <a class="dropdown-item" href={getPathPrefix('/theme/3/puppies')}>Puppies</a>
              </li>
              <li><a class="dropdown-item" href={getPathPrefix('/theme/3/gallery')}>Gallery</a></li>
              <li><a class="dropdown-item" href={getPathPrefix('/theme/3/shop')}>Shop</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="blogDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Blog
            </a>
            <ul class="dropdown-menu" aria-labelledby="blogDropdown">
              <li>
                <a class="dropdown-item" href={getPathPrefix('/theme/3/blog-1')}
                  >Blog - No Sidebar</a
                >
              </li>
              <li>
                <a class="dropdown-item" href={getPathPrefix('/theme/3/blog-2')}
                  >Blog - Left Sidebar</a
                >
              </li>
              <li>
                <a class="dropdown-item" href={getPathPrefix('/theme/3/blog-3')}
                  >Blog - Right Sidebar</a
                >
              </li>
              <li>
                <a class="dropdown-item" href={getPathPrefix('/theme/3/post-1')}
                  >Blog Post - No Sidebar</a
                >
              </li>
              <li>
                <a class="dropdown-item" href={getPathPrefix('/theme/3/post-2')}
                  >Blog Post - Left Sidebar</a
                >
              </li>
              <li>
                <a class="dropdown-item" href={getPathPrefix('/theme/3/post-3')}
                  >Blog Post - Right Sidebar</a
                >
              </li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/faq')}>FAQs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/contact')}>Contact</a>
          </li>
        </ul>

        <!-- Mobile Nav Links -->
        <ul class="navbar-nav d-lg-none mt-2">
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/home')}>Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/about')}>About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/breeding-philosophy')}
              >Breeding Philosophy</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/testimonials')}>Testimonials</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/puppies')}>Puppies</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/gallery')}>Gallery</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/shop')}>Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/blog-1')}>Blog – No Sidebar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/blog-2')}>Blog – Left Sidebar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/blog-3')}>Blog – Right Sidebar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/post-1')}>Blog Post – No Sidebar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/post-2')}>Blog Post – Left Sidebar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/post-3')}>Blog Post – Right Sidebar</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/faq')}>FAQs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href={getPathPrefix('/theme/3/contact')}>Contact</a>
          </li>

          <!-- Mobile-only Icons -->
          <li class="nav-item mt-2 border-top pt-2">
            <a class="nav-link" href="#"><i class="ri-notification-3-fill me-2"></i>Notifications</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"><i class="ri-mail-fill me-2"></i>Messages</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"><i class="ri-user-3-fill me-2"></i>Profile</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Right-aligned Icons for desktop -->
    <ul class="navbar-nav d-none d-lg-flex flex-row align-items-center gap-2">
      <li class="nav-item">
        <a class="nav-link" href="#" title="Notifications">
          <i class="ri-notification-3-fill fs-5"></i>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" title="Messages">
          <i class="ri-mail-fill fs-5"></i>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" title="Profile">
          <img
            src={getAssetPrefix('/assets/img/avatars/avatar5.jpg')}
            alt="User Avatar"
            class="rounded-circle"
            style="width: 30px; height: 30px;"
          />
        </a>
      </li>
    </ul>
  </div>
</nav>
