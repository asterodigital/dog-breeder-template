---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout title="Contact" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/french-bulldog-3.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold mb-3">Frequently Asked Questions</h1>
          <p class="fs-4 mb-4">
            Find answers to the most common questions about our French Bulldogs, adoption process,
            care tips, and what to expect as a new puppy parent.
          </p>
          <div class="d-flex justify-content-center flex-wrap gap-2 mb-2">
            <button class="btn btn-lg btn-primary rounded-pill px-4">
              View Puppies<i class="ri-arrow-right-line ms-1"></i>
            </button>
            <button class="btn btn-lg btn-outline-light rounded-pill px-4">
              <i class="ri-information-2-line me-1"></i>Learn More
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Book Appointment Section -->
  <section class="bg-body pt-5">
    <div class="container bg-primary-subtle rounded-5 p-4 p-md-5">
      <div class="row align-items-center">
        <div class="col-md-8">
          <div class="d-flex align-items-center gap-3 mb-1">
            <i class="ri-calendar-line text-primary fs-3"></i>
            <h4 class="fw-semibold mb-0">Book a Free Appointment</h4>
          </div>
          <p class="mb-0">
            Have questions about our breeding practices or puppies? We're happy to chat — no
            pressure, no cost.
          </p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
          <a href="#" class="btn btn-primary btn-lg px-4 mb-1">Schedule Now</a>
          <div>
            <small>*T&Cs Apply</small>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row g-4">
        <div class="col-md-6">
          <i class="ri-customer-service-fill text-primary fs-1"></i>
          <h1 class="fw-semibold mb-2">Contact Us</h1>
          <p class="mb-4">
            Whether you have a question, need support, or just want to say hello — we're here for
            you.
          </p>
          <form>
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="name"
                placeholder="John Doe"
              />
              <div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div><div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div><div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                placeholder="you@example.com"
              />
            </div>
            <div class="mb-4">
              <label for="message" class="form-label">Message</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                rows="3"
                placeholder="Write your message here..."></textarea>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">Submit</button>
            </div>
          </form>
        </div>
        <div class="col-md-6 pt-4 pt-md-0">
          <div class="ratio ratio-1x1">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23181.182903463836!2d-97.75408308207732!3d30.268331893788808!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b599a0cc032f%3A0x5d9b464bd469d57a!2sAustin%2C%20TX%2C%20USA!5e0!3m2!1sen!2sin!4v1746533935359!5m2!1sen!2sin"
              width="600"
              height="600"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            >
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="row text-center g-4">
        <!-- Phone -->
        <div class="col-sm-4">
          <i class="ri-phone-line text-primary display-5 mb-3"></i>
          <h5 class="fw-semibold mb-1">Phone</h5>
          <p class="mb-0">
            <a href="tel:+12345678901" class="text-decoration-none text-body">+1 (234) 567-8901</a>
          </p>
        </div>
        <!-- Email -->
        <div class="col-sm-4">
          <i class="ri-mail-line text-primary display-5 mb-3"></i>
          <h5 class="fw-semibold mb-1">Email</h5>
          <p class="mb-0">
            <a href="mailto:hello@yourcompany.com" class="text-decoration-none text-body"
              >hello@yourcompany.com</a
            >
          </p>
        </div>
        <!-- Location -->
        <div class="col-sm-4">
          <i class="ri-map-pin-line text-primary display-5 mb-3"></i>
          <h5 class="fw-semibold mb-1">Location</h5>
          <p class="mb-0">
            1234 Market Street, Suite 500 <br />San Francisco, CA 94103, USA
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <div class="text-center">
            <h2
              class="bg-primary-pale text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
            >
              FAQs
            </h2>
            <h3 class="display-6 fw-semibold mb-2">Frequently Asked Questions</h3>
          </div>

          <p class="text-center mb-4">
            Answers to some of the most common questions we receive about our puppies, process, and
            philosophy.
          </p>
          <ul class="nav nav-tabs justify-content-center flex-wrap gap-2 mb-4">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">General</a>
            </li>
            <li class="nav-item"><a class="nav-link" href="#">Payments</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Policies</a></li>
          </ul>
          <div
            class="accordion accordion-flush"
            id="accordionFAQs"
            role="tablist"
            aria-multiselectable="true"
          >
            <div class="accordion-item bg-transparent">
              <h2 class="accordion-header">
                <button
                  class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#flush-collapseOne"
                  aria-expanded="false"
                  aria-controls="flush-collapseOne"
                >
                  What steps do you take to ensure the health of your puppies?
                </button>
              </h2>
              <div
                id="flush-collapseOne"
                class="accordion-collapse collapse"
                data-bs-parent="#accordionFAQs"
              >
                <div class="accordion-body p-3">
                  Lorem ipsum dolor sit amet consectet adipisi libero corporis digniss provi elit.
                </div>
              </div>
            </div>
            <div class="accordion-item bg-transparent">
              <h2 class="accordion-header">
                <button
                  class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#flush-collapseTwo"
                  aria-expanded="false"
                  aria-controls="flush-collapseTwo"
                >
                  Do your puppies come with vaccinations and health checks?
                </button>
              </h2>
              <div
                id="flush-collapseTwo"
                class="accordion-collapse collapse"
                data-bs-parent="#accordionFAQs"
              >
                <div class="accordion-body p-3">
                  Lorem ipsum dolor sit amet consectet adipisi libero corporis digniss provi elit.
                </div>
              </div>
            </div>
            <div class="accordion-item bg-transparent">
              <h2 class="accordion-header">
                <button
                  class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#flush-collapseThree"
                  aria-expanded="false"
                  aria-controls="flush-collapseThree"
                >
                  What kind of support do you provide after adoption?
                </button>
              </h2>
              <div
                id="flush-collapseThree"
                class="accordion-collapse collapse"
                data-bs-parent="#accordionFAQs"
              >
                <div class="accordion-body p-3">
                  Lorem ipsum dolor sit amet consectet adipisi libero corporis digniss provi elit.
                </div>
              </div>
            </div>
            <div class="accordion-item bg-transparent">
              <h2 class="accordion-header">
                <button
                  class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#flush-collapseFour"
                  aria-expanded="false"
                  aria-controls="flush-collapseFour"
                >
                  Can I meet the puppy's parents before adoption?
                </button>
              </h2>
              <div
                id="flush-collapseFour"
                class="accordion-collapse collapse"
                data-bs-parent="#accordionFAQs"
              >
                <div class="accordion-body p-3">
                  Lorem ipsum dolor sit amet consectet adipisi libero corporis digniss provi elit.
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="bg-body pt-2 pt-lg-4">
    <div class="container-fluid px-0">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!2m12!1m3!1d11034.5656!2d-97.7431!3d30.2672!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b5e4c51e3b7b%3A0x8d2fd94b632cf761!2sAustin%2C%20TX!5e0!3m2!1sen!2sus!4v1615555555555"
        width="100%"
        height="400"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </section>

  <!-- CTA/Form Section -->
  <section
    class="text-light position-relative"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/french-bulldog-1.jpg')}'); background-size: cover; background-position: center;`}
  >
    <div
      class="position-absolute top-0 start-0 w-100 h-100"
      style="background-color: rgba(0, 0, 0, 0.35);"
    >
    </div>
    <div class="container py-5 position-relative">
      <h2 class="display-6 fw-semibold mb-4">
        Find your perfect pup—<em>ethically, responsibly, and with love</em>.
      </h2>
      <div class="row">
        <div class="col-lg-5">
          <form class="row text-start g-3">
            <div class="col-md-6">
              <label for="fullName" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="fullName"
                placeholder="Jane Doe"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="phone" class="form-label">Phone Number (optional)</label>
              <input
                type="tel"
                class="form-control form-control-lg"
                id="phone"
                placeholder="+1 (234) 567-8901"
              />
            </div>
            <div class="col-md-12">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                placeholder="you@example.com"
                required
              />
            </div>
            <div class="col-md-12">
              <label for="message" class="form-label">Tell us what you're looking for</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                rows="3"
                placeholder="Age, temperament, size, etc."></textarea>
            </div>
            <div class="col-12 text-start">
              <button type="submit" class="btn btn-outline-light btn-lg rounded-pill px-4 mt-3">
                <i class="ri-sparkling-2-line me-1"></i>Find My Pup
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
