---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
import { getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Puppy Details"
  description="Dedicated to raising happy, healthy puppies in loving homes."
>
  <!-- Main Section -->
  <section class="bg-body py-5">
    <div class="container">
      <!-- Back Button -->
      <div class="mb-4">
        <a
          href={getPathPrefix('/theme/3/puppies')}
          class="btn btn-lg btn-outline-primary rounded-pill px-4"
        >
          <i class="ri-arrow-left-line me-1"></i>Back to Puppies
        </a>
      </div>

      <!-- Puppy Info Row -->
      <div class="row row-cols-1 row-cols-md-2 g-4 align-items-center">
        <!-- Image Column -->
        <div class="col">
          <figure class="img-scale rounded-5 shadow-sm">
            <img
              src={getAssetPrefix('/assets/img/breederspot-images/french-bulldog-puppy-1.jpg')}
              class="img-fluid"
              alt="Charlie the French Bulldog"
            />
          </figure>
        </div>

        <!-- Details Column -->
        <div class="col">
          <div class="d-flex align-items-center mb-2">
            <h2 class="display-6 fw-semibold mb-0 me-2">Charlie</h2>
            <span class="badge text-primary rounded-pill border fs-6">French Bulldog</span>
          </div>

          <p class="mb-3">
            Charlie is a happy-go-lucky pup who loves belly rubs, chasing squeaky toys, and making
            new friends. He's been raised in a loving home environment and is already starting basic
            training. If you're looking for a loyal and playful companion, Charlie's your guy!
          </p>

          <h4 class="fs-3 mb-3">$1,200.00</h4>

          <div class="d-flex flex-wrap gap-2 mb-4">
            <button class="btn btn-lg btn-primary rounded-pill px-4"
              ><i class="ri-price-tag-3-line me-1"></i>Reserve</button
            >
            <button class="btn btn-lg btn-outline-primary rounded-pill px-4"
              ><i class="ri-information-2-line me-1"></i>Learn More</button
            >
          </div>

          <table class="table table-hover border">
            <tbody>
              <tr>
                <th scope="row">Gender</th>
                <td>Male</td>
              </tr>
              <tr>
                <th scope="row">Age</th>
                <td>12 weeks</td>
              </tr>
              <tr>
                <th scope="row">Weight</th>
                <td>6.5 lbs</td>
              </tr>
              <tr>
                <th scope="row">Vaccinations</th>
                <td>Up to date</td>
              </tr>
              <tr>
                <th scope="row">Location</th>
                <td>Austin, TX</td>
              </tr>
              <tr class="table-secondary">
                <th scope="row">Availability</th>
                <td>Ready to go home now</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <!-- Details Section -->
  <section class="bg-body pb-5">
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
          <div class="text-center">
            <h2
              class="bg-primary-pale text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
            >
              Traits
            </h2>
            <h3 class="display-6 fw-semibold mb-4">Temperament of Charlie</h3>
          </div>

          <label for="progressbar-trainability" class="form-label">Trainability</label>
          <div
            class="progress mb-3"
            id="progressbar-trainability"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="85"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 85%">
            </div>
          </div>
          <label for="progressbar-friendliness" class="form-label">Friendliness</label>
          <div
            class="progress mb-3"
            id="progressbar-friendliness"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="90"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 90%">
            </div>
          </div>
          <label for="progressbar-adaptability" class="form-label">Adaptability</label>
          <div
            class="progress mb-3"
            id="progressbar-adaptability"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="90"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 90%">
            </div>
          </div>
          <label for="progressbar-intelligence" class="form-label">Intelligence</label>
          <div
            class="progress mb-3"
            id="progressbar-intelligence"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="85"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 85%">
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
