---
import Head from '../../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-body shadow-sm z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/theme/3/home">
              <img
                src="/dist/assets/img/breederspot-images/logo.svg"
                alt="Logo"
                class="me-2 mt-1"
                style="height: 28px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/theme/3/home">
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 28px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul
                  class="navbar-nav flex-grow-1 pe-3 justify-content-start justify-content-lg-center"
                >
                  <!-- Home -->
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/theme/3/home">Home</a>
                  </li>

                  <!-- About Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="aboutDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      About
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                      <li><a class="dropdown-item" href="/theme/3/about">About</a></li>
                      <li>
                        <a class="dropdown-item" href="/theme/3/breeding-philosophy"
                          >Breeding Philosophy</a
                        >
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/3/testimonials">Testimonials</a>
                      </li>
                    </ul>
                  </li>

                  <!-- Explore Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="exploreDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Explore
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="exploreDropdown">
                      <li><a class="dropdown-item" href="/theme/3/puppies">Puppies</a></li>
                      <li><a class="dropdown-item" href="/theme/3/gallery">Gallery</a></li>
                      <li><a class="dropdown-item" href="/theme/3/shop">Shop</a></li>
                    </ul>
                  </li>

                  <!-- Blog Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="blogDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Blog
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="blogDropdown">
                      <li>
                        <a class="dropdown-item" href="/theme/3/blog-1">Blog – No Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/3/blog-2">Blog – Left Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/3/blog-3">Blog – Right Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item active" href="/theme/3/post-1"
                          >Blog Post – No Sidebar</a
                        >
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/3/post-2">Blog Post – Left Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/3/post-3">Blog Post – Right Sidebar</a
                        >
                      </li>
                    </ul>
                  </li>

                  <!-- FAQs -->
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/faq">FAQs</a>
                  </li>

                  <!-- Contact -->
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/contact">Contact</a>
                  </li>
                </ul>

                <!-- Bottom Section -->
                <div class="d-block d-lg-none mt-4">
                  <a href="tel:+12345678901" class="btn btn-outline-primary rounded w-100 mb-2">
                    <i class="ri-phone-fill me-2"></i>Book Consultation
                  </a>
                  <a class="btn btn-primary rounded w-100" href="#"
                    ><i class="ri-sparkling-2-fill me-2"></i> Get Started Now</a
                  >
                </div>
              </div>
            </div>

            <div class="d-none d-lg-flex align-items-center gap-3">
              <div class="text-start">
                <small class="text-muted d-block">Book Consultation</small>
                <a href="tel:+12345678901" class="text-primary text-decoration-none fw-medium">
                  +1 (234) 567-8901
                </a>
              </div>

              <a class="btn btn-lg btn-primary rounded" href="#">Get Started</a>
            </div>
          </div>
        </nav>

        <!-- Blog Post Content -->
        <section class="bg-body py-5">
          <div class="container">
            <div class="row">
              <div class="col-lg-8 offset-lg-2">
                <!-- Blog Heading, Category, and Date -->
                <div class="mb-4">
                  <span class="badge text-primary bg-primary-subtle fs-6 mb-2">Health</span>
                  <h1 class="fw-semibold mb-2">Why Health Testing Matters in Dog Breeding</h1>
                  <p class="text-muted"><i class="ri-calendar-line me-1"></i>12 Jan 2025</p>
                </div>

                <!-- Cover Image -->
                <div class="mb-4">
                  <img
                    src="/dist/assets/img/breederspot-images/french-bulldog-1.jpg"
                    alt="Blog Cover"
                    class="img-fluid rounded-5"
                    style="max-height: 400px; object-fit: cover; width: 100%;"
                  />
                </div>

                <!-- Blog Content -->
                <div class="mb-4">
                  <p>
                    Breeding dogs responsibly requires more than just a passion for the breed — it
                    demands a commitment to health and genetic screening. Health testing plays a
                    pivotal role in reducing inherited diseases and ensuring the well-being of
                    future litters.
                  </p>
                  <p>
                    Through responsible breeding practices, including thorough health evaluations,
                    breeders contribute to the long-term health of dog populations. Tests such as
                    hip evaluations, genetic screenings, and cardiac exams help breeders make
                    informed pairing decisions.
                  </p>
                  <p>
                    Investing in health testing also builds trust with prospective puppy buyers,
                    reinforces ethical breeding standards, and ultimately leads to healthier,
                    happier pets.
                  </p>
                </div>

                <!-- Share Button -->
                <div class="mb-4">
                  <button class="btn btn-lg btn-outline-primary rounded-pill px-4">
                    <i class="ri-share-line me-1"></i>Share this post
                  </button>
                </div>

                <!-- Author Section -->
                <div class="d-flex align-items-center border-top pt-4 mb-5">
                  <img
                    src="/dist/assets/img/avatars/avatar1.jpg"
                    alt="Author Image"
                    class="rounded-circle me-3"
                    width="64"
                    height="64"
                  />
                  <div>
                    <h6 class="mb-1">
                      <a href="#" class="text-decoration-none text-body">Jane Smith</a>
                    </h6>

                    <p class="text-muted mb-0">
                      Certified canine health advocate with 10+ years of experience.
                    </p>
                  </div>
                </div>

                <!-- Similar Posts -->
                <div class="mb-4">
                  <h4 class="mb-4">Similar Posts</h4>
                  <div class="row g-4">
                    <div class="col-md-6">
                      <div class="card border rounded-5 h-100 p-0">
                        <img
                          src="/dist/assets/img/breederspot-images/french-bulldog-1.jpg"
                          class="card-img-top rounded-top-5"
                          alt="Similar Post 1"
                        />
                        <div class="card-body p-3">
                          <a href="#" class="text-decoration-none text-body">
                            <h5 class="card-title">
                              Puppy Mills vs. Ethical Breeders: The Difference
                            </h5>
                          </a>
                          <p class="card-text text-muted mb-0">
                            Comparing unethical breeding operations to responsible ones, with clear
                            distinctions.
                          </p>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="card border rounded-5 h-100 p-0">
                        <img
                          src="/dist/assets/img/breederspot-images/french-bulldog-1.jpg"
                          class="card-img-top rounded-top-5"
                          alt="Similar Post 2"
                        />
                        <div class="card-body p-3">
                          <a href="#" class="text-decoration-none text-body">
                            <h5 class="card-title">The True Cost of a Well-Bred Puppy</h5>
                          </a>
                          <p class="card-text text-muted mb-0">
                            Why puppies from ethical breeders cost more and what goes into
                            responsible pricing.
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- CTA/Form Section -->
        <section
          class="text-light position-relative"
          style="background-image: url('/dist/assets/img/breederspot-images/french-bulldog-1.jpg'); background-size: cover; background-position: center;"
        >
          <div
            class="position-absolute top-0 start-0 w-100 h-100"
            style="background-color: rgba(0, 0, 0, 0.35);"
          >
          </div>
          <div class="container py-5 position-relative">
            <h2 class="display-6 fw-semibold mb-4">
              Find your perfect pup—<em>ethically, responsibly, and with love</em>.
            </h2>
            <div class="row">
              <div class="col-lg-5">
                <form class="row text-start g-3">
                  <div class="col-md-6">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      id="fullName"
                      placeholder="Jane Doe"
                      required
                    />
                  </div>
                  <div class="col-md-6">
                    <label for="phone" class="form-label">Phone Number (optional)</label>
                    <input
                      type="tel"
                      class="form-control form-control-lg"
                      id="phone"
                      placeholder="+1 (234) 567-8901"
                    />
                  </div>
                  <div class="col-md-12">
                    <label for="email" class="form-label">Email Address</label>
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      id="email"
                      placeholder="you@example.com"
                      required
                    />
                  </div>
                  <div class="col-md-12">
                    <label for="message" class="form-label">Tell us what you're looking for</label>
                    <textarea
                      class="form-control form-control-lg"
                      id="message"
                      rows="3"
                      placeholder="Age, temperament, size, etc."></textarea>
                  </div>
                  <div class="col-12 text-start">
                    <button
                      type="submit"
                      class="btn btn-outline-light btn-lg rounded-pill px-4 mt-3"
                    >
                      <i class="ri-sparkling-2-line me-1"></i>Find My Pup
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="pt-5 pb-4">
          <div class="container">
            <div class="row">
              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Quick Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/theme/3/home" class="nav-link p-0 text-body-secondary">Home</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/theme/3/about" class="nav-link p-0 text-body-secondary">About</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/theme/3/contact" class="nav-link p-0 text-body-secondary">Contact</a>
                  </li>
                </ul>
              </div>

              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Other Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/theme/3/blog" class="nav-link p-0 text-body-secondary">Blog</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/theme/3/puppies" class="nav-link p-0 text-body-secondary">Puppies</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/theme/3/shop" class="nav-link p-0 text-body-secondary">Shop</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/theme/3/faq" class="nav-link p-0 text-body-secondary">FAQs</a>
                  </li>
                </ul>
              </div>

              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Legal</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Terms of Use</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Privacy Policy</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Cookies Policy</a>
                  </li>
                </ul>
              </div>

              <div class="col-md-5 offset-md-1 mb-3">
                <form>
                  <h5 class="mb-3">Newsletter</h5>
                  <p class="text-body-secondary mb-3">
                    Subscribe to our newsletter for the latest updates.
                  </p>
                  <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      placeholder="Email address"
                    />
                    <button class="btn btn-lg btn-primary" type="button">Subscribe</button>
                  </div>
                </form>
              </div>
            </div>

            <div class="text-center pt-4 mt-4 border-top">
              <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
            </div>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
