---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Puppy Details"
  description="Dedicated to raising happy, healthy puppies in loving homes."
>
  <!-- Main Section -->
  <section class="bg-body py-5">
    <div class="container">
      <!-- Back Button -->
      <div class="mb-4" data-aos="fade-in" data-aos-duration="800">
        <a href={getPathPrefix('/theme/1/puppies')} class="btn btn-lg btn-outline-primary">
          <i class="ri-arrow-left-line"></i> Back to Puppies
        </a>
      </div>

      <!-- Puppy Info Row -->
      <div class="row row-cols-1 row-cols-md-2 g-4 align-items-center">
        <!-- Image Column -->
        <div class="col" data-aos="zoom-in" data-aos-delay="100" data-aos-duration="800">
          <figure class="img-scale rounded shadow-sm">
            <img
              src={getAssetPrefix('/assets/img/breederspot-images/beagle-puppy-1.jpg')}
              class="img-fluid"
              alt="Olive the Beagle"
            />
          </figure>
        </div>

        <!-- Details Column -->
        <div class="col" data-aos="fade-up" data-aos-delay="200" data-aos-duration="800">
          <div class="d-flex align-items-center mb-2">
            <h2 class="display-6 fw-semibold mb-0 me-2">Olive</h2>
            <span class="badge text-body bg-secondary-pale fs-6">Beagle</span>
          </div>

          <p class="mb-3">
            Olive is a happy-go-lucky pup who loves belly rubs, chasing squeaky toys, and making new
            friends. She's been raised in a loving home environment and is already starting basic
            training. If you're looking for a loyal and playful companion, Olive is the one!
          </p>

          <h4 class="fs-3 mb-3">$1,200.00</h4>

          <div class="d-flex flex-wrap gap-2 mb-4">
            <button class="btn btn-lg btn-primary"
              ><i class="ri-price-tag-3-line me-2"></i>Reserve</button
            >
            <button class="btn btn-lg btn-outline-primary"
              ><i class="ri-information-2-line me-2"></i>Learn More</button
            >
          </div>

          <table class="table table-hover border">
            <tbody>
              <tr>
                <th scope="row">Gender</th>
                <td>Female</td>
              </tr>
              <tr>
                <th scope="row">Age</th>
                <td>4 weeks</td>
              </tr>
              <tr>
                <th scope="row">Weight</th>
                <td>6.5 lbs</td>
              </tr>
              <tr>
                <th scope="row">Vaccinations</th>
                <td>Up to date</td>
              </tr>
              <tr>
                <th scope="row">Location</th>
                <td>Austin, TX</td>
              </tr>
              <tr class="table-secondary">
                <th scope="row">Availability</th>
                <td>Ready to go home now</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <!-- Details Section -->
  <section class="text-bg-dark py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
          <h3
            class="display-6 fw-semibold text-center mb-3"
            data-aos="fade-up"
            data-aos-duration="800"
          >
            Temperament of Olive
          </h3>
          <label for="progressbar-trainability" class="form-label">Trainability</label>
          <div
            class="progress mb-3"
            id="progressbar-trainability"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="85"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 85%">
            </div>
          </div>
          <label for="progressbar-friendliness" class="form-label">Friendliness</label>
          <div
            class="progress mb-3"
            id="progressbar-friendliness"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="90"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 90%">
            </div>
          </div>
          <label for="progressbar-adaptability" class="form-label">Adaptability</label>
          <div
            class="progress mb-3"
            id="progressbar-adaptability"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="90"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 90%">
            </div>
          </div>
          <label for="progressbar-intelligence" class="form-label">Intelligence</label>
          <div
            class="progress mb-3"
            id="progressbar-intelligence"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="85"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 85%">
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/beagle-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-75"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3" data-aos="fade-in" data-aos-duration="800">
          <h5 class="display-6 fw-semibold mb-2">Stay connected with us</h5>
          <p class="fs-5 mb-4">
            Subscribe to our newsletter for updates on upcoming litters, training tips, and stories
            from our family â€” straight to your inbox.
          </p>
          <!-- Email Form -->
          <form class="row g-2 justify-content-center">
            <div class="col-sm-9">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Enter your email"
                required=""
              />
              <div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div><div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div>
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-primary btn-lg w-100">Notify Me</button>
            </div>
          </form>
          <!-- Small note -->
          <p class="mt-3 mb-0">We send only what matters. No spam, ever.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
