---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Blog 3" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Blogs Section -->
  <section class="bg-body py-5">
    <div class="container">
      <h1
        class="display-5 text-center fw-semibold mb-4"
        data-aos="fade-down"
        data-aos-duration="1200"
      >
        Read our latest articles and tips
      </h1>
      <div class="row gy-4">
        <!-- Sidebar Column -->
        <div class="col-lg-3 order-lg-2">
          <div class="sticky-top z-1" style="top: 80px;">
            <!-- Search Card -->
            <div
              class="card bg-secondary-subtle p-3 mb-4"
              data-aos="fade-left"
              data-aos-duration="1200"
            >
              <div class="card-body">
                <h5 class="card-title mb-3">
                  <i class="ri-search-line me-2"></i>Search Blog Posts
                </h5>
                <form>
                  <div class="mb-3">
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      placeholder="Search topics, titles..."
                    />
                  </div>
                  <button type="submit" class="btn btn-lg btn-primary w-100">Search</button>
                </form>
              </div>
            </div>

            <!-- Tags Card -->
            <div
              class="card bg-secondary-subtle p-3 mb-4"
              data-aos="fade-left"
              data-aos-duration="1200"
            >
              <div class="card-body">
                <h5 class="card-title mb-3">
                  <i class="ri-price-tag-3-line me-2"></i>Browse by Tags
                </h5>
                <div class="d-flex flex-wrap gap-2">
                  <a href="#" class="badge text-body bg-secondary-pale fs-6 text-decoration-none"
                    >Health</a
                  >
                  <a href="#" class="badge text-body bg-secondary-pale fs-6 text-decoration-none"
                    >Ethics</a
                  >
                  <a href="#" class="badge text-body bg-secondary-pale fs-6 text-decoration-none"
                    >Value</a
                  >
                  <a href="#" class="badge text-body bg-secondary-pale fs-6 text-decoration-none"
                    >Breeders</a
                  >
                  <a href="#" class="badge text-body bg-secondary-pale fs-6 text-decoration-none"
                    >Process</a
                  >
                  <a href="#" class="badge text-body bg-secondary-pale fs-6 text-decoration-none"
                    >Puppies</a
                  >
                </div>
              </div>
            </div>

            <!-- Recent Posts Card -->
            <div class="card bg-secondary-subtle p-3" data-aos="fade-left" data-aos-duration="1200">
              <div class="card-body">
                <h5 class="card-title mb-3">
                  <i class="ri-history-line me-2"></i>Recent Posts
                </h5>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item bg-secondary-subtle px-0">
                    <a href="#" class="text-body text-decoration-none fw-semibold d-block mb-1">
                      Why Health Testing Matters in Dog Breeding
                    </a>
                    <p class="mb-2">
                      12 Jan 2025 • <span class="badge text-body bg-secondary-pale fs-6"
                        >Health</span
                      >
                    </p>
                  </li>
                  <li class="list-group-item bg-secondary-subtle px-0">
                    <a href="#" class="text-body text-decoration-none fw-semibold d-block mb-1">
                      Puppy Mills vs. Ethical Breeders: Learn the Difference
                    </a>
                    <p class="mb-2">
                      20 Feb 2025 • <span class="badge text-body bg-secondary-pale fs-6"
                        >Ethics</span
                      >
                    </p>
                  </li>
                  <li class="list-group-item bg-secondary-subtle px-0">
                    <a href="#" class="text-body text-decoration-none fw-semibold d-block mb-1">
                      The True Cost of a Well-Bred Puppy
                    </a>
                    <p class="mb-2">
                      6 Jan 2025 • <span class="badge text-body bg-secondary-pale fs-6">Value</span>
                    </p>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-9 order-lg-1">
          <div
            class="card bg-secondary-subtle p-0 mb-4"
            data-aos="fade-in"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/breederspot-images/beagle-1.jpg')}
              class="card-img-top"
              style="max-height: 400px; object-fit: cover;"
              alt="blog image"
            />
            <div class="card-body p-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="badge text-body bg-secondary-pale fs-6">Health</span>
                <span class="d-flex gap-3 text-muted">
                  <a href="#" class="text-decoration-none text-muted">
                    <i class="ri-user-line me-1"></i>Jane Smith
                  </a>
                  <span><i class="ri-calendar-line me-1"></i>12 Jan 2025</span>
                </span>
              </div>
              <h5 class="card-title fs-4 mb-2">
                <a href={getPathPrefix('/theme/1/post-3')} class="text-decoration-none text-body">
                  Why Health Testing Matters in Dog Breeding
                </a>
              </h5>
              <p class="text-muted mb-2">
                Explaining the importance of genetic and health screenings in ethical breeding
                practices.
              </p>
              <a href={getPathPrefix('/theme/1/post-3')} class="text-decoration-none text-body mb-0"
                >Read more <i class="ri-arrow-right-line"></i></a
              >
            </div>
          </div>
          <div
            class="card bg-secondary-subtle p-0 mb-4"
            data-aos="fade-in"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/breederspot-images/beagle-1.jpg')}
              class="card-img-top"
              style="max-height: 400px; object-fit: cover;"
              alt="blog image"
            />
            <div class="card-body p-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="badge text-body bg-secondary-pale fs-6">Ethics</span>
                <span class="d-flex gap-3 text-muted">
                  <a href="#" class="text-decoration-none text-muted">
                    <i class="ri-user-line me-1"></i>Jane Smith
                  </a>
                  <span><i class="ri-calendar-line me-1"></i>20 Feb 2025</span>
                </span>
              </div>
              <h5 class="card-title fs-4 mb-2">
                <a href="#" class="text-decoration-none text-body">
                  Puppy Mills vs. Ethical Breeders: Learn the Difference
                </a>
              </h5>
              <p class="text-muted mb-2">
                Comparing unethical breeding operations to responsible ones, with clear
                distinctions.
              </p>
              <a href="#" class="text-decoration-none text-body mb-0"
                >Read more <i class="ri-arrow-right-line"></i></a
              >
            </div>
          </div>
          <div class="card bg-secondary-subtle p-0" data-aos="fade-in" data-aos-duration="1200">
            <img
              src={getAssetPrefix('/assets/img/breederspot-images/beagle-1.jpg')}
              class="card-img-top"
              style="max-height: 400px; object-fit: cover;"
              alt="blog image"
            />
            <div class="card-body p-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="badge text-body bg-secondary-pale fs-6">Value</span>
                <span class="d-flex gap-3 text-muted">
                  <a href="#" class="text-decoration-none text-muted">
                    <i class="ri-user-line me-1"></i>Jane Smith
                  </a>
                  <span><i class="ri-calendar-line me-1"></i>6 Jan 2025</span>
                </span>
              </div>
              <h5 class="card-title fs-4 mb-2">
                <a href="#" class="text-decoration-none text-body">
                  The True Cost of a Well-Bred Puppy
                </a>
              </h5>
              <p class="text-muted mb-2">
                Why puppies from ethical breeders cost more and what goes into responsible pricing.
              </p>
              <a href="#" class="text-decoration-none text-body mb-0"
                >Read more <i class="ri-arrow-right-line"></i></a
              >
            </div>
          </div>

          <!-- Pagination -->
          <nav class="mt-5 d-flex justify-content-center" aria-label="Pagination">
            <ul class="pagination pagination-lg z-1">
              <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/beagle-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-75"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3" data-aos="fade-in" data-aos-duration="1200">
          <h5 class="display-6 fw-semibold mb-2">Stay connected with us</h5>
          <p class="fs-5 mb-4">
            Subscribe to our newsletter for updates on upcoming litters, training tips, and stories
            from our family — straight to your inbox.
          </p>
          <!-- Email Form -->
          <form class="row g-2 justify-content-center">
            <div class="col-sm-9">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Enter your email"
                required=""
              />
              <div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div><div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div>
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-primary btn-lg w-100">Notify Me</button>
            </div>
          </form>
          <!-- Small note -->
          <p class="mt-3 mb-0">We send only what matters. No spam, ever.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
