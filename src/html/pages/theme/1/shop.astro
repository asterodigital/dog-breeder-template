---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Shop" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/beagle-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="600">
            Essentials for your pup
          </h1>
          <p class="fs-4 mb-0" data-aos="fade-up" data-aos-delay="200" data-aos-duration="600">
            Thoughtfully selected products to support your pup's health, happiness, and everyday
            adventures — from puppy essentials to lifelong favorites.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Shop Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row gy-4">
        <!-- Sidebar / Filter Column -->
        <div class="col-lg-3">
          <div
            class="sticky-top z-1"
            style="top: 80px;"
            data-aos="fade-left"
            data-aos-duration="600"
          >
            <div class="card bg-secondary-subtle p-3">
              <div class="card-body">
                <h5 class="fw-semibold mb-3">Filter Products</h5>

                <!-- Category -->
                <div class="mb-3">
                  <label for="category" class="form-label">Category</label>
                  <select class="form-select form-select-lg" id="category">
                    <option value="">All Products</option>
                    <option>Apparel</option>
                    <option>Collars</option>
                    <option>Food</option>
                    <option>Leashes</option>
                    <option>Toys</option>
                  </select>
                </div>

                <!-- Size -->
                <div class="mb-3">
                  <label for="size" class="form-label">Size</label>
                  <select class="form-select form-select-lg" id="size">
                    <option value="">All Sizes</option>
                    <option>Small</option>
                    <option>Medium</option>
                    <option>Large</option>
                  </select>
                </div>

                <!-- Age Group -->
                <div class="mb-3">
                  <label for="ageGroup" class="form-label">Age Group</label>
                  <select class="form-select form-select-lg" id="ageGroup">
                    <option value="">Any</option>
                    <option>Puppy</option>
                    <option>Adult</option>
                    <option>Senior</option>
                  </select>
                </div>

                <!-- Price Range -->
                <div class="mb-3">
                  <label class="form-label">Price Range</label>
                  <div class="d-flex gap-2">
                    <input type="number" class="form-control form-control-lg" placeholder="Min" />
                    <input type="number" class="form-control form-control-lg" placeholder="Max" />
                  </div>
                </div>

                <!-- Sort By -->
                <div class="mb-3">
                  <label for="sortBy" class="form-label">Sort By</label>
                  <select class="form-select form-select-lg" id="sortBy">
                    <option value="default">Default</option>
                    <option value="newest">Newest First</option>
                    <option value="priceLowHigh">Price: Low to High</option>
                    <option value="priceHighLow">Price: High to Low</option>
                  </select>
                </div>

                <!-- Search Button -->
                <button class="btn btn-lg btn-primary w-100 mt-2">Apply Filters</button>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-9">
          <div class="row g-4">
            <!-- Product 1 -->
            <div
              class="col-sm-6 col-xl-4"
              data-aos="flip-up"
              data-aos-delay="100"
              data-aos-duration="600"
            >
              <div class="card bg-secondary-subtle h-100 p-0">
                <figure class="img-scale rounded-top-3 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-1.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a
                        href={getPathPrefix('/theme/1/shop-details')}
                        class="text-decoration-none text-body">Duck Toy</a
                      >
                    </h5>
                    <span class="badge text-body bg-secondary-pale fs-6">Toys</span>
                  </div>
                  <p class="card-text text-muted fs-5 mb-3">$25.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <!-- Product 2 -->
            <div
              class="col-sm-6 col-xl-4"
              data-aos="flip-up"
              data-aos-delay="200"
              data-aos-duration="600"
            >
              <div class="card bg-secondary-subtle h-100 p-0">
                <figure class="img-scale rounded-top-3 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-2.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a href="#" class="text-decoration-none text-body">Rubber Toy</a>
                    </h5>
                    <span class="badge text-body bg-secondary-pale fs-6">Toys</span>
                  </div>
                  <p class="card-text text-muted fs-5 mb-3">$15.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <!-- Product 3 -->
            <div
              class="col-sm-6 col-xl-4"
              data-aos="flip-up"
              data-aos-delay="300"
              data-aos-duration="600"
            >
              <div class="card bg-secondary-subtle h-100 p-0">
                <figure class="img-scale rounded-top-3 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-collar-3.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a href="#" class="text-decoration-none text-body">Dog Collar</a>
                    </h5>
                    <span class="badge text-body bg-secondary-pale fs-6">Collars</span>
                  </div>
                  <p class="card-text text-muted fs-5 mb-3">$30.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <!-- Product 4 -->
            <div
              class="col-sm-6 col-xl-4"
              data-aos="flip-up"
              data-aos-delay="400"
              data-aos-duration="600"
            >
              <div class="card bg-secondary-subtle h-100 p-0">
                <figure class="img-scale rounded-top-3 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-3.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a href="#" class="text-decoration-none text-body">Rubber Toy</a>
                    </h5>
                    <span class="badge text-body bg-secondary-pale fs-6">Toys</span>
                  </div>
                  <p class="card-text text-muted fs-5 mb-3">$35.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <!-- Product 5 -->
            <div
              class="col-sm-6 col-xl-4"
              data-aos="flip-up"
              data-aos-delay="500"
              data-aos-duration="600"
            >
              <div class="card bg-secondary-subtle h-100 p-0">
                <figure class="img-scale rounded-top-3 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-collar-1.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a href="#" class="text-decoration-none text-body">Dog Collar</a>
                    </h5>
                    <span class="badge text-body bg-secondary-pale fs-6">Collars</span>
                  </div>
                  <p class="card-text text-muted fs-5 mb-3">$10.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <!-- Product 6 -->
            <div
              class="col-sm-6 col-xl-4"
              data-aos="flip-up"
              data-aos-delay="600"
              data-aos-duration="600"
            >
              <div class="card bg-secondary-subtle h-100 p-0">
                <figure class="img-scale rounded-top-3 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-collar-2.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a href="#" class="text-decoration-none text-body">Dog Collar</a>
                    </h5>
                    <span class="badge text-body bg-secondary-pale fs-6">Collars</span>
                  </div>
                  <p class="card-text text-muted fs-5 mb-3">$10.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Pagination -->
          <nav class="mt-5 d-flex justify-content-center">
            <ul class="pagination pagination-lg z-1">
              <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/beagle-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-75"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3" data-aos="fade-in" data-aos-duration="600">
          <h5 class="display-6 fw-semibold mb-2">Stay connected with us</h5>
          <p class="fs-5 mb-4">
            Subscribe to our newsletter for updates on upcoming litters, training tips, and stories
            from our family — straight to your inbox.
          </p>
          <!-- Email Form -->
          <form class="row g-2 justify-content-center">
            <div class="col-sm-9">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Enter your email"
                required=""
              />
              <div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div><div
                data-lastpass-icon-root=""
                style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"
              >
              </div>
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-primary btn-lg w-100">Notify Me</button>
            </div>
          </form>
          <!-- Small note -->
          <p class="mt-3 mb-0">We send only what matters. No spam, ever.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
