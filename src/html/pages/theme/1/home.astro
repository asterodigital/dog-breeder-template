      <form>
        <div class="row g-3 align-items-end">
          <!-- Breed -->
          <div class="col-12 col-md-3">
            <label for="breed" class="form-label fs-5">Breed</label>
            <select class="form-select form-select-lg" id="breed" name="breed">
              <option selected disabled>Choose...</option>
              <option>Beagle</option>
              <option>Dachshund</option>
              <option>Labrador</option>
              <option>Poodle</option>
              <!-- Add more breeds as needed -->
            </select>
          </div>

          <!-- Location -->
          <div class="col-12 col-md-3">
            <label for="location" class="form-label fs-5">Location</label>
            <input
              type="text"
              class="form-control form-control-lg"
              id="location"
              name="location"
              placeholder="City or ZIP"
            />
          </div>

          <!-- Price Range -->
          <div class="col-6 col-md-2">
            <label for="minPrice" class="form-label fs-5">Min Price</label>
            <input
              type="number"
              class="form-control form-control-lg"
              id="minPrice"
              name="minPrice"
              placeholder="0"
            />
          </div>
          <div class="col-6 col-md-2">
            <label for="maxPrice" class="form-label fs-5">Max Price</label>
            <input
              type="number"
              class="form-control form-control-lg"
              id="maxPrice"
              name="maxPrice"
              placeholder="1000"
            />
          </div>

          <!-- Availability -->
          <div class="col-12 col-md-2">
            <label for="availability" class="form-label fs-5">Availability</label>
            <select class="form-select form-select-lg" id="availability" name="availability">
              <option selected>Any</option>
              <option>Available Now</option>
              <option>Upcoming Litters</option>
            </select>
          </div>

          <!-- Submit Button -->
          <div class="col-12 text-end mt-3">
            <button type="submit" class="btn btn-lg btn-light">Search</button>
          </div>
        </div>
      </form>
    </div>
