---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout title="Gallery" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/golden-retriever-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div
      class="position-relative d-flex flex-column justify-content-center align-items-center h-100 px-3"
    >
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="bg-primary-subtle text-primary d-inline-flex rounded-pill fs-5 px-4 py-2 mb-2">
            Our Gallery
          </h1>
          <h1 class="display-4 fw-bold mb-3">Golden moments from our journey</h1>
          <p class="fs-4 mb-0">
            Step into the world of our Golden Retrievers — from playful puppy days to proud parent
            moments, this gallery captures the heart, joy, and everyday magic of life at our
            breeding home.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <!-- Nav -->
          <ul class="nav nav-tabs justify-content-center flex-wrap gap-2 mb-4">
            <li class="nav-item">
              <a class="nav-link fs-5 active" aria-current="page" href="#">All Photos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5" href="#">Puppies</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5" href="#">Adults</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5" href="#">Families</a>
            </li>
          </ul>

          <div class="row g-3">
            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix(
                  '/assets/img/breederspot-images/golden-retriever-2.jpg'
                )}
              >
                <figure class="img-scale rounded-5 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-2.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix(
                  '/assets/img/breederspot-images/golden-retriever-4.jpg'
                )}
              >
                <figure class="img-scale rounded-5 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-4.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div class="col-sm-12 col-md-6">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix(
                  '/assets/img/breederspot-images/golden-retriever-1.jpg'
                )}
              >
                <figure class="img-scale rounded-5 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-1.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix(
                  '/assets/img/breederspot-images/golden-retriever-1.jpg'
                )}
              >
                <figure class="img-scale rounded-5 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-1.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix(
                  '/assets/img/breederspot-images/golden-retriever-3.jpg'
                )}
              >
                <figure class="img-scale rounded-5 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-3.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix(
                  '/assets/img/breederspot-images/golden-retriever-2.jpg'
                )}
              >
                <figure class="img-scale rounded-5 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-2.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div class="col-sm-6 col-md-3">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix(
                  '/assets/img/breederspot-images/golden-retriever-4.jpg'
                )}
              >
                <figure class="img-scale rounded-5 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-4.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content bg-transparent border-0">
        <div class="modal-body p-0">
          <img id="modalImage" src="" class="img-fluid rounded-5 w-100" alt="Full Size Image" />
        </div>
      </div>
    </div>
  </div>

  <!-- Share Your Photos Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h3 class="display-6 text-center fw-bold mb-3">Share Your Photos</h3>
          <p class="fs-5 mb-3">
            We'd love to feature your furry family member! Send us your favorite photos — whether
            it's your pup's first day home, playtime in the yard, or cozy moments on the couch.
          </p>

          <p class="fs-5 mb-3">
            To share, simply email your images to <strong>hello@email.com</strong> with the following
            details:
          </p>

          <ul class="list-unstyled fs-5 mb-3">
            <li><i class="ri-check-line text-primary me-2"></i>Dog's Name</li>
            <li>
              <i class="ri-check-line text-primary me-2"></i>Dog's Age
            </li>
            <li>
              <i class="ri-check-line text-primary me-2"></i>Description
            </li>
          </ul>

          <small class="text-muted d-block">
            Submitted photos may be featured on our website or social channels. We will never share
            personal contact information.
          </small>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="text-light position-relative"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/gradient.jpg')}'); background-size: cover; background-position: center;`}
  >
    <div
      class="position-absolute top-0 start-0 w-100 h-100"
      style="background-color: rgba(0, 0, 0, 0.1);"
    >
    </div>
    <div class="container py-5 position-relative">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h2 class="display-6 fw-bold mb-3">
            Find your perfect pup—<em>ethically, responsibly, and with love</em>.
          </h2>
          <p class="fs-5 mb-4">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum quibusdam, libero
            corporis nemo!
          </p>
          <form class="row text-start g-3">
            <div class="col-md-6">
              <label for="fullName" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="fullName"
                placeholder="Jane Doe"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                placeholder="you@example.com"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="preferredBreed" class="form-label">Preferred Breed (optional)</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="preferredBreed"
                placeholder="e.g., Golden Retriever"
              />
            </div>
            <div class="col-md-6">
              <label for="phone" class="form-label">Phone Number (optional)</label>
              <input
                type="tel"
                class="form-control form-control-lg"
                id="phone"
                placeholder="+1 (234) 567-8901"
              />
            </div>
            <div class="col-md-12">
              <label for="message" class="form-label">Tell us what you're looking for</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                rows="4"
                placeholder="Age, temperament, size, etc."></textarea>
            </div>
            <div class="col-12 text-center">
              <button type="submit" class="btn btn-outline-light btn-lg rounded-pill px-4 mt-3">
                <i class="ri-sparkling-2-line me-1"></i> Find My Pup
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
