---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout title="Blog 3" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Blogs Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="text-center">
        <h1 class="bg-primary-subtle d-inline-flex rounded-pill fs-5 px-4 py-2 mb-2">Blogs</h1>
        <h2 class="display-5 fw-bold mb-4">Read our latest articles and tips</h2>
      </div>

      <div class="row gy-4">
        <!-- Sidebar Column -->
        <div class="col-lg-3 order-lg-2">
          <div class="sticky-top z-1" style="top: 80px;">
            <!-- Search Card -->
            <div class="card border rounded-5 p-3 mb-4">
              <div class="card-body">
                <h5 class="card-title mb-3">
                  <i class="ri-search-line me-2"></i>Search Blog Posts
                </h5>
                <form>
                  <div class="mb-3">
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      placeholder="Search topics, titles..."
                    />
                  </div>
                  <button type="submit" class="btn btn-lg btn-outline-primary rounded-pill w-100"
                    >Search</button
                  >
                </form>
              </div>
            </div>
            <!-- Tags Card -->
            <div class="card border rounded-5 p-3 mb-4">
              <div class="card-body">
                <h5 class="card-title mb-3">
                  <i class="ri-price-tag-3-line me-2"></i>Browse by Tags
                </h5>
                <div class="d-flex flex-wrap gap-2">
                  <a
                    href="#"
                    class="badge text-primary bg-primary-subtle text-decoration-none px-3 py-2"
                    >Health</a
                  >
                  <a
                    href="#"
                    class="badge text-primary bg-primary-subtle text-decoration-none px-3 py-2"
                    >Ethics</a
                  >
                  <a
                    href="#"
                    class="badge text-primary bg-primary-subtle text-decoration-none px-3 py-2"
                    >Value</a
                  >
                  <a
                    href="#"
                    class="badge text-primary bg-primary-subtle text-decoration-none px-3 py-2"
                    >Breeders</a
                  >
                  <a
                    href="#"
                    class="badge text-primary bg-primary-subtle text-decoration-none px-3 py-2"
                    >Process</a
                  >
                  <a
                    href="#"
                    class="badge text-primary bg-primary-subtle text-decoration-none px-3 py-2"
                    >Puppies</a
                  >
                </div>
              </div>
            </div>

            <!-- Recent Posts Card -->
            <div class="card border rounded-5 p-3">
              <div class="card-body">
                <h5 class="card-title mb-3">
                  <i class="ri-history-line me-2"></i>Recent Posts
                </h5>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">
                    <a href="#" class="text-decoration-none fw-semibold d-block mb-1">
                      Why Health Testing Matters in Dog Breeding
                    </a>
                    <p class="text-muted mb-2">
                      12 Jan 2025 • <span class="badge text-primary bg-primary-subtle">Health</span>
                    </p>
                  </li>
                  <li class="list-group-item">
                    <a href="#" class="text-decoration-none fw-semibold d-block mb-1">
                      Puppy Mills vs. Ethical Breeders: Learn the Difference
                    </a>
                    <p class="text-muted mb-2">
                      20 Feb 2025 • <span class="badge text-primary bg-primary-subtle">Ethics</span>
                    </p>
                  </li>
                  <li class="list-group-item">
                    <a href="#" class="text-decoration-none fw-semibold d-block mb-1">
                      The True Cost of a Well-Bred Puppy
                    </a>
                    <p class="text-muted mb-2">
                      6 Jan 2025 • <span class="badge text-primary bg-primary-subtle">Value</span>
                    </p>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-9 order-lg-1">
          <div class="card border rounded-5 p-0 mb-4">
            <img
              src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-1.jpg')}
              class="card-img-top rounded-top-5"
              style="max-height: 400px; object-fit: cover;"
              alt="blog image"
            />
            <div class="card-body p-4">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="badge text-primary bg-primary-subtle fs-6">Health</span>
                <span class="text-muted">12 Jan 2025</span>
              </div>
              <h5 class="card-title fs-4 mb-2">
                <a href="#" class="text-decoration-none text-body">
                  Why Health Testing Matters in Dog Breeding
                </a>
              </h5>
              <p class="text-muted mb-2">
                Explaining the importance of genetic and health screenings in ethical breeding
                practices.
              </p>
              <a href="#" class="text-decoration-none text-primary mb-0"
                >Read more <i class="ri-arrow-right-line"></i></a
              >
            </div>
          </div>
          <div class="card border rounded-5 p-0 mb-4">
            <img
              src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-1.jpg')}
              class="card-img-top rounded-top-5"
              style="max-height: 400px; object-fit: cover;"
              alt="blog image"
            />
            <div class="card-body p-4">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="badge text-primary bg-primary-subtle fs-6">Ethics</span>
                <span class="text-muted">20 Feb 2025</span>
              </div>
              <h5 class="card-title fs-4 mb-2">
                <a href="#" class="text-decoration-none text-body">
                  Puppy Mills vs. Ethical Breeders: Learn the Difference
                </a>
              </h5>
              <p class="text-muted mb-2">
                Comparing unethical breeding operations to responsible ones, with clear
                distinctions.
              </p>
              <a href="#" class="text-decoration-none text-primary mb-0"
                >Read more <i class="ri-arrow-right-line"></i></a
              >
            </div>
          </div>
          <div class="card border rounded-5 p-0">
            <img
              src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-1.jpg')}
              class="card-img-top rounded-top-5"
              style="max-height: 400px; object-fit: cover;"
              alt="blog image"
            />
            <div class="card-body p-4">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="badge text-primary bg-primary-subtle fs-6">Value</span>
                <span class="text-muted">6 Jan 2025</span>
              </div>
              <h5 class="card-title fs-4 mb-2">
                <a href="#" class="text-decoration-none text-body">
                  The True Cost of a Well-Bred Puppy
                </a>
              </h5>
              <p class="text-muted mb-2">
                Why puppies from ethical breeders cost more and what goes into responsible pricing.
              </p>
              <a href="#" class="text-decoration-none text-primary mb-0"
                >Read more <i class="ri-arrow-right-line"></i></a
              >
            </div>
          </div>

          <!-- Pagination -->
          <nav class="mt-5 d-flex justify-content-center" aria-label="Pagination">
            <ul class="pagination pagination-lg z-1">
              <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="text-light position-relative"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/gradient.jpg')}'); background-size: cover; background-position: center;`}
  >
    <div
      class="position-absolute top-0 start-0 w-100 h-100"
      style="background-color: rgba(0, 0, 0, 0.1);"
    >
    </div>
    <div class="container py-5 position-relative">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h2 class="display-6 fw-bold mb-3">
            Find your perfect pup—<em>ethically, responsibly, and with love</em>.
          </h2>
          <p class="fs-5 mb-4">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum quibusdam, libero
            corporis nemo!
          </p>
          <form class="row text-start g-3">
            <div class="col-md-6">
              <label for="fullName" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="fullName"
                placeholder="Jane Doe"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                placeholder="you@example.com"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="preferredBreed" class="form-label">Preferred Breed (optional)</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="preferredBreed"
                placeholder="e.g., Golden Retriever"
              />
            </div>
            <div class="col-md-6">
              <label for="phone" class="form-label">Phone Number (optional)</label>
              <input
                type="tel"
                class="form-control form-control-lg"
                id="phone"
                placeholder="+1 (234) 567-8901"
              />
            </div>
            <div class="col-md-12">
              <label for="message" class="form-label">Tell us what you're looking for</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                rows="4"
                placeholder="Age, temperament, size, etc."></textarea>
            </div>
            <div class="col-12 text-center">
              <button type="submit" class="btn btn-outline-light btn-lg rounded-pill px-4 mt-3">
                <i class="ri-sparkling-2-line me-1"></i> Find My Pup
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
