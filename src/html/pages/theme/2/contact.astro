---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout title="Contact" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/golden-retriever-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div
      class="position-relative d-flex flex-column justify-content-center align-items-center h-100 px-3"
    >
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1
            class="bg-primary-subtle text-primary d-inline-flex rounded-pill fs-5 px-4 py-2 mb-2"
            data-aos="fade-up"
            data-aos-duration="600"
          >
            Contact Us
          </h1>
          <h1
            class="display-4 fw-bold mb-3"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="600"
          >
            Get in touch with us
          </h1>
          <p class="fs-4 mb-0" data-aos="fade-up" data-aos-delay="200" data-aos-duration="600">
            We'd love to hear from you! Whether you have questions about our Golden Retrievers, the
            adoption process, or just want to say hello — we're here to help and happy to chat.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6" data-aos="fade-right" data-aos-duration="600">
          <i class="ri-mail-line text-primary fs-2"></i>
          <h1 class="display-6 fw-bold mb-2">Send Us a Message</h1>
          <p class="fs-5 mb-4">
            Whether you have a question, need support, or just want to say hello — we're here for
            you.
          </p>
          <div class="d-flex align-items-start gap-3 mb-3">
            <i class="ri-phone-fill fs-4 text-primary"></i>
            <div>
              <h6 class="mb-1">Phone</h6>
              <p class="mb-0 text-muted">
                <a href="tel:+12345678901" class="text-muted text-decoration-none"
                  >+1 (234) 567-8901</a
                >
              </p>
            </div>
          </div>
          <div class="d-flex align-items-start gap-3 mb-3">
            <i class="ri-mail-fill fs-4 text-primary"></i>
            <div>
              <h6 class="mb-1">Email</h6>
              <p class="mb-0 text-muted">
                <a href="mailto:hello@yourcompany.com" class="text-muted text-decoration-none"
                  >hello@yourcompany.com</a
                >
              </p>
            </div>
          </div>
          <div class="d-flex align-items-start gap-3">
            <i class="ri-map-pin-fill fs-4 text-primary"></i>
            <div>
              <h6 class="mb-1">Address</h6>
              <p class="mb-0 text-muted">
                1234 Market Street, Suite 500 <br />San Francisco, CA 94103, USA
              </p>
            </div>
          </div>
        </div>
        <div
          class="col-md-6 mt-auto pt-4 pt-md-0"
          data-aos="fade-left"
          data-aos-delay="200"
          data-aos-duration="600"
        >
          <form>
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="name"
                placeholder="John Doe"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                placeholder="you@example.com"
              />
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                rows="3"
                placeholder="Write your message here..."></textarea>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-lg btn-primary rounded-pill">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Book Appointment Section -->
  <section class="bg-body py-5 position-relative">
    <div
      class="container bg-primary-subtle rounded-5 border border-primary-subtle p-4 p-md-5 position-relative overflow-hidden"
      data-aos="fade-in"
      data-aos-duration="600"
    >
      <img
        src={getAssetPrefix('/assets/img/breederspot-images/multiple-paws.png')}
        alt="Decorative Paws Image"
        class="position-absolute paw-overlay-img"
      />

      <div class="row align-items-center position-relative">
        <div class="col-md-8">
          <div class="d-flex align-items-center gap-3 mb-1">
            <i class="ri-calendar-line text-primary fs-3"></i>
            <h4 class="fw-bold mb-0">Book a Free Appointment</h4>
          </div>
          <p class="fs-5 mb-0">
            Have questions about our breeding practices or puppies? We're happy to chat.
          </p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
          <a href="#" class="btn btn-primary btn-lg rounded-pill px-4 mb-1">Schedule Now</a>
          <div>
            <small>*T&Cs Apply</small>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="bg-body pt-2">
    <div class="container-fluid px-0">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!2m12!1m3!1d11034.5656!2d-97.7431!3d30.2672!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b5e4c51e3b7b%3A0x8d2fd94b632cf761!2sAustin%2C%20TX!5e0!3m2!1sen!2sus!4v1615555555555"
        width="100%"
        height="400"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="text-light position-relative"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/gradient.jpg')}'); background-size: cover; background-position: center;`}
  >
    <div
      class="position-absolute top-0 start-0 w-100 h-100"
      style="background-color: rgba(0, 0, 0, 0.1);"
    >
    </div>
    <div class="container py-5 position-relative">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h2 class="display-6 fw-bold mb-3">
            Find your perfect pup—<em>ethically, responsibly, and with love</em>.
          </h2>
          <p class="fs-5 mb-4">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum quibusdam, libero
            corporis nemo!
          </p>
          <form class="row text-start g-3">
            <div class="col-md-6">
              <label for="fullName" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="fullName"
                placeholder="Jane Doe"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                placeholder="you@example.com"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="preferredBreed" class="form-label">Preferred Breed (optional)</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="preferredBreed"
                placeholder="e.g., Golden Retriever"
              />
            </div>
            <div class="col-md-6">
              <label for="phone" class="form-label">Phone Number (optional)</label>
              <input
                type="tel"
                class="form-control form-control-lg"
                id="phone"
                placeholder="+1 (234) 567-8901"
              />
            </div>
            <div class="col-md-12">
              <label for="message" class="form-label">Tell us what you're looking for</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                rows="4"
                placeholder="Age, temperament, size, etc."></textarea>
            </div>
            <div class="col-12 text-center">
              <button type="submit" class="btn btn-outline-light btn-lg rounded-pill px-4 mt-3">
                <i class="ri-sparkling-2-line me-1"></i> Find My Pup
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
