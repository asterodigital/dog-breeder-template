---
import Logo from './_topbar/_logo.astro'
import { getPathPrefix } from '../../../../../utils/path'
const currentPath = Astro.url.pathname
---

<div class="sticky-top z-3">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-body">
    <div class="container">
      <!-- Brand Logo or Text -->
      <a class="navbar-brand d-flex align-items-center" href={getPathPrefix('/theme/2/home')}>
        <Logo />
      </a>

      <!-- Offcanvas Toggler -->
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasNavbar"
        aria-controls="offcanvasNavbar"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Offcanvas Menu -->
      <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar">
        <div class="offcanvas-header">
          <a class="navbar-brand d-flex align-items-center" href={getPathPrefix('/theme/2/home')}>
            <Logo />
          </a>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"
          ></button>
        </div>
        <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
          <ul class="navbar-nav navbar-underline justify-content-end">
            <!-- Search for Smaller Screens -->
            <form class="d-flex d-lg-none mb-2" role="search">
              <input
                class="form-control form-control-lg me-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
              />
              <button class="btn btn-primary btn-lg" type="submit">
                <i class="ri-search-line"></i>
              </button>
            </form>

            <li class="nav-item">
              <a
                class={`nav-link${currentPath === getPathPrefix('/theme/2/home') ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/home')}>Home</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === getPathPrefix('/theme/2/about') ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/about')}>About</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === getPathPrefix('/theme/2/blog-1') ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/blog-1')}>Blog</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === getPathPrefix('/theme/2/post-1') ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/post-1')}>Post</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === getPathPrefix('/theme/2/breeding-philosophy') ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/breeding-philosophy')}>Philosophy</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === getPathPrefix('/theme/2/faq') ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/faq')}>FAQs</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === getPathPrefix('/theme/2/gallery') ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/gallery')}>Gallery</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === getPathPrefix('/theme/2/puppies') ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/puppies')}>Puppies</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === getPathPrefix('/theme/2/shop') ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/shop')}>Shop</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === getPathPrefix('/theme/2/testimonials') ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/testimonials')}>Testimonials</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === getPathPrefix('/theme/2/contact') ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/contact')}>Contact</a
              >
            </li>

            <!-- Contact Details for Smaller Screens -->
            <div class="d-flex d-lg-none align-items-start mt-2">
              <i class="ri-phone-fill text-primary fs-3 me-2"></i>
              <div>
                <small class="text-uppercase">Call Us</small>
                <a href="tel:+12345678901" class="d-block text-body text-decoration-none"
                  >+1 (234) 567-8901</a
                >
              </div>
            </div>
            <div class="d-flex d-lg-none align-items-start mt-2">
              <i class="ri-mail-fill text-primary fs-3 me-2"></i>
              <div>
                <small class="text-uppercase">Email</small>
                <a href="mailto:hello@email.com" class="d-block text-body text-decoration-none"
                  >hello@email.com</a
                >
              </div>
            </div>
          </ul>
        </div>
      </div>
    </div>
  </nav>
  <!-- Search Bar and Contact Info -->
  <div class="text-bg-dark border-top d-none d-lg-block py-2">
    <div class="container">
      <div class="row align-items-center">
        <!-- Left: Search Bar -->
        <div class="col-4">
          <form class="d-flex" role="search">
            <input
              class="form-control form-control-lg me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button class="btn btn-outline-primary btn-lg" type="submit">
              <i class="ri-search-line"></i>
            </button>
          </form>
        </div>

        <!-- Right: Contact Info -->
        <div class="col-5 d-flex text-light justify-content-end pe-0 ms-auto">
          <!-- Phone -->
          <div class="d-flex align-items-start me-4">
            <i class="ri-phone-fill text-primary fs-3 me-2"></i>
            <div>
              <small class="text-uppercase">Call Us</small>
              <a href="tel:+12345678901" class="d-block text-light fw-semibold text-decoration-none"
                >+1 (234) 567-8901</a
              >
            </div>
          </div>

          <!-- Email -->
          <div class="d-flex align-items-start">
            <i class="ri-mail-fill text-primary fs-3 me-2"></i>
            <div>
              <small class="text-uppercase">Email</small>
              <a
                href="mailto:hello@email.com"
                class="d-block text-light fw-semibold text-decoration-none">hello@email.com</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
