---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Puppies" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style="background-image: url('/dist/assets/img/breederspot-images/golden-retriever-1.jpg'); background-size: cover; background-position: center; height: 500px;"
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div
      class="position-relative d-flex flex-column justify-content-center align-items-center h-100 px-3"
    >
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="bg-primary-pale text-primary d-inline-flex rounded-pill fs-5 px-4 py-2 mb-2">
            Available Puppies
          </h1>
          <h1 class="display-4 fw-bold mb-3">Meet our puppies ready for adoption</h1>
          <p class="fs-4 mb-0">
            Meet our current Golden Retriever puppies who are ready to find their forever homes —
            lovingly raised, health-checked, and socialized to become joyful companions for
            individuals, couples, and families alike.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Puppies Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row gy-4">
        <!-- Sidebar / Filter Column -->
        <div class="col-lg-3">
          <div class="sticky-top z-1" style="top: 80px;">
            <div class="card rounded-5 border p-3">
              <div class="card-body">
                <h5 class="fs-4 fw-semibold mt-1 mb-3">Filter Puppies</h5>
                <div class="mb-3">
                  <label for="breed" class="form-label">Breed</label>
                  <select class="form-select form-select-lg" id="breed">
                    <option value="">All Breeds</option>
                    <option>Golden Retriever</option>
                    <option>German Shepherd</option>
                    <option>Labrador</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="location" class="form-label">Location</label>
                  <input
                    type="text"
                    class="form-control form-control-lg"
                    id="location"
                    placeholder="City or ZIP"
                  />
                </div>
                <div class="mb-3">
                  <label class="form-label">Gender</label>
                  <div class="form-check form-check-lg">
                    <input class="form-check-input" type="radio" name="gender" id="male" />
                    <label class="form-check-label" for="male">Male</label>
                  </div>
                  <div class="form-check form-check-lg">
                    <input class="form-check-input" type="radio" name="gender" id="female" />
                    <label class="form-check-label" for="female">Female</label>
                  </div>
                </div>
                <button class="btn btn-lg btn-outline-primary rounded-pill w-100 mt-2"
                  >Search</button
                >
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-9">
          <div class="row g-4">
            <!-- Pet 1 -->
            <div class="col-sm-6 col-lg-4">
              <div class="card border h-100 rounded-5 p-0 position-relative">
                <figure class="img-scale rounded-top-5 mb-0">
                  <a href={getPathPrefix('/theme/2/puppy-details')}
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/puppy-img-1.jpg')}
                      class="card-img-top rounded-0"
                      alt="Pet Image"
                    /></a
                  >
                </figure>

                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 start-0 fs-6 m-3"
                >
                  12 weeks
                </span>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-3"
                >
                  <i class="ri-men-line"></i>
                </span>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a href={getPathPrefix('/theme/2/puppy-details')} class="text-decoration-none"
                        >Charlie</a
                      >
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border"
                      >Golden Retriever</span
                    >
                  </div>
                  <p class="card-text text-muted mb-2">Austin, TX</p>
                  <p class="card-text">
                    Charlie is a playful, curious pup who loves treats and chasing butterflies!
                  </p>
                  <a
                    href={getPathPrefix('/theme/2/puppy-details')}
                    class="btn btn-lg btn-primary rounded-pill w-100"
                  >
                    More Info <i class="ri-arrow-right-line"></i>
                  </a>
                </div>
              </div>
            </div>

            <!-- Pet 2 -->
            <div class="col-sm-6 col-lg-4">
              <div class="card border h-100 rounded-5 p-0 position-relative">
                <figure class="img-scale rounded-top-5 mb-0">
                  <a href="#"
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/puppy-img-4.jpg')}
                      class="card-img-top rounded-0"
                      alt="Pet Image"
                    /></a
                  >
                </figure>

                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 start-0 fs-6 m-3"
                >
                  4 months
                </span>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-3"
                >
                  <i class="ri-men-line"></i>
                </span>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a href="#" class="text-decoration-none">Milo</a>
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border"
                      >Golden Retriever</span
                    >
                  </div>
                  <p class="card-text text-muted mb-2">Portland, OR</p>
                  <p class="card-text">
                    Milo is a playful and loving pup with a knack for sneaking onto the couch.
                  </p>
                  <a
                    href={getPathPrefix('/theme/2/puppy-details')}
                    class="btn btn-lg btn-primary rounded-pill w-100"
                  >
                    More Info <i class="ri-arrow-right-line"></i>
                  </a>
                </div>
              </div>
            </div>

            <!-- Pet 3 -->
            <div class="col-sm-6 col-lg-4">
              <div class="card border h-100 rounded-5 p-0 position-relative">
                <figure class="img-scale rounded-top-5 mb-0">
                  <a href="#"
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/puppy-img-5.jpg')}
                      class="card-img-top rounded-0"
                      alt="Pet Image"
                    /></a
                  >
                </figure>

                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 start-0 fs-6 m-3"
                >
                  12 weeks
                </span>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-3"
                >
                  <i class="ri-women-line"></i>
                </span>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a href="#" class="text-decoration-none">Rosie</a>
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border"
                      >Golden Retriever</span
                    >
                  </div>
                  <p class="card-text text-muted mb-2">Charlotte, NC</p>
                  <p class="card-text">
                    Rosie is an energetic pup who likes making new friends at the park.
                  </p>
                  <a
                    href={getPathPrefix('/theme/2/puppy-details')}
                    class="btn btn-lg btn-primary rounded-pill w-100"
                  >
                    More Info <i class="ri-arrow-right-line"></i>
                  </a>
                </div>
              </div>
            </div>

            <!-- Pet 4 -->
            <div class="col-sm-6 col-lg-4">
              <div class="card border h-100 rounded-5 p-0 position-relative">
                <figure class="img-scale rounded-top-5 mb-0">
                  <a href="#"
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/puppy-img-6.jpg')}
                      class="card-img-top rounded-0"
                      alt="Pet Image"
                    /></a
                  >
                </figure>

                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 start-0 fs-6 m-3"
                >
                  2 months
                </span>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-3"
                >
                  <i class="ri-men-line"></i>
                </span>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a href="#" class="text-decoration-none">Cooper</a>
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border"
                      >Golden Retriever</span
                    >
                  </div>
                  <p class="card-text text-muted mb-2">San Diego, CA</p>
                  <p class="card-text">
                    Cooper loves exploring the backyard jungle and guarding his favorite bone.
                  </p>
                  <a
                    href={getPathPrefix('/theme/2/puppy-details')}
                    class="btn btn-lg btn-primary rounded-pill w-100"
                  >
                    More Info <i class="ri-arrow-right-line"></i>
                  </a>
                </div>
              </div>
            </div>

            <!-- Pet 5 -->
            <div class="col-sm-6 col-lg-4">
              <div class="card border h-100 rounded-5 p-0 position-relative">
                <figure class="img-scale rounded-top-5 mb-0">
                  <a href={getPathPrefix('/theme/2/puppy-details')}
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/puppy-img-1.jpg')}
                      class="card-img-top rounded-0"
                      alt="Pet Image"
                    /></a
                  >
                </figure>

                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 start-0 fs-6 m-3"
                >
                  12 weeks
                </span>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-3"
                >
                  <i class="ri-men-line"></i>
                </span>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a href={getPathPrefix('/theme/2/puppy-details')} class="text-decoration-none"
                        >Pluto</a
                      >
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border"
                      >Golden Retriever</span
                    >
                  </div>
                  <p class="card-text text-muted mb-2">Austin, TX</p>
                  <p class="card-text">
                    Pluto is a playful, curious pup who loves treats and chasing butterflies!
                  </p>
                  <a
                    href={getPathPrefix('/theme/2/puppy-details')}
                    class="btn btn-lg btn-primary rounded-pill w-100"
                  >
                    More Info <i class="ri-arrow-right-line"></i>
                  </a>
                </div>
              </div>
            </div>

            <!-- Pet 6 -->
            <div class="col-sm-6 col-lg-4">
              <div class="card border h-100 rounded-5 p-0 position-relative">
                <figure class="img-scale rounded-top-5 mb-0">
                  <a href="#"
                    ><img
                      src={getAssetPrefix('/assets/img/breederspot-images/puppy-img-6.jpg')}
                      class="card-img-top rounded-0"
                      alt="Pet Image"
                    /></a
                  >
                </figure>

                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 start-0 fs-6 m-3"
                >
                  2 months
                </span>
                <span
                  class="badge bg-light text-primary rounded-pill shadow-sm position-absolute top-0 end-0 fs-5 p-2 m-3"
                >
                  <i class="ri-men-line"></i>
                </span>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a href="#" class="text-decoration-none">Rocky</a>
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border"
                      >Golden Retriever</span
                    >
                  </div>
                  <p class="card-text text-muted mb-2">San Diego, CA</p>
                  <p class="card-text">
                    Rocky loves exploring the backyard jungle and guarding his favorite bone.
                  </p>
                  <a
                    href={getPathPrefix('/theme/2/puppy-details')}
                    class="btn btn-lg btn-primary rounded-pill w-100"
                  >
                    More Info <i class="ri-arrow-right-line"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Pagination -->
          <nav class="mt-5 d-flex justify-content-center">
            <ul class="pagination pagination-lg z-1">
              <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Litters Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="text-center">
        <h2 class="bg-primary-pale d-inline-flex rounded-pill fs-5 px-4 py-2 mb-3">
          Upcoming Litters
        </h2>
        <h3 class="display-6 fw-bold mb-4">New golden pups coming soon!</h3>
      </div>
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <div class="row g-4">
            <div class="col-md-6">
              <div class="card bg-primary-pale card-lift rounded-5 h-100 p-0">
                <img
                  src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-3.jpg')}
                  class="card-img-top rounded-top-5"
                  style="max-height: 300px; width: 100%; object-fit: cover;"
                  alt="The Willow Litter"
                />
                <div class="card-body p-4">
                  <h5 class="card-title fs-3 fw-bold mb-1">The Willow Litter</h5>
                  <p class="text-primary fs-5 fw-semibold mb-1">Parents: Luna × Finn</p>
                  <p class="text-body-secondary mb-3">Expected Date: June 15, 2025</p>
                  <p class="fs-5 mb-3">
                    This pairing brings together two gentle Golden Retrievers - known for their calm
                    personalities and beautiful coats.
                  </p>
                  <a href="#" class="btn btn-lg btn-primary rounded-pill px-4">
                    Join Waitlist <i class="ri-arrow-right-line align-middle ms-1"></i>
                  </a>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card bg-primary-pale card-lift rounded-5 h-100 p-0">
                <img
                  src={getAssetPrefix('/assets/img/breederspot-images/golden-retriever-3.jpg')}
                  class="card-img-top rounded-top-5"
                  style="max-height: 300px; width: 100%; object-fit: cover;"
                  alt="The Maple Litter"
                />
                <div class="card-body p-4">
                  <h5 class="card-title fs-3 fw-bold mb-1">The Maple Litter</h5>
                  <p class="text-primary fs-5 fw-semibold mb-1">Parents: Caesar × Mini</p>
                  <p class="text-body-secondary mb-3">Expected Date: July 2, 2025</p>
                  <p class="fs-5 mb-3">
                    These Golden Retriever pups will be loving, smart, and irresistibly sweet -
                    perfect for allergy-sensitive homes.
                  </p>
                  <a href="#" class="btn btn-lg btn-primary rounded-pill px-4">
                    Join Waitlist <i class="ri-arrow-right-line align-middle ms-1"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Adoption Process Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="text-center">
        <h2 class="bg-primary-pale d-inline-flex rounded-pill fs-5 px-4 py-2 mb-3">
          Adoption Process
        </h2>
        <h3 class="display-6 fw-bold mb-4">Your journey to puppy parenthood</h3>
      </div>
      <div class="row g-4">
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border rounded-5 h-100 p-4">
            <div class="card-body">
              <span class="display-5 fw-semibold text-primary">01.</span>
              <p class="fs-4 fw-semibold mb-2">Application</p>
              <p class="fs-5 mb-0">
                Start by filling out our quick form so we can learn more about you and match you
                with the right puppy.
              </p>
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border rounded-5 h-100 p-4">
            <div class="card-body">
              <span class="display-5 fw-semibold text-primary">02.</span>
              <p class="fs-4 fw-semibold mb-2">Approval</p>
              <p class="fs-5 mb-0">
                We’ll review your application and reach out for a short conversation to ensure our
                puppies go to loving homes.
              </p>
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border rounded-5 h-100 p-4">
            <div class="card-body">
              <span class="display-5 fw-semibold text-primary">03.</span>
              <p class="fs-4 fw-semibold mb-2">Waitlist</p>
              <p class="fs-5 mb-0">
                Once approved, you’ll join the waitlist for upcoming litters. We’ll keep you updated
                with litter announcements.
              </p>
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border rounded-5 h-100 p-4">
            <div class="card-body">
              <span class="display-5 fw-semibold text-primary">04.</span>
              <p class="fs-4 fw-semibold mb-2">Homecoming</p>
              <p class="fs-5 mb-0">
                When your puppy is ready, you’ll be invited to meet them. After final checks, you’ll
                bring home a happy companion!
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="text-light position-relative"
    style="background-image: url('/dist/assets/img/breederspot-images/gradient.jpg'); background-size: cover; background-position: center;"
  >
    <div
      class="position-absolute top-0 start-0 w-100 h-100"
      style="background-color: rgba(0, 0, 0, 0.1);"
    >
    </div>
    <div class="container py-5 position-relative">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h2 class="display-6 fw-bold mb-3">
            Find your perfect pup—<em>ethically, responsibly, and with love</em>.
          </h2>
          <p class="fs-5 mb-4">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum quibusdam, libero
            corporis nemo!
          </p>
          <form class="row text-start g-3">
            <div class="col-md-6">
              <label for="fullName" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="fullName"
                placeholder="Jane Doe"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                placeholder="you@example.com"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="preferredBreed" class="form-label">Preferred Breed (optional)</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="preferredBreed"
                placeholder="e.g., Golden Retriever"
              />
            </div>
            <div class="col-md-6">
              <label for="phone" class="form-label">Phone Number (optional)</label>
              <input
                type="tel"
                class="form-control form-control-lg"
                id="phone"
                placeholder="+1 (234) 567-8901"
              />
            </div>
            <div class="col-md-12">
              <label for="message" class="form-label">Tell us what you're looking for</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                rows="4"
                placeholder="Age, temperament, size, etc."></textarea>
            </div>
            <div class="col-12 text-center">
              <button type="submit" class="btn btn-outline-light btn-lg rounded-pill px-4 mt-3">
                <i class="ri-sparkling-2-line me-1"></i> Find My Pup
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
