---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Puppy Details"
  description="Dedicated to raising happy, healthy puppies in loving homes."
>
  <!-- Main Section -->
  <section class="bg-body py-5">
    <div class="container">
      <!-- Back Button -->
      <div class="mb-4">
        <a
          href={getPathPrefix('/theme/2/puppies')}
          class="btn btn-lg btn-outline-primary rounded-pill px-4"
        >
          <i class="ri-arrow-left-line"></i> Back to Puppies
        </a>
      </div>

      <!-- Puppy Info Row -->
      <div class="row row-cols-1 row-cols-md-2 g-4 align-items-center">
        <!-- Image Column -->
        <div class="col">
          <figure class="img-scale rounded">
            <img
              src={getAssetPrefix('/assets/img/breederspot-images/puppy-img-1.jpg')}
              class="img-fluid"
              alt="Charlie the Golden Retriever"
            />
          </figure>
        </div>

        <!-- Details Column -->
        <div class="col">
          <div class="d-flex align-items-center mb-2">
            <h2 class="display-6 fw-bold mb-0 me-2">Charlie</h2>
            <span class="badge text-primary-emphasis bg-secondary-subtle border"
              >Golden Retriever</span
            >
          </div>

          <p class="fs-5 mb-3">
            Charlie is a happy-go-lucky pup who loves belly rubs, chasing squeaky toys, and making
            new friends. He's been raised in a loving home environment and is already starting basic
            training. If you're looking for a loyal and playful companion, Charlie's your guy!
          </p>

          <h4 class="fw-bold fs-3 mb-3">$1,200.00</h4>

          <div class="d-flex flex-wrap gap-2 mb-4">
            <button class="btn btn-lg btn-primary rounded-pill px-4"
              ><i class="ri-price-tag-3-line me-1"></i>Reserve</button
            >
            <button class="btn btn-lg btn-outline-primary rounded-pill px-4"
              ><i class="ri-information-2-line me-1"></i>Learn More</button
            >
          </div>

          <table class="table table-hover border fs-5">
            <tbody>
              <tr>
                <th scope="row">Gender</th>
                <td>Male</td>
              </tr>
              <tr>
                <th scope="row">Age</th>
                <td>12 weeks</td>
              </tr>
              <tr>
                <th scope="row">Weight</th>
                <td>6.5 lbs</td>
              </tr>
              <tr>
                <th scope="row">Vaccinations</th>
                <td>Up to date</td>
              </tr>
              <tr>
                <th scope="row">Location</th>
                <td>Austin, TX</td>
              </tr>
              <tr class="table-secondary">
                <th scope="row">Availability</th>
                <td>Ready to go home now</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <!-- Details Section -->
  <section class="bg-body pb-5">
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
          <div class="text-center">
            <h3 class="bg-primary-pale d-inline-flex rounded-pill fs-5 px-4 py-2 mb-3">Traits</h3>
            <h3 class="display-6 fw-bold mb-3">Temperament of Charlie</h3>
          </div>

          <label for="progressbar-trainability" class="form-label fs-5">Trainability</label>
          <div
            class="progress mb-3"
            id="progressbar-trainability"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="85"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 85%">
            </div>
          </div>
          <label for="progressbar-friendliness" class="form-label fs-5">Friendliness</label>
          <div
            class="progress mb-3"
            id="progressbar-friendliness"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="90"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 90%">
            </div>
          </div>
          <label for="progressbar-adaptability" class="form-label fs-5">Adaptability</label>
          <div
            class="progress mb-3"
            id="progressbar-adaptability"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="90"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 90%">
            </div>
          </div>
          <label for="progressbar-intelligence" class="form-label fs-5">Intelligence</label>
          <div
            class="progress mb-3"
            id="progressbar-intelligence"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="85"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 85%">
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="text-light position-relative"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/gradient.jpg')}'); background-size: cover; background-position: center;`}
  >
    <div
      class="position-absolute top-0 start-0 w-100 h-100"
      style="background-color: rgba(0, 0, 0, 0.1);"
    >
    </div>
    <div class="container py-5 position-relative">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h2 class="display-6 fw-bold mb-3">
            Find your perfect pupâ€”<em>ethically, responsibly, and with love</em>.
          </h2>
          <p class="fs-5 mb-4">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum quibusdam, libero
            corporis nemo!
          </p>
          <form class="row text-start g-3">
            <div class="col-md-6">
              <label for="fullName" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="fullName"
                placeholder="Jane Doe"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                placeholder="you@example.com"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="preferredBreed" class="form-label">Preferred Breed (optional)</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="preferredBreed"
                placeholder="e.g., Golden Retriever"
              />
            </div>
            <div class="col-md-6">
              <label for="phone" class="form-label">Phone Number (optional)</label>
              <input
                type="tel"
                class="form-control form-control-lg"
                id="phone"
                placeholder="+1 (234) 567-8901"
              />
            </div>
            <div class="col-md-12">
              <label for="message" class="form-label">Tell us what you're looking for</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                rows="4"
                placeholder="Age, temperament, size, etc."></textarea>
            </div>
            <div class="col-12 text-center">
              <button type="submit" class="btn btn-outline-light btn-lg rounded-pill px-4 mt-3">
                <i class="ri-sparkling-2-line me-1"></i> Find My Pup
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
