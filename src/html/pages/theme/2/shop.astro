---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Shop" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/golden-retriever-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div
      class="position-relative d-flex flex-column justify-content-center align-items-center h-100 px-3"
    >
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="bg-primary-subtle text-primary d-inline-flex rounded-pill fs-5 px-4 py-2 mb-2">
            Our Shop
          </h1>
          <h1 class="display-4 fw-bold mb-3">Thoughtfully chosen essentials for your pup</h1>
          <p class="fs-4 mb-0">
            Thoughtfully selected products to support your Golden Retriever's health, happiness, and
            everyday adventures — from puppy essentials to lifelong favorites.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Shop Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row gy-4">
        <!-- Sidebar / Filter Column -->
        <div class="col-lg-3">
          <div class="sticky-top z-1" style="top: 80px;">
            <div class="card rounded-5 border p-3">
              <div class="card-body">
                <h5 class="fs-4 fw-semibold mt-1 mb-3">Filter Products</h5>

                <!-- Category -->
                <div class="mb-3">
                  <label for="category" class="form-label">Category</label>
                  <select class="form-select form-select-lg" id="category">
                    <option value="">All Products</option>
                    <option>Apparel</option>
                    <option>Collars</option>
                    <option>Food</option>
                    <option>Leashes</option>
                    <option>Toys</option>
                  </select>
                </div>

                <!-- Size -->
                <div class="mb-3">
                  <label for="size" class="form-label">Size</label>
                  <select class="form-select form-select-lg" id="size">
                    <option value="">All Sizes</option>
                    <option>Small</option>
                    <option>Medium</option>
                    <option>Large</option>
                  </select>
                </div>

                <!-- Age Group -->
                <div class="mb-3">
                  <label for="ageGroup" class="form-label">Age Group</label>
                  <select class="form-select form-select-lg" id="ageGroup">
                    <option value="">Any</option>
                    <option>Puppy</option>
                    <option>Adult</option>
                    <option>Senior</option>
                  </select>
                </div>

                <!-- Price Range -->
                <div class="mb-3">
                  <label class="form-label">Price Range</label>
                  <div class="d-flex gap-2">
                    <input type="number" class="form-control form-control-lg" placeholder="Min" />
                    <input type="number" class="form-control form-control-lg" placeholder="Max" />
                  </div>
                </div>

                <!-- Sort By -->
                <div class="mb-3">
                  <label for="sortBy" class="form-label">Sort By</label>
                  <select class="form-select form-select-lg" id="sortBy">
                    <option value="default">Default</option>
                    <option value="newest">Newest First</option>
                    <option value="priceLowHigh">Price: Low to High</option>
                    <option value="priceHighLow">Price: High to Low</option>
                  </select>
                </div>

                <!-- Search Button -->
                <button class="btn btn-lg btn-outline-primary rounded-pill w-100 mt-2"
                  >Apply Filters</button
                >
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-9">
          <div class="row g-4">
            <!-- Product 1 -->
            <div class="col-sm-6 col-xl-4">
              <div class="card rounded-5 border h-100 p-0">
                <figure class="img-scale rounded-top-5 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-1.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a
                        href={getPathPrefix('/theme/2/shop-details')}
                        class="text-decoration-none text-body">Duck Toy</a
                      >
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border">Toys</span>
                  </div>
                  <p class="card-text text-muted fs-5 mb-2">$25.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary rounded-pill w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary rounded-pill">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <!-- Product 2 -->
            <div class="col-sm-6 col-xl-4">
              <div class="card rounded-5 border h-100 p-0">
                <figure class="img-scale rounded-top-5 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-2.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a href="#" class="text-decoration-none text-body">Rubber Toy</a>
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border">Toys</span>
                  </div>
                  <p class="card-text text-muted fs-5 mb-2">$15.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary rounded-pill w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary rounded-pill">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <!-- Product 3 -->
            <div class="col-sm-6 col-xl-4">
              <div class="card rounded-5 border h-100 p-0">
                <figure class="img-scale rounded-top-5 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-collar-3.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a href="#" class="text-decoration-none text-body">Dog Collar</a>
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border"
                      >Collars</span
                    >
                  </div>
                  <p class="card-text text-muted fs-5 mb-2">$30.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary rounded-pill w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary rounded-pill">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <!-- Product 4 -->
            <div class="col-sm-6 col-xl-4">
              <div class="card rounded-5 border h-100 p-0">
                <figure class="img-scale rounded-top-5 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-toy-3.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a href="#" class="text-decoration-none text-body">Rubber Toy</a>
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border">Toys</span>
                  </div>
                  <p class="card-text text-muted fs-5 mb-2">$35.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary rounded-pill w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary rounded-pill">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <!-- Product 5 -->
            <div class="col-sm-6 col-xl-4">
              <div class="card rounded-5 border h-100 p-0">
                <figure class="img-scale rounded-top-5 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-collar-1.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a href="#" class="text-decoration-none text-body">Dog Collar</a>
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border"
                      >Collars</span
                    >
                  </div>
                  <p class="card-text text-muted fs-5 mb-2">$10.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary rounded-pill w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary rounded-pill">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <!-- Product 6 -->
            <div class="col-sm-6 col-xl-4">
              <div class="card rounded-5 border h-100 p-0">
                <figure class="img-scale rounded-top-5 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/breederspot-images/dog-collar-2.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>

                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title mb-0">
                      <a href="#" class="text-decoration-none text-body">Dog Collar</a>
                    </h5>
                    <span class="badge text-primary-emphasis bg-secondary-subtle border"
                      >Collars</span
                    >
                  </div>
                  <p class="card-text text-muted fs-5 mb-2">$10.00</p>
                  <div class="d-flex gap-2">
                    <a href="#" class="btn btn-lg btn-primary rounded-pill w-100">
                      <i class="ri-shopping-cart-2-line me-2"></i>Add to Cart
                    </a>
                    <a href="#" class="btn btn-lg btn-outline-primary rounded-pill">
                      <i class="ri-heart-line"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Pagination -->
          <nav class="mt-5 d-flex justify-content-center">
            <ul class="pagination pagination-lg z-1">
              <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="text-light position-relative"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/gradient.jpg')}'); background-size: cover; background-position: center;`}
  >
    <div
      class="position-absolute top-0 start-0 w-100 h-100"
      style="background-color: rgba(0, 0, 0, 0.1);"
    >
    </div>
    <div class="container py-5 position-relative">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h2 class="display-6 fw-bold mb-3">
            Find your perfect pup—<em>ethically, responsibly, and with love</em>.
          </h2>
          <p class="fs-5 mb-4">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum quibusdam, libero
            corporis nemo!
          </p>
          <form class="row text-start g-3">
            <div class="col-md-6">
              <label for="fullName" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="fullName"
                placeholder="Jane Doe"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                placeholder="you@example.com"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="preferredBreed" class="form-label">Preferred Breed (optional)</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="preferredBreed"
                placeholder="e.g., Golden Retriever"
              />
            </div>
            <div class="col-md-6">
              <label for="phone" class="form-label">Phone Number (optional)</label>
              <input
                type="tel"
                class="form-control form-control-lg"
                id="phone"
                placeholder="+1 (234) 567-8901"
              />
            </div>
            <div class="col-md-12">
              <label for="message" class="form-label">Tell us what you're looking for</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                rows="4"
                placeholder="Age, temperament, size, etc."></textarea>
            </div>
            <div class="col-12 text-center">
              <button type="submit" class="btn btn-outline-light btn-lg rounded-pill px-4 mt-3">
                <i class="ri-sparkling-2-line me-1"></i> Find My Pup
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
