---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout title="Error" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Main Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row text-center">
        <div class="col-lg-6 offset-lg-3">
          <div class="row">
            <div class="col-6 offset-3">
              <figure class="p-3 mb-0">
                <img
                  src={getAssetPrefix('/assets/img/breederspot-images/404-img.png')}
                  class="img-fluid"
                  alt="404 Not Found"
                />
              </figure>
            </div>
          </div>
          <h1 class="mb-2" data-aos="fade-in" data-aos-duration="600">
            <em>Lost in the dog park of the internet?</em>
          </h1>
          <p class="lead mb-3">
            The page you're looking for doesn't exist or has been moved. Head back to the home page
            to start fresh.
          </p>
          <div class="d-flex flex-wrap justify-content-center gap-2">
            <button class="btn btn-lg btn-primary rounded-pill px-4"
              ><i class="ri-home-2-line me-2"></i>Back to Home</button
            >
            <button class="btn btn-lg btn-outline-primary rounded-pill px-4"
              ><i class="ri-information-2-line me-2"></i>Learn More</button
            >
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
