                  <img
                    src={getAssetPrefix('/assets/img/cat-theme/1/persian-2.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Share Your Photos Section -->
  <section class="bg-body pb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <div class="card rounded-5 bg-primary-subtle p-4">
            <h2 class="display-5 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="1200">
              Share Your Photos
            </h2>
            <div class="card-body">
              <p class="mb-3" data-aos="fade-right" data-aos-duration="1200">
                We'd love to feature your furry kitten! Send us your favorite photos â€” whether it's
                your kitten's first day home, playtime in the yard, or cozy moments on the couch.
              </p>
              <p class="mb-3" data-aos="fade-right" data-aos-duration="1200">
                To share, simply email your images to <strong>hello@email.com</strong> with the following
                details:
              </p>
              <ul class="list-unstyled mb-3" data-aos="fade-right" data-aos-duration="1200">
                <li><i class="ri-check-line text-primary me-2"></i>Cat's Name</li>
                <li><i class="ri-check-line text-primary me-2"></i>Breed</li>
                <li><i class="ri-check-line text-primary me-2"></i>Description</li>
              </ul>
              <small class="text-muted d-block" data-aos="fade-right" data-aos-duration="1200">
                Submitted photos may be featured on our website or social channels. We will never
                share personal contact information.
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content bg-transparent border-0">
        <div class="modal-body p-0">
          <img id="modalImage" src="" class="img-fluid rounded-5 w-100" alt="Full Size Image" />
        </div>
      </div>
    </div>
  </div>
</Layout>
