---
import Layout from './layout.astro'
import { getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Error" description="Dedicated to raising happy, healthy kittens in loving homes.">
  <section class="bg-body d-flex align-items-center py-5">
    <div class="container text-center">
      <h1
        class="display-5 fw-semibold"
        data-aos="fade-up"
        data-aos-delay="100"
        data-aos-duration="1200"
      >
        <span class="text-primary">404</span> Page Not Found
      </h1>
      <p
        class="fs-5 mb-4 text-muted"
        data-aos="fade-up"
        data-aos-delay="200"
        data-aos-duration="1200"
      >
        Sorry, the page you are looking for does not exist or has been moved.
      </p>
      <div
        class="d-flex justify-content-center gap-2"
        data-aos="fade-up"
        data-aos-delay="300"
        data-aos-duration="1200"
      >
        <a href={getPathPrefix('/theme/7/home')} class="btn btn-lg btn-primary rounded-pill px-3"
          ><i class="ri-home-2-line me-2"></i>Go to Home</a
        >
        <a
          href={getPathPrefix('/theme/7/contact')}
          class="btn btn-lg btn-outline-primary rounded-pill px-3"
          ><i class="ri-information-2-line me-2"></i>Contact Us</a
        >
      </div>
    </div>
  </section>
</Layout>
