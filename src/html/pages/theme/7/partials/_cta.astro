---
import { getAssetPrefix } from '../../../../../utils/path.js'
---

<!-- Newsletter CTA Section -->
<section
  class="position-relative text-light text-center"
  style={`background-image: url('${getAssetPrefix('/assets/img/cat-theme/1/persian-2.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
>
  <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-75"></div>
  <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
    <div class="row">
      <div class="col-lg-6 offset-lg-3" data-aos="fade-in" data-aos-duration="1200">
        <h5 class="display-5 fw-semibold mb-2">Stay Connected With Us</h5>
        <p class="fs-5 mb-4">
          Subscribe to our newsletter for updates on upcoming litters, care tips, and stories from
          our family â€” straight to your inbox.
        </p>
        <form class="row g-2 justify-content-center">
          <div class="col-sm-9">
            <input
              type="email"
              class="form-control form-control-lg"
              placeholder="Enter your email"
              required
            />
          </div>
          <div class="col-sm-3">
            <button type="submit" class="btn btn-primary btn-lg w-100">Notify Me</button>
          </div>
        </form>
        <p class="mt-3 mb-0">We send only what matters. No spam, ever.</p>
      </div>
    </div>
  </div>
</section>
