---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Kittens" description="Dedicated to raising happy, healthy kittens in loving homes.">
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/cat-theme/1/persian-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold mb-3" data-aos="fade-up" data-aos-duration="1200">
            Available Kittens
          </h1>
          <p class="fs-4 mb-4" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1200">
            Meet our happy, healthy kittens—lovingly raised in a nurturing environment with the
            highest standards of care.
          </p>
          <div
            class="d-flex justify-content-center flex-wrap gap-2 mb-2"
            data-aos="fade-in"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <a
              href={getPathPrefix('/theme/7/kittens')}
              class="btn btn-lg btn-primary rounded-pill px-4"
            >
              View Kittens<i class="ri-arrow-right-line ms-1"></i>
            </a>
            <a
              href={getPathPrefix('/theme/7/about')}
              class="btn btn-lg btn-outline-light rounded-pill px-4"
            >
              <i class="ri-information-2-line me-1"></i>Learn More
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Available Kittens Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="text-center mb-4">
        <h2
          class="bg-primary-subtle text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
          data-aos="fade-up"
          data-aos-duration="1200"
        >
          Available Kittens
        </h2>
        <h3
          class="display-5 fw-semibold"
          data-aos="fade-up"
          data-aos-delay="200"
          data-aos-duration="1200"
        >
          Meet Our Persian Kittens
        </h3>
      </div>
      <div class="row g-4">
        <div class="col-md-4">
          <div
            class="card border rounded-5 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="100"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/1/persian-1.jpg')}
              alt="Kitten Luna"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body p-3">
              <h5 class="fw-semibold mb-1">
                <a
                  href={getPathPrefix('/theme/7/kitten-details')}
                  class="text-body text-decoration-none">Luna</a
                >
              </h5>
              <p class="mb-1 text-muted">8 weeks old</p>
              <p class="mb-2">A playful blue-cream female with a gentle, affectionate nature.</p>
              <a
                href={getPathPrefix('/theme/7/kitten-details')}
                class="btn btn-primary rounded-pill w-100 px-4">Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div
            class="card border rounded-5 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/1/persian-3.jpg')}
              alt="Kitten Felix"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body p-3">
              <h5 class="fw-semibold mb-1">
                <a href="#" class="text-body text-decoration-none">Felix</a>
              </h5>
              <p class="mb-1 text-muted">10 weeks old</p>
              <p class="mb-2">A curious white male with striking eyes and a loving personality.</p>
              <a
                href={getPathPrefix('/theme/7/kitten-details')}
                class="btn btn-primary rounded-pill w-100 px-4">Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div
            class="card border rounded-5 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="300"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/1/persian-1.jpg')}
              alt="Kitten Willow"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body p-3">
              <h5 class="fw-semibold mb-1">
                <a href="#" class="text-body text-decoration-none">Willow</a>
              </h5>
              <p class="mb-1 text-muted">7 weeks old</p>
              <p class="mb-2">A sweet tortoiseshell female, very gentle and loves to cuddle.</p>
              <a
                href={getPathPrefix('/theme/7/kitten-details')}
                class="btn btn-primary rounded-pill w-100 px-4">Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div
            class="card border rounded-5 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="400"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/1/persian-3.jpg')}
              alt="Kitten Jasper"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body p-3">
              <h5 class="fw-semibold mb-1">
                <a href="#" class="text-body text-decoration-none">Jasper</a>
              </h5>
              <p class="mb-1 text-muted">9 weeks old</p>
              <p class="mb-2">A bold cream male, playful and outgoing with a soft coat.</p>
              <a
                href={getPathPrefix('/theme/7/kitten-details')}
                class="btn btn-primary rounded-pill w-100 px-4">Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div
            class="card border rounded-5 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="500"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/1/persian-1.jpg')}
              alt="Kitten Daisy"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body p-3">
              <h5 class="fw-semibold mb-1">
                <a href="#" class="text-body text-decoration-none">Daisy</a>
              </h5>
              <p class="mb-1 text-muted">8 weeks old</p>
              <p class="mb-2">A gentle calico female, loves to play and nap in sunny spots.</p>
              <a
                href={getPathPrefix('/theme/7/kitten-details')}
                class="btn btn-primary rounded-pill w-100 px-4">Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div
            class="card border rounded-5 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="600"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/1/persian-3.jpg')}
              alt="Kitten Milo"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body p-3">
              <h5 class="fw-semibold mb-1">
                <a href="#" class="text-body text-decoration-none">Milo</a>
              </h5>
              <p class="mb-1 text-muted">11 weeks old</p>
              <p class="mb-2">A fluffy blue male, very social and loves attention from everyone.</p>
              <a
                href={getPathPrefix('/theme/7/kitten-details')}
                class="btn btn-primary rounded-pill w-100 px-4">Inquire</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Litters Section -->
  <section class="bg-body pb-5">
    <div class="container">
      <div class="text-center mb-4">
        <h2
          class="bg-primary-subtle text-uppercase d-inline-flex rounded-pill fs-6 px-4 py-2 mb-2"
          data-aos="fade-up"
          data-aos-duration="1200"
        >
          Upcoming Litters
        </h2>
        <h3
          class="display-5 fw-semibold"
          data-aos="fade-up"
          data-aos-delay="200"
          data-aos-duration="1200"
        >
          Expecting New Persian Kittens Soon
        </h3>
      </div>
      <div class="row g-4">
        <div class="col-md-6">
          <div
            class="card border rounded-5 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="100"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/1/persian-1.jpg')}
              alt="The Willow Litter"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body p-3">
              <h5 class="fw-semibold fs-4 mb-2">The Willow Litter</h5>
              <p class="mb-1 text-muted"><strong>Parents:</strong> Luna × Finn</p>
              <p class="mb-1 text-muted"><strong>Expected Date: </strong>July 14, 2025</p>
              <p class="mb-2">
                This pairing brings together two incredibly gentle, affectionate Persian Cats.
              </p>
              <a
                href={getPathPrefix('/theme/7/contact')}
                class="btn btn-primary rounded-pill w-100 px-4">Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div
            class="card border rounded-5 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/1/persian-2.jpg')}
              alt="The Maple Litter"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body p-3">
              <h5 class="fw-semibold fs-4 mb-2">The Maple Litter</h5>
              <p class="mb-1 text-muted"><strong>Parents: </strong>Caesar × Mini</p>
              <p class="mb-1 text-muted"><strong>Expected Date: </strong>July 2, 2025</p>
              <p class="mb-2">
                This pairing brings together two incredibly gentle, affectionate Persian Cats.
              </p>
              <a
                href={getPathPrefix('/theme/7/contact')}
                class="btn btn-primary rounded-pill w-100 px-4">Inquire</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
