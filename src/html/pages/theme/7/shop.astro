---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Shop" description="Dedicated to raising happy, healthy kittens in loving homes.">
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/cat-theme/1/persian-1.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold mb-3" data-aos="fade-up" data-aos-duration="1200">
            Shop
          </h1>
          <p class="fs-4 mb-4" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1200">
            Carefully curated products to support every stage of your kitten's journey.
          </p>
          <div
            class="d-flex justify-content-center flex-wrap gap-2 mb-2"
            data-aos="fade-in"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <a
              href={getPathPrefix('/theme/7/kittens')}
              class="btn btn-lg btn-primary rounded-pill px-4"
            >
              View Kittens<i class="ri-arrow-right-line ms-1"></i>
            </a>
            <a
              href={getPathPrefix('/theme/7/about')}
              class="btn btn-lg btn-outline-light rounded-pill px-4"
            >
              <i class="ri-information-2-line me-1"></i>Learn More
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Shop Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row gy-4">
        <!-- Sidebar / Filter Column -->
        <div class="col-lg-3">
          <div class="sticky-top z-1" style="top: 80px;">
            <div class="card rounded-5 border p-3" data-aos="fade-right" data-aos-duration="1200">
              <div class="card-body">
                <h5 class="fs-4 fw-semibold mt-1 mb-3">Filter Products</h5>
                <!-- Category -->
                <div class="mb-3">
                  <label for="category" class="form-label">Category</label>
                  <select class="form-select form-select-lg" id="category">
                    <option value="">All Products</option>
                    <option>Apparel</option>
                    <option>Essentials</option>
                    <option>Toys</option>
                  </select>
                </div>
                <!-- Size -->
                <div class="mb-3">
                  <label for="size" class="form-label">Size</label>
                  <select class="form-select form-select-lg" id="size">
                    <option value="">All Sizes</option>
                    <option>Small</option>
                    <option>Medium</option>
                    <option>Large</option>
                  </select>
                </div>
                <!-- Age Group -->
                <div class="mb-3">
                  <label for="ageGroup" class="form-label">Age Group</label>
                  <select class="form-select form-select-lg" id="ageGroup">
                    <option value="">Any</option>
                    <option>Kitten</option>
                    <option>Adult</option>
                  </select>
                </div>
                <!-- Price Range -->
                <div class="mb-3">
                  <label class="form-label">Price Range</label>
                  <div class="d-flex gap-2">
                    <input type="number" class="form-control form-control-lg" placeholder="Min" />
                    <input type="number" class="form-control form-control-lg" placeholder="Max" />
                  </div>
                </div>
                <!-- Sort By -->
                <div class="mb-3">
                  <label for="sortBy" class="form-label">Sort By</label>
                  <select class="form-select form-select-lg" id="sortBy">
                    <option value="default">Default</option>
                    <option value="newest">Newest First</option>
                    <option value="priceLowHigh">Price: Low to High</option>
                    <option value="priceHighLow">Price: High to Low</option>
                  </select>
                </div>
                <!-- Search Button -->
                <button class="btn btn-lg btn-outline-primary rounded-pill w-100 mt-2"
                  >Apply Filters</button
                >
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-9">
          <div class="row g-4">
            <!-- Product 1 -->
            <div class="col-sm-6 col-xl-4" data-aos="zoom-in-up" data-aos-duration="1200">
              <div class="card rounded-5 border h-100 p-0">
                <figure class="img-scale rounded-top-5 mb-0">
                  <img
                    src={getAssetPrefix('/assets/img/cat-theme/shop/product-1.jpg')}
                    class="card-img-top rounded-0"
                    alt="Product Image"
                  />
                </figure>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-1">
                    <h5 class="card-title fs-5 mb-0">
                      <a
