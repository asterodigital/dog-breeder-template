---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Puppies" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/yorkshire-terrier-3.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>

    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold" data-aos="fade-up" data-aos-duration="1200">
            Available Puppies
          </h1>
          <p class="lead mb-0" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1200">
            Meet our happy, healthy puppies—lovingly raised in a nurturing environment with the
            highest standards of care, socialization, and ethical breeding practices. Each one is
            ready to bring joy, companionship, and unconditional love to their forever home.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Puppies Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <!-- Puppies' Cards -->
          <div class="row g-4">
            <!-- Pet 1 -->
            <div class="col-md-4">
              <div
                class="card border h-100 position-relative p-0"
                data-aos="flip-up"
                data-aos-duration="1200"
              >
                <figure class="img-scale rounded-top-4 mb-0">
                  <img
                    src={getAssetPrefix(
                      '/assets/img/breederspot-images/yorkshire-terrier-puppy-1.jpg'
                    )}
                    class="card-img-top rounded-0"
                    style="max-height: 300px; object-fit: cover;"
                    alt="Pet Image"
                  />
                </figure>
                <span class="badge bg-success text-light position-absolute top-0 end-0 fs-6 m-2">
                  Available
                </span>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a
                        href={getPathPrefix('/theme/6/puppy-details')}
                        class="text-decoration-none text-body">Charlie</a
                      >
                    </h5>
                    <p class="text-success fs-4 fw-semibold mb-0">$1200</p>
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge text-primary bg-primary-subtle fs-6">Yorkshire Terrier</span>
                    <span class="badge text-primary bg-primary-subtle fs-6">6 Weeks</span>
                  </div>
                  <p class="card-text">
                    Charlie is a playful, curious pup who loves treats and chasing butterflies!
                  </p>
                </div>
                <div class="d-flex gap-3 px-3 pb-3">
                  <a
                    href={getPathPrefix('/theme/6/puppy-details')}
                    class="btn btn-lg btn-primary w-100"
                  >
                    Inquire<i class="ri-arrow-right-line ms-2"></i>
                  </a>
                  <a href="#" class="btn btn-lg btn-outline-primary">
                    <i class="ri-heart-line"></i>
                  </a>
                </div>
              </div>
            </div>
            <!-- Pet 2 -->
            <div class="col-md-4">
              <div
                class="card border h-100 position-relative p-0"
                data-aos="flip-up"
                data-aos-delay="100"
                data-aos-duration="1200"
              >
                <figure class="img-scale rounded-top-4 mb-0">
                  <img
                    src={getAssetPrefix(
                      '/assets/img/breederspot-images/yorkshire-terrier-puppy-1.jpg'
                    )}
                    class="card-img-top rounded-0"
                    style="max-height: 300px; object-fit: cover;"
                    alt="Pet Image"
                  />
                </figure>
                <span class="badge bg-success text-light position-absolute top-0 end-0 fs-6 m-2">
                  Available
                </span>
                <div class="card-body p-3">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="card-title fs-4 mb-0">
                      <a href="#" class="text-decoration-none text-body">Luna</a>
                    </h5>
                    <p class="text-success fs-4 fw-semibold mb-0">$1400</p>
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-2">
                    <span class="badge text-primary bg-primary-subtle fs-6">Yorkshire Terriers</span
                    >
                    <span class="badge text-primary bg-primary-subtle fs-6">4 Weeks</span>
                  </div>
                  <p class="card-text">
                    Luna is a gentle and loving pup who enjoys cuddling up in cozy blankets.
                  </p>
                </div>
                <div class="d-flex gap-3 px-3 pb-3">
                  <a href="#" class="btn btn-lg btn-primary w-100">
                    Inquire<i class="ri-arrow-right-line ms-2"></i>
                  </a>
                  <a href="#" class="btn btn-lg btn-outline-primary">
                    <i class="ri-heart-line"></i>
                  </a>
                </div>
              </div>
            </div>
            <!-- Pet 3 -->
            <div class="col-md-4">
              <div
                class="card border h-100 position-relative p-0"
                data-aos="flip-up"
                data-aos-delay="200"
                data-aos-duration="1200"
              >
                <figure class="img-scale rounded-top-4 mb-0">
                  <img
                    src={getAssetPrefix(
                      '/assets/img/breederspot-images/yorkshire-terrier-puppy-1.jpg'
                    )}
                    class="card-img-top rounded-0"
                    style="max-height: 300px; object-fit: cover;"
                    alt="Pet Image"
                  />
                </figure>
                <span class="badge bg-danger text-light position-absolute top-0 end-0 fs-6 m-2">
