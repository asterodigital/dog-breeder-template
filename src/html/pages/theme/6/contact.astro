---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout title="Contact" description="Dedicated to raising happy, healthy puppies in loving homes.">
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/breederspot-images/yorkshire-terrier-3.jpg')}'); background-size: cover; background-position: center; height: 500px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>

    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold" data-aos="fade-up" data-aos-duration="1200">
            Get in Touch With Us
          </h1>
          <p class="lead mb-0" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1200">
            Whether you have questions, need guidance, or just want to say hello — we're here to
            help you on your journey to responsible puppy ownership.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row g-4">
        <div class="col-md-6">
          <i
            class="ri-customer-service-fill text-primary fs-1"
            data-aos="fade-in"
            data-aos-duration="1200"></i>

          <h1 class="display-6 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="1200">
            Contact Us
          </h1>

          <p class="lead mb-4" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1200">
            Whether you have a question, need support, or just want to say hello — we're here for
            you.
          </p>

          <form data-aos="fade-up" data-aos-delay="300" data-aos-duration="1200">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="name"
                placeholder="John Doe"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                placeholder="you@example.com"
              />
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                rows="3"
                placeholder="Write your message here..."></textarea>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">Submit</button>
            </div>
          </form>
        </div>
        <div class="col-md-6 pt-4 pt-md-0">
          <div class="ratio ratio-1x1">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23181.182903463836!2d-97.75408308207732!3d30.268331893788808!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b599a0cc032f%3A0x5d9b464bd469d57a!2sAustin%2C%20TX%2C%20USA!5e0!3m2!1sen!2sin!4v1746533935359!5m2!1sen!2sin"
              width="600"
              height="600"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            >
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="bg-primary-pale py-5">
    <div class="container">
      <div class="row text-center g-4">
        <!-- Phone -->
        <div class="col-sm-4" data-aos="zoom-in" data-aos-duration="1200">
          <i class="ri-phone-line text-primary display-5 mb-3"></i>
          <h5 class="fw-semibold mb-1">Phone</h5>
          <p class="mb-0 text-muted">+1 (234) 567-8901</p>
        </div>

        <!-- Email -->
        <div class="col-sm-4" data-aos="zoom-in" data-aos-delay="100" data-aos-duration="1200">
          <i class="ri-mail-line text-primary display-5 mb-3"></i>
          <h5 class="fw-semibold mb-1">Email</h5>
          <p class="mb-0 text-muted">hello@yourcompany.com</p>
        </div>

        <!-- Location -->
        <div class="col-sm-4" data-aos="zoom-in" data-aos-delay="200" data-aos-duration="1200">
          <i class="ri-map-pin-line text-primary display-5 mb-3"></i>
          <h5 class="fw-semibold mb-1">Location</h5>
          <p class="mb-0 text-muted">
            1234 Market Street, Suite 500 <br />San Francisco, CA 94103, USA
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <h2
            class="fw-semibold text-center display-6 mb-2"
            data-aos="fade-up"
            data-aos-duration="1200"
          >
            Frequently Asked Questions
          </h2>
          <p
            class="lead text-center mb-4"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            Answers to some of the most common questions we receive about our puppies, process, and
            philosophy.
          </p>
          <div
            class="accordion"
            id="faqAccordion"
            data-aos="fade-in"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <!-- FAQ 1 -->
            <div class="accordion-item">
              <h2 class="accordion-header" id="faq1-heading">
                <button
                  class="accordion-button"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#faq1"
                  aria-expanded="true"
                  aria-controls="faq1"
                >
                  How do I apply for a puppy?
                </button>
              </h2>
              <div
                id="faq1"
                class="accordion-collapse collapse show"
                aria-labelledby="faq1-heading"
                data-bs-parent="#faqAccordion"
              >
                <div class="accordion-body">
                  You may simply fill out our application form. Once reviewed, we'll follow up with
                  next steps.
                </div>
              </div>
            </div>

            <!-- FAQ 2 -->
            <div class="accordion-item">
              <h2 class="accordion-header" id="faq2-heading">
                <button
                  class="accordion-button collapsed"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#faq2"
                  aria-expanded="false"
                  aria-controls="faq2"
                >
                  Can I visit puppies before adoption?
                </button>
              </h2>
              <div
                id="faq2"
                class="accordion-collapse collapse"
                aria-labelledby="faq2-heading"
                data-bs-parent="#faqAccordion"
              >
                <div class="accordion-body">
                  Yes! We welcome scheduled visits. It's important to us that you feel confident and
                  connected.
                </div>
              </div>
            </div>

            <!-- FAQ 3 -->
            <div class="accordion-item">
              <h2 class="accordion-header" id="faq3-heading">
                <button
                  class="accordion-button collapsed"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#faq3"
                  aria-expanded="false"
                  aria-controls="faq3"
                >
                  Do you offer any health guarantees?
                </button>
              </h2>
              <div
                id="faq3"
                class="accordion-collapse collapse"
                aria-labelledby="faq3-heading"
                data-bs-parent="#faqAccordion"
              >
                <div class="accordion-body">
                  Yes. All puppies come with a health guarantee and vaccinations appropriate for
                  their age.
                </div>
              </div>
            </div>

            <!-- FAQ 4 -->
            <div class="accordion-item">
              <h2 class="accordion-header" id="faq4-heading">
                <button
                  class="accordion-button collapsed"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#faq4"
                  aria-expanded="false"
                  aria-controls="faq4"
                >
                  Will I receive updates before pickup?
                </button>
              </h2>
              <div
                id="faq4"
                class="accordion-collapse collapse"
                aria-labelledby="faq4-heading"
                data-bs-parent="#faqAccordion"
              >
                <div class="accordion-body">
                  Yes, we provide regular updates with development milestones so you can follow your
                  puppy's early life.
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-primary-pale py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 offset-lg-3 text-center">
          <h2 class="display-6 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="1200">
            Your Puppy Journey Starts Here
          </h2>
          <p class="lead mb-4" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1200">
            Sign up to get updates on upcoming litters, and tips for new dog parents.
          </p>

          <!-- Email Input -->
          <form
            class="row g-2 justify-content-center"
            data-aos="fade-in"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <div class="col-sm-9">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Enter your email"
                required
              />
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-primary btn-lg w-100">Subscribe</button>
            </div>
          </form>

          <!-- Note below input -->
          <p
            class="text-muted small mt-2"
            data-aos="fade-up"
            data-aos-delay="300"
            data-aos-duration="1200"
          >
            *We respect your privacy. No spam—just adorable puppies and helpful updates.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
