---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Puppy Details"
  description="Dedicated to raising happy, healthy puppies in loving homes."
>
  <!-- Main Section -->
  <section class="bg-body py-5">
    <div class="container">
      <!-- Back Button -->
      <div class="mb-4">
        <a
          href={getPathPrefix('/theme/6/puppies')}
          class="btn btn-lg btn-outline-primary"
          data-aos="fade-in"
          data-aos-duration="800"
        >
          <i class="ri-arrow-left-line"></i> Back to Puppies
        </a>
      </div>

      <!-- Puppy Info Row -->
      <div class="row row-cols-1 row-cols-md-2 g-4 align-items-center">
        <!-- Image Column -->
        <div class="col">
          <figure class="img-scale rounded shadow-sm" data-aos="zoom-in" data-aos-duration="800">
            <img
              src={getAssetPrefix('/assets/img/breederspot-images/yorkshire-terrier-puppy-1.jpg')}
              class="img-fluid"
              alt="Charlie the Yorkshire Terrier"
            />
          </figure>
        </div>

        <!-- Details Column -->
        <div class="col" data-aos="fade-up" data-aos-duration="800">
          <div class="d-flex align-items-center mb-2">
            <h2 class="display-6 fw-semibold mb-0 me-2">Charlie</h2>
            <span class="badge bg-body border text-primary shadow-sm"> Yorkshire Terrier </span>
          </div>

          <p class="mb-3">
            Charlie is a happy-go-lucky pup who loves belly rubs, chasing squeaky toys, and making
            new friends. He’s been raised in a loving home environment and is already starting basic
            training. If you're looking for a loyal and playful companion, Charlie’s your guy!
          </p>

          <h4 class="fs-3 mb-3">$1,200.00</h4>

          <div class="d-flex flex-wrap gap-2 mb-4">
            <button class="btn btn-lg btn-primary"
              ><i class="ri-price-tag-3-line me-2"></i>Reserve</button
            >
            <button class="btn btn-lg btn-outline-primary"
              ><i class="ri-information-2-line me-2"></i>Learn More</button
            >
          </div>

          <table class="table table-hover border">
            <tbody>
              <tr>
                <th scope="row">Gender</th>
                <td>Male</td>
              </tr>
              <tr>
                <th scope="row">Age</th>
                <td>6 Weeks</td>
              </tr>
              <tr>
                <th scope="row">Weight</th>
                <td>6.5 lbs</td>
              </tr>
              <tr>
                <th scope="row">Vaccinations</th>
                <td>Up to date</td>
              </tr>
              <tr>
                <th scope="row">Location</th>
                <td>Austin, TX</td>
              </tr>
              <tr class="table-secondary">
                <th scope="row">Availability</th>
                <td>Ready to go home now</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <!-- Details Section -->
  <section class="bg-body pb-5">
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
          <h4
            class="text-primary text-center text-uppercase fw-semibold fs-5 mb-2"
            data-aos="fade-down"
            data-aos-duration="800"
          >
            Traits
          </h4>
          <h3
            class="display-6 fw-semibold text-center mb-3"
            data-aos="fade-down"
            data-aos-delay="100"
            data-aos-duration="800"
          >
            Temperament of Charlie
          </h3>
          <label for="progressbar-trainability" class="form-label">Trainability</label>
          <div
            class="progress mb-3"
            id="progressbar-trainability"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="85"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 85%">
            </div>
          </div>
          <label for="progressbar-friendliness" class="form-label">Friendliness</label>
          <div
            class="progress mb-3"
            id="progressbar-friendliness"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="90"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 90%">
            </div>
          </div>
          <label for="progressbar-adaptability" class="form-label">Adaptability</label>
          <div
            class="progress mb-3"
            id="progressbar-adaptability"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="90"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 90%">
            </div>
          </div>
          <label for="progressbar-intelligence" class="form-label">Intelligence</label>
          <div
            class="progress mb-3"
            id="progressbar-intelligence"
            role="progressbar"
            aria-label="progress bar"
            aria-valuenow="85"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 12px"
          >
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 85%">
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-primary-pale py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 offset-lg-3 text-center">
          <h2 class="display-6 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="800">
            Your Puppy Journey Starts Here
          </h2>
          <p class="lead mb-4" data-aos="fade-up" data-aos-delay="200" data-aos-duration="800">
            Sign up to get updates on upcoming litters, and tips for new dog parents.
          </p>

          <!-- Email Input -->
          <form
            class="row g-2 justify-content-center"
            data-aos="fade-in"
            data-aos-delay="200"
            data-aos-duration="800"
          >
            <div class="col-sm-9">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Enter your email"
                required
              />
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-primary btn-lg w-100">Subscribe</button>
            </div>
          </form>

          <!-- Note below input -->
          <p
            class="text-muted small mt-2"
            data-aos="fade-up"
            data-aos-delay="300"
            data-aos-duration="800"
          >
            *We respect your privacy. No spam—just adorable puppies and helpful updates.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
