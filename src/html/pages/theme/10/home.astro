---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Home"
  description="Ethical, loving Abyssinian cat breeders in Austin, TX. Discover our kittens, philosophy, and community."
>
  <!-- Hero Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="row align-items-center g-4">
        <div class="col-md-6 text-start" data-aos="fade-right" data-aos-duration="1200">
          <h1 class="display-5 fw-semibold mb-2">Ethical Breeders in Austin, TX</h1>
          <p class="fs-5 mb-4">
            Welcome to Austin’s home for healthy, socialized Abyssinian cats. We’re passionate about
            raising kittens who are confident, loving, and ready to join your family.
          </p>
          <div class="d-flex flex-wrap gap-2">
            <a href={getPathPrefix('/theme/10/kittens')} class="btn btn-primary btn-lg"
              >View Available Kittens</a
            >
            <a href={getPathPrefix('/theme/10/about')} class="btn btn-outline-primary btn-lg"
              >Our Philosophy</a
            >
          </div>
        </div>
        <div class="col-md-6 text-center" data-aos="fade-left" data-aos-duration="1200">
          <img
            src={getAssetPrefix('/assets/img/cat-theme/4/abyssinian-1.jpg')}
            class="img-fluid rounded-4"
            alt="Abyssinian Cat"
            style="max-height: 400px; object-fit: cover;"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- What Makes Us Different Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6 mb-4 mb-md-0" data-aos="fade-right" data-aos-duration="1200">
          <figure class="img-scale rounded-4 overflow-hidden">
            <img
              src={getAssetPrefix('/assets/img/cat-theme/4/abyssinian-2.jpg')}
              class="img-fluid"
              alt="Abyssinian Cat"
              style="object-fit: cover; max-height: 340px;"
            />
          </figure>
        </div>
        <div class="col-md-6" data-aos="fade-left" data-aos-duration="1200">
          <h2 class="text-primary fs-5 text-uppercase mb-2">What Makes Us Different</h2>
          <h3 class="display-5 fw-semibold mb-3">Ethical, Family-Focused Breeding</h3>
          <ul class="list-unstyled fs-5 mb-0">
            <li class="mb-2">
              <i class="ri-heart-3-fill text-primary me-2"></i>Raised in our home, never in cages
            </li>
            <li class="mb-2">
              <i class="ri-shield-check-fill text-primary me-2"></i>Health guarantee & vet-checked
            </li>
            <li class="mb-2">
              <i class="ri-user-smile-fill text-primary me-2"></i>Socialized with children & pets
            </li>
            <li>
              <i class="ri-leaf-fill text-primary me-2"></i>Focused on temperament & well-being
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Kittens Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="text-center mb-4">
        <h2 class="text-primary fs-5 text-uppercase mb-2">Featured Kittens</h2>
        <h3 class="display-5 fw-semibold" data-aos="fade-up" data-aos-duration="1000">
          Featured Abyssinian Kittens
        </h3>
      </div>
      <div class="row g-4">
        <div class="col-sm-6 col-lg-3">
          <div
            class="card border rounded-4 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="100"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/4/abyssinian-1.jpg')}
              alt="Kitten Luna"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body">
              <div class="p-3">
                <h5 class="fw-semibold mb-1">
                  <a
                    href={getPathPrefix('/theme/10/kitten-details')}
                    class="text-body text-decoration-none">Luna</a
                  >
                </h5>
                <span class="badge text-primary bg-primary-pale mb-1">8 weeks old</span>
                <p class="mb-0">A playful cream-color female with a gentle, affectionate nature.</p>
              </div>
              <a
                href={getPathPrefix('/theme/10/kitten-details')}
                class="btn btn-primary rounded-top-0 rounded-bottom-4 w-100">Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div
            class="card border rounded-4 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="200"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/4/abyssinian-2.jpg')}
              alt="Kitten Felix"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body">
              <div class="p-3">
                <h5 class="fw-semibold mb-1">
                  <a href="#" class="text-body text-decoration-none">Felix</a>
                </h5>
                <span class="badge text-primary bg-primary-pale mb-1">10 weeks old</span>
                <p class="mb-0">A curious male with striking eyes and a loving personality.</p>
              </div>
              <a
                href={getPathPrefix('/theme/10/kitten-details')}
                class="btn btn-primary rounded-top-0 rounded-bottom-4 w-100">Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div
            class="card border rounded-4 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="300"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/4/abyssinian-1.jpg')}
              alt="Kitten Willow"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body">
              <div class="p-3">
                <h5 class="fw-semibold mb-1">
                  <a href="#" class="text-body text-decoration-none">Willow</a>
                </h5>
                <span class="badge text-primary bg-primary-pale mb-1">7 weeks old</span>
                <p class="mb-0">A sweet and affectionate female, very gentle and loves cuddles.</p>
              </div>
              <a
                href={getPathPrefix('/theme/10/kitten-details')}
                class="btn btn-primary rounded-top-0 rounded-bottom-4 w-100">Inquire</a
              >
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div
            class="card border rounded-4 h-100 p-0"
            data-aos="zoom-in"
            data-aos-delay="400"
            data-aos-duration="1200"
          >
            <img
              src={getAssetPrefix('/assets/img/cat-theme/4/abyssinian-2.jpg')}
              alt="Kitten Jasper"
              class="card-img-top"
              style="object-fit: cover; height: 220px;"
            />
            <div class="card-body">
              <div class="p-3">
                <h5 class="fw-semibold mb-1">
                  <a href="#" class="text-body text-decoration-none">Jasper</a>
                </h5>
                <span class="badge text-primary bg-primary-pale mb-1">9 weeks old</span>
                <p class="mb-0">A bold cream male, playful and outgoing with a soft coat.</p>
              </div>
              <a
                href={getPathPrefix('/theme/10/kitten-details')}
                class="btn btn-primary rounded-top-0 rounded-bottom-4 w-100">Inquire</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How Adoption Works Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6 mb-4 mb-md-0" data-aos="fade-right" data-aos-duration="1200">
          <h2 class="text-primary fs-5 text-uppercase mb-2">How Adoption Works</h2>
          <h3 class="display-5 fw-semibold mb-3">Bringing Home Your Abyssinian</h3>
          <ol class="fs-5 mb-0 ps-3">
            <li class="mb-2">Inquire about available kittens</li>
            <li class="mb-2">Reserve your kitten with a deposit</li>
            <li class="mb-2">Meet your kitten and receive regular updates</li>
            <li>Take your new family member home—plus a starter kit!</li>
          </ol>
        </div>
        <div class="col-md-6 text-center" data-aos="fade-left" data-aos-duration="1200">
          <img
            src={getAssetPrefix('/assets/img/cat-theme/4/abyssinian-2.jpg')}
            class="img-fluid rounded-4"
            alt="Abyssinian Kitten"
            style="object-fit: cover; max-height: 320px;"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="text-center mb-4">
        <h2 class="text-primary fs-5 text-uppercase mb-2">Testimonials</h2>
        <h3 class="display-5 fw-semibold" data-aos="fade-up" data-aos-duration="1000">
          What Families Say
        </h3>
      </div>
      <div class="row g-4">
        <div class="col-md-6 col-lg-4">
          <div
            class="card rounded-4 h-100"
            data-aos="flip-up"
            data-aos-delay="100"
            data-aos-duration="1000"
          >
            <div class="card-body">
              <div class="mb-2 text-warning">
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
              </div>
              <p class="mb-3">
                "Our kitten is very sweet and also well-adjusted. The breeder's support made a lot
                of difference. Great experience!"
              </p>
              <div class="d-flex align-items-center mt-auto">
                <img
                  src={getAssetPrefix('/assets/img/avatars/avatar1.jpg')}
                  alt="Avatar"
                  class="rounded-circle me-3"
                  width="56"
                  height="56"
                />
                <div>
                  <h6 class="fw-semibold mb-0">Jane Smith</h6>
                  <p class="mb-0">Austin, TX</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div
            class="card rounded-4 h-100"
            data-aos="flip-up"
            data-aos-delay="200"
            data-aos-duration="1000"
          >
            <div class="card-body">
              <div class="mb-2 text-warning">
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
              </div>
              <p class="mb-3">
                "We really loved the regular updates and photos. Our Abyssinian cat is the perfect
                addition to our happy family!"
              </p>
              <div class="d-flex align-items-center mt-auto">
                <img
                  src={getAssetPrefix('/assets/img/avatars/avatar7.jpg')}
                  alt="Avatar"
                  class="rounded-circle me-3"
                  width="56"
                  height="56"
                />
                <div>
                  <h6 class="fw-semibold mb-0">Nguyen Minh</h6>
                  <p class="mb-0">San Diego, CA</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div
            class="card rounded-4 h-100"
            data-aos="flip-up"
            data-aos-delay="300"
            data-aos-duration="1000"
          >
            <div class="card-body">
              <div class="mb-2 text-warning">
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
              </div>
              <p class="mb-3">
                "Our kitten arrived very healthy, playful, and clearly well-loved. We couldn't have
                asked for a better experience!"
              </p>
              <div class="d-flex align-items-center mt-auto">
                <img
                  src={getAssetPrefix('/assets/img/avatars/avatar9.jpg')}
                  alt="Avatar"
                  class="rounded-circle me-3"
                  width="56"
                  height="56"
                />
                <div>
                  <h6 class="fw-semibold mb-0">Jack Smith</h6>
                  <p class="mb-0">Atlanta, GA</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div
            class="card rounded-4 h-100"
            data-aos="flip-up"
            data-aos-delay="400"
            data-aos-duration="1000"
          >
            <div class="card-body">
              <div class="mb-2 text-warning">
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
              </div>
              <p class="mb-3">
                "The adoption process was smooth and professional. Our kitten, Mochi, is healthy and
                so affectionate. Highly recommended!"
              </p>
              <div class="d-flex align-items-center mt-auto">
                <img
                  src={getAssetPrefix('/assets/img/avatars/avatar2.jpg')}
                  alt="Avatar"
                  class="rounded-circle me-3"
                  width="56"
                  height="56"
                />
                <div>
                  <h6 class="fw-semibold mb-0">Elena Petrova</h6>
                  <p class="mb-0">Seattle, WA</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div
            class="card rounded-4 h-100"
            data-aos="flip-up"
            data-aos-delay="500"
            data-aos-duration="1000"
          >
            <div class="card-body">
              <div class="mb-2 text-warning">
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
              </div>
              <p class="mb-3">
                "We received detailed care instructions and ongoing support. Our Abyssinian, Oliver,
                is thriving and so playful!"
              </p>
              <div class="d-flex align-items-center mt-auto">
                <img
                  src={getAssetPrefix('/assets/img/avatars/avatar8.jpg')}
                  alt="Avatar"
                  class="rounded-circle me-3"
                  width="56"
                  height="56"
                />
                <div>
                  <h6 class="fw-semibold mb-0">John Doe</h6>
                  <p class="mb-0">Chicago, IL</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div
            class="card rounded-4 h-100"
            data-aos="flip-up"
            data-aos-delay="600"
            data-aos-duration="1000"
          >
            <div class="card-body">
              <div class="mb-2 text-warning">
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
                <i class="ri-star-fill"></i>
              </div>
              <p class="mb-3">
                "Our family is so grateful for the breeder's dedication. The kittens are
                well-socialized and adapted quickly to our home."
              </p>
              <div class="d-flex align-items-center mt-auto">
                <img
                  src={getAssetPrefix('/assets/img/avatars/avatar1.jpg')}
                  alt="Avatar"
                  class="rounded-circle me-3"
                  width="56"
                  height="56"
                />
                <div>
                  <h6 class="fw-semibold mb-0">Sarah Meyer</h6>
                  <p class="mb-0">Denver, CO</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="bg-primary py-5">
    <div class="container text-center">
      <h2 class="display-5 fw-semibold mb-2 text-light" data-aos="fade-up" data-aos-duration="1000">
        Ready to Welcome an Abyssinian Kitten?
      </h2>
      <p
        class="text-light fs-5 mb-4"
        data-aos="fade-up"
        data-aos-delay="100"
        data-aos-duration="900"
      >
        Contact us to learn more about our kittens, upcoming litters, or to reserve your new family
        member today.
      </p>
      <a
        href={getPathPrefix('/theme/10/contact')}
        class="btn btn-lg btn-light"
        data-aos="fade-in"
        data-aos-delay="200"
        data-aos-duration="800">Contact Us</a
      >
    </div>
  </section>
</Layout>
