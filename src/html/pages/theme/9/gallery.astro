---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout title="Gallery" description="Dedicated to raising happy, healthy kittens in loving homes.">
  <!-- Gallery Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row mb-4">
        <div class="col-lg-10 offset-lg-1 text-center">
          <h1 class="display-5 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="1000">
            Gallery
          </h1>
          <p
            class="fs-5 text-muted mb-0"
            data-aos="fade-up"
            data-aos-delay="100"
            data-aos-duration="900"
          >
            Explore moments from our cattery and our extended kitten families. Every photo
            celebrates the beauty, personality, and joy of Bengal cats raised with love.
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <div class="row g-4">
            <div
              class="col-sm-6 col-md-4"
              data-aos="zoom-in"
              data-aos-delay="100"
              data-aos-duration="1200"
            >
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/cat-theme/3/bengal-1.jpg')}
              >
                <figure class="img-scale rounded-4 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/cat-theme/3/bengal-1.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div
              class="col-sm-6 col-md-4"
              data-aos="zoom-in"
              data-aos-delay="100"
              data-aos-duration="1200"
            >
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/cat-theme/3/bengal-2.jpg')}
              >
                <figure class="img-scale rounded-4 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/cat-theme/3/bengal-2.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div
              class="col-sm-6 col-md-4"
              data-aos="zoom-in"
              data-aos-delay="100"
              data-aos-duration="1200"
            >
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/cat-theme/3/bengal-3.jpg')}
              >
                <figure class="img-scale rounded-4 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/cat-theme/3/bengal-3.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div
              class="col-sm-6 col-md-4"
              data-aos="zoom-in"
              data-aos-delay="100"
              data-aos-duration="1200"
            >
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/cat-theme/3/bengal-2.jpg')}
              >
                <figure class="img-scale rounded-4 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/cat-theme/3/bengal-2.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div
              class="col-sm-6 col-md-4"
              data-aos="zoom-in"
              data-aos-delay="100"
              data-aos-duration="1200"
            >
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/cat-theme/3/bengal-1.jpg')}
              >
                <figure class="img-scale rounded-4 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/cat-theme/3/bengal-1.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
            <div
              class="col-sm-6 col-md-4"
              data-aos="zoom-in"
              data-aos-delay="100"
              data-aos-duration="1200"
            >
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#imageModal"
                data-img-src={getAssetPrefix('/assets/img/cat-theme/3/bengal-2.jpg')}
              >
                <figure class="img-scale rounded-4 h-100 w-100">
                  <img
                    src={getAssetPrefix('/assets/img/cat-theme/3/bengal-2.jpg')}
                    class="img-fluid"
                    style="object-fit: cover;"
                    alt="Gallery Image"
                  />
                </figure>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Behind the Scenes Section -->
  <section class="bg-body pb-5">
    <div class="container">
      <h2
        class="display-5 fw-semibold text-center mb-2"
        data-aos="fade-up"
        data-aos-duration="1000"
      >
        Behind the Scenes
      </h2>
      <p class="text-center mb-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="900">
        Take a peek into our daily routines, playful moments, and the loving environment where our
        Bengal kittens are raised. We believe a happy start makes for a happy cat!
      </p>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col" data-aos="fade-up" data-aos-delay="200" data-aos-duration="900">
          <div class="card h-100 border p-0">
            <img
              src={getAssetPrefix('/assets/img/cat-theme/3/bengal-1.jpg')}
              class="card-img-top rounded-top-4"
              style="max-height: 260px; object-fit: cover;"
              alt="Bengal Kitten"
              loading="lazy"
            />
            <div class="card-body p-3">
              <h5 class="card-title fw-semibold mb-2">Playtime Fun</h5>
              <p class="card-text">
                Our kittens enjoy daily play sessions with tunnels, climbing trees, and interactive
                toys to build confidence and curiosity.
              </p>
            </div>
          </div>
        </div>
        <div class="col" data-aos="fade-up" data-aos-delay="300" data-aos-duration="900">
          <div class="card h-100 border p-0">
            <img
              src={getAssetPrefix('/assets/img/cat-theme/3/bengal-3.jpg')}
              class="card-img-top rounded-top-4"
              style="max-height: 260px; object-fit: cover;"
              alt="Bengal Kitten"
              loading="lazy"
            />
            <div class="card-body p-3">
              <h5 class="card-title fw-semibold mb-2">Gentle Care</h5>
              <p class="card-text">
                From bottle feeding to socialization, every kitten receives hands-on attention and
                lots of love from our dedicated team.
              </p>
            </div>
          </div>
        </div>
        <div class="col" data-aos="fade-up" data-aos-delay="400" data-aos-duration="900">
          <div class="card h-100 border p-0">
            <img
              src={getAssetPrefix('/assets/img/cat-theme/3/bengal-2.jpg')}
              class="card-img-top rounded-top-4"
              style="max-height: 260px; object-fit: cover;"
              alt="Bengal Kitten"
              loading="lazy"
            />
            <div class="card-body p-3">
              <h5 class="card-title fw-semibold mb-2">Nap Time</h5>
              <p class="card-text">
                After a busy morning, our kittens love to snuggle up for group naps—building bonds
                and recharging for more adventures!
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Share Your Photos Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container text-center">
      <h2 class="display-5 fw-semibold mb-3" data-aos="fade-up" data-aos-duration="1000">
        Share Your Moments
      </h2>
      <p class="mb-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="900">
        We love seeing our kittens in their new homes! If you’d like your photo featured in our
        gallery, please send it to us along with your cat’s name and a short story.
      </p>
      <a
        href="#"
        class="btn btn-primary btn-lg"
        data-aos="fade-in"
        data-aos-delay="200"
        data-aos-duration="800"
      >
        Submit Your Photo
      </a>
    </div>
  </section>

  <!-- Image Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content bg-transparent border-0">
        <div class="modal-body p-0">
          <img id="modalImage" src="" class="img-fluid rounded-5 w-100" alt="Full Size Image" />
        </div>
      </div>
    </div>
  </div>
</Layout>
