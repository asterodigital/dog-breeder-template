---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout title="Contact" description="Dedicated to raising happy, healthy kittens in loving homes.">
  <!-- Contact Hero Section -->
  <section class="bg-primary-subtle py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-7 mb-4 mb-lg-0">
          <h1 class="display-5 fw-semibold mb-3" data-aos="fade-up" data-aos-duration="1000">
            Get in Touch
          </h1>
          <p class="fs-5 mb-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="900">
            Have questions about our Bengal kittens, adoption process, or cattery? We’re here to
            help! Reach out and we’ll respond as soon as possible.
          </p>
          <ul class="list-unstyled mb-4">
            <li class="mb-2" data-aos="fade-up" data-aos-delay="200" data-aos-duration="800">
              <a href="mailto:hello@email.com" class="text-body text-decoration-none">
                <i class="ri-mail-fill text-primary me-2"></i>hello@email.com
              </a>
            </li>
            <li class="mb-0" data-aos="fade-up" data-aos-delay="300" data-aos-duration="800">
              <a href="tel:+12345678901" class="text-body text-decoration-none">
                <i class="ri-phone-fill text-primary me-2"></i>+1 (234) 567-8901
              </a>
            </li>
          </ul>
        </div>
        <div class="col-lg-5 text-center">
          <img
            src={getAssetPrefix('/assets/img/cat-theme/3/bengal-1.jpg')}
            alt="Bengal Cat"
            class="img-fluid rounded-4"
            data-aos="zoom-in"
            data-aos-duration="1000"
            style="max-height: 340px; width: 100%; object-fit: cover;"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Map & Visit Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
          <div class="rounded-4 overflow-hidden" style="min-height: 340px;">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23181.182903463836!2d-97.75408308207732!3d30.268331893788808!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b599a0cc032f%3A0x5d9b464bd469d57a!2sAustin%2C%20TX%2C%20USA!5e0!3m2!1sen!2sin!4v1746533935359!5m2!1sen!2sin"
              width="100%"
              height="340"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
        <div class="col-lg-6 ps-lg-5">
          <h2 class="display-5 fw-semibold mb-3" data-aos="fade-up" data-aos-duration="1000">
            Visit Us
          </h2>
          <p class="mb-3" data-aos="fade-up" data-aos-delay="100" data-aos-duration="900">
            We welcome visits by appointment! Come meet our kittens, see our cattery, and experience
            the Bengal Bliss difference in person.
          </p>
          <p class="mb-3" data-aos="fade-up" data-aos-delay="200" data-aos-duration="900">
            <i class="ri-map-pin-fill text-primary me-2"></i>123 Main Street, Austin, TX
          </p>
          <a
            href="#"
            class="btn btn-outline-primary btn-lg"
            data-aos="fade-in"
            data-aos-delay="300"
            data-aos-duration="800"
          >
            Schedule a Visit
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="bg-body pb-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="bg-primary-subtle rounded-4 p-4 p-md-5">
            <h2
              class="display-6 fw-semibold mb-3 text-center"
              data-aos="fade-up"
              data-aos-duration="1000"
            >
              Send Us a Message
            </h2>
            <form class="row g-3" data-aos="fade-up" data-aos-delay="100" data-aos-duration="900">
              <div class="col-md-6">
                <label for="name" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control form-control-lg"
                  id="name"
                  name="name"
                  required
                />
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control form-control-lg"
                  id="email"
                  name="email"
                  required
                />
              </div>
              <div class="col-12">
                <label for="message" class="form-label">Message</label>
                <textarea
                  class="form-control form-control-lg"
                  id="message"
                  name="message"
                  rows="3"
                  required></textarea>
              </div>
              <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary btn-lg px-5">Send Message</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
