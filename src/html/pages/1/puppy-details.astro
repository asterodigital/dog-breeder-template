---
import Head from '../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-body shadow-sm z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/1/home">
              <img
                src="/dist/assets/img/breederspot-images/logo.svg"
                alt="Logo"
                class="me-2 mt-1"
                style="height: 28px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/1/home">
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 28px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul
                  class="navbar-nav flex-grow-1 pe-3 justify-content-start justify-content-lg-center"
                >
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" aria-current="page" href="/1/home">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/1/about">About</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/1/puppies">Puppies</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/1/shop">Shop</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/1/faq">FAQs</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/1/blog">Blog</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/1/contact">Contact</a>
                  </li>
                </ul>

                <!-- Bottom Section -->
                <div class="d-block d-lg-none mt-4">
                  <a href="tel:+12345678901" class="btn btn-outline-primary rounded w-100 mb-2">
                    <i class="ri-phone-fill me-2"></i>Book Consultation
                  </a>
                  <a class="btn btn-primary rounded w-100" href="#"
                    ><i class="ri-sparkling-2-fill me-2"></i> Get Started Now</a
                  >
                </div>
              </div>
            </div>

            <div class="d-none d-lg-flex align-items-center gap-3">
              <div class="text-start">
                <small class="text-muted d-block">Book Consultation</small>
                <a href="tel:+12345678901" class="text-decoration-none fw-medium">
                  +1 (234) 567-8901
                </a>
              </div>

              <a class="btn btn-lg btn-primary rounded" href="#">Get Started</a>
            </div>
          </div>
        </nav>

        <!-- Main Section -->
        <section class="my-5">
          <div class="container">
            <!-- Back Button -->
            <div class="mb-4">
              <a href="/1/puppies" class="btn btn-lg btn-outline-primary">
                <i class="ri-arrow-left-line"></i> Back to Puppies
              </a>
            </div>

            <!-- Puppy Info Row -->
            <div class="row row-cols-1 row-cols-md-2 g-4 align-items-center">
              <!-- Image Column -->
              <div class="col">
                <figure class="img-scale rounded shadow-sm">
                  <img
                    src="/dist/assets/img/breederspot-images/puppy-img-1.jpg"
                    class="img-fluid"
                    alt="Charlie the Golden Retriever"
                  />
                </figure>
              </div>

              <!-- Details Column -->
              <div class="col">
                <div class="d-flex align-items-center mb-2">
                  <h2 class="display-6 fw-semibold mb-0 me-2">Charlie</h2>
                  <span class="badge bg-body border text-primary shadow-sm">
                    Golden Retriever
                  </span>
                </div>

                <p class="mb-3">
                  Charlie is a happy-go-lucky pup who loves belly rubs, chasing squeaky toys, and
                  making new friends. He’s been raised in a loving home environment and is already
                  starting basic training. If you're looking for a loyal and playful companion,
                  Charlie’s your guy!
                </p>

                <h4 class="fs-3 mb-3">$1,200.00</h4>

                <div class="d-flex flex-wrap gap-2 mb-4">
                  <button class="btn btn-lg btn-primary"
                    ><i class="ri-price-tag-3-line me-2"></i>Reserve</button
                  >
                  <button class="btn btn-lg btn-outline-primary"
                    ><i class="ri-information-2-line me-2"></i>Learn More</button
                  >
                </div>

                <table class="table table-hover border">
                  <tbody>
                    <tr>
                      <th scope="row">Gender</th>
                      <td>Male</td>
                    </tr>
                    <tr>
                      <th scope="row">Age</th>
                      <td>12 weeks</td>
                    </tr>
                    <tr>
                      <th scope="row">Weight</th>
                      <td>6.5 lbs</td>
                    </tr>
                    <tr>
                      <th scope="row">Vaccinations</th>
                      <td>Up to date</td>
                    </tr>
                    <tr>
                      <th scope="row">Location</th>
                      <td>Austin, TX</td>
                    </tr>
                    <tr class="table-secondary">
                      <th scope="row">Availability</th>
                      <td>Ready to go home now</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </section>

        <!-- Details Section -->
        <section class="bg-secondary-subtle py-5">
          <div class="container">
            <div class="row">
              <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <h4 class="text-primary text-center text-uppercase fw-semibold fs-5 mb-2">
                  Traits
                </h4>
                <h3 class="display-6 fw-semibold text-center mb-3">Temperament of Charlie</h3>
                <label for="progressbar-trainability" class="form-label">Trainability</label>
                <div
                  class="progress mb-3"
                  id="progressbar-trainability"
                  role="progressbar"
                  aria-label="progress bar"
                  aria-valuenow="85"
                  aria-valuemin="0"
                  aria-valuemax="100"
                  style="height: 12px"
                >
                  <div
                    class="progress-bar progress-bar-striped progress-bar-animated"
                    style="width: 85%"
                  >
                  </div>
                </div>
                <label for="progressbar-friendliness" class="form-label">Friendliness</label>
                <div
                  class="progress mb-3"
                  id="progressbar-friendliness"
                  role="progressbar"
                  aria-label="progress bar"
                  aria-valuenow="90"
                  aria-valuemin="0"
                  aria-valuemax="100"
                  style="height: 12px"
                >
                  <div
                    class="progress-bar progress-bar-striped progress-bar-animated"
                    style="width: 90%"
                  >
                  </div>
                </div>
                <label for="progressbar-adaptability" class="form-label">Adaptability</label>
                <div
                  class="progress mb-3"
                  id="progressbar-adaptability"
                  role="progressbar"
                  aria-label="progress bar"
                  aria-valuenow="90"
                  aria-valuemin="0"
                  aria-valuemax="100"
                  style="height: 12px"
                >
                  <div
                    class="progress-bar progress-bar-striped progress-bar-animated"
                    style="width: 90%"
                  >
                  </div>
                </div>
                <label for="progressbar-intelligence" class="form-label">Intelligence</label>
                <div
                  class="progress mb-3"
                  id="progressbar-intelligence"
                  role="progressbar"
                  aria-label="progress bar"
                  aria-valuenow="85"
                  aria-valuemin="0"
                  aria-valuemax="100"
                  style="height: 12px"
                >
                  <div
                    class="progress-bar progress-bar-striped progress-bar-animated"
                    style="width: 85%"
                  >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- CTA -->
        <section
          class="text-light position-relative"
          style="background-image: url('/dist/assets/img/breederspot-images/dog-img-3.jpg'); background-size: cover; background-position: center;"
        >
          <div
            class="position-absolute top-0 start-0 w-100 h-100"
            style="background-color: rgba(0, 0, 0, 0.5);"
          >
          </div>
          <div class="container text-center py-5 position-relative">
            <div class="mt-2 mt-md-5">
              <i class="ri-empathize-fill text-secondary fs-1"></i>
            </div>
            <h2 class="mb-3 display-6 fw-semibold">
              Over 200 happy families have found their perfect pup with us — yours could be next.
            </h2>
            <p class="mb-4 lead">
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum quibusdam, libero
              corporis dignissimos provident nulla nemo!
            </p>
            <div class="d-flex flex-wrap justify-content-center gap-2 mb-md-5">
              <button class="btn btn-light btn-lg">
                <i class="ri-sparkling-2-line text-secondary"></i> Get started
              </button>
              <button class="btn btn-outline-light btn-lg">
                <i class="ri-arrow-right-line text-secondary"></i> Learn more
              </button>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer>
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 px-3 px-lg-5 pt-5 pb-4">
            <div class="col mb-3">
              <a
                href="/"
                class="d-inline-flex align-items-center text-decoration-none mb-2"
                aria-label="Your Company Logo"
              >
                <img
                  src="/dist/assets/img/breederspot-images/logo.svg"
                  alt="Your Company Logo"
                  style="height: 28px;"
                  class="me-2"
                />
              </a>
              <p class="text-body-secondary mb-3">
                Over 200 happy families have found their perfect pup with us — yours could be next.
              </p>
              <button class="btn btn-outline-primary">Get in touch</button>
            </div>

            <div class="col mb-3"></div>

            <div class="col mb-3">
              <nav aria-label="Quick Links">
                <h5 class="mb-3">Quick Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/1/home" class="nav-link p-0 text-body-secondary">Home</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/1/about" class="nav-link p-0 text-body-secondary">About</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/1/puppies" class="nav-link p-0 text-body-secondary">Puppies</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/1/shop" class="nav-link p-0 text-body-secondary">Shop</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/1/faq" class="nav-link p-0 text-body-secondary">FAQs</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/1/blog" class="nav-link p-0 text-body-secondary">Blog</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/1/contact" class="nav-link p-0 text-body-secondary">Contact</a>
                  </li>
                </ul>
              </nav>
            </div>

            <div class="col mb-3">
              <nav aria-label="Legal">
                <h5 class="mb-3">Legal</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Terms of Use</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Privacy Policy</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Cookies Policy</a>
                  </li>
                </ul>
              </nav>
            </div>

            <div class="col mb-3">
              <h5 class="mb-3">Contact</h5>
              <ul class="nav flex-column">
                <li class="nav-item mb-2 text-body-secondary">
                  <i class="ri-phone-fill text-primary me-2"></i>
                  <a
                    href="tel:+12345678901"
                    class="text-body-secondary text-decoration-none text-break">+1 (234) 567-8901</a
                  >
                </li>
                <li class="nav-item mb-2 text-body-secondary">
                  <i class="ri-mail-fill text-primary me-2"></i>
                  <a
                    href="mailto:hello@email.com"
                    class="text-body-secondary text-decoration-none text-break">hello@email.com</a
                  >
                </li>
                <li class="nav-item mb-2 text-body-secondary">
                  <address class="text-body-secondary">
                    <i class="ri-map-pin-fill text-primary me-2"></i>
                    123 Main Street, Austin, TX
                  </address>
                </li>
              </ul>
            </div>
          </div>
          <div class="text-center bg-primary-subtle py-4">
            <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
