                        <ul class="dropdown-menu" aria-labelledby="blogPostsDropdown">
                          <li>
                            <a class="dropdown-item" href="/2/post-1">Blog Post – No Sidebar</a>
                          </li>
                          <li>
                            <a class="dropdown-item" href="/2/post-2">Blog Post – Left Sidebar</a>
                          </li>
                          <li>
                            <a class="dropdown-item" href="/2/post-3">Blog Post – Right Sidebar</a>
                          </li>
                        </ul>
                      </li>
                    </ul>
                  </li>

                  <!-- FAQs -->
                  <li class="nav-item">
                    <a class="nav-link" href="/2/faq">FAQs</a>
                  </li>

                  <!-- Contact -->
                  <li class="nav-item">
                    <a class="nav-link" href="/2/contact">Contact</a>
                  </li>
                </ul>

                <ul class="navbar-nav flex-grow-1 pe-3 justify-content-start d-flex d-lg-none">
                  <li class="nav-item">
