---
import Head from '../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-body shadow-sm z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/2/home">
              <img
                src="/dist/assets/img/breederspot-images/logo.svg"
                alt="Logo"
                class="me-2 mt-1"
                style="height: 28px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/2/home">
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 28px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul
                  class="navbar-nav flex-grow-1 pe-3 justify-content-start justify-content-lg-center"
                >
                  <!-- Home -->
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/2/home">Home</a>
                  </li>

                  <!-- About Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="aboutDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      About
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                      <li><a class="dropdown-item" href="/2/about">About</a></li>
                      <li>
                        <a class="dropdown-item active" href="/2/breeding-philosophy"
                          >Breeding Philosophy</a
                        >
                      </li>
                      <li><a class="dropdown-item" href="/2/testimonials">Testimonials</a></li>
                    </ul>
                  </li>

                  <!-- Explore Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="exploreDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Explore
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="exploreDropdown">
                      <li><a class="dropdown-item" href="/2/puppies">Puppies</a></li>
                      <li><a class="dropdown-item" href="/2/gallery">Gallery</a></li>
                      <li><a class="dropdown-item" href="/2/shop">Shop</a></li>
                    </ul>
                  </li>

                  <!-- Blog Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="blogDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Blog
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="blogDropdown">
                      <li><a class="dropdown-item" href="/2/blog-1">Blog – No Sidebar</a></li>
                      <li><a class="dropdown-item" href="/2/blog-2">Blog – Left Sidebar</a></li>
                      <li><a class="dropdown-item" href="/2/blog-3">Blog – Right Sidebar</a></li>
                      <li><a class="dropdown-item" href="/2/post-1">Blog Post – No Sidebar</a></li>
                      <li>
                        <a class="dropdown-item" href="/2/post-2">Blog Post – Left Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/2/post-3">Blog Post – Right Sidebar</a>
                      </li>
                    </ul>
                  </li>

                  <!-- FAQs -->
                  <li class="nav-item">
                    <a class="nav-link" href="/2/faq">FAQs</a>
                  </li>

                  <!-- Contact -->
                  <li class="nav-item">
                    <a class="nav-link" href="/2/contact">Contact</a>
                  </li>
                </ul>

                <!-- Bottom Section -->
                <div class="d-block d-lg-none mt-4">
                  <a href="tel:+12345678901" class="btn btn-outline-primary rounded w-100 mb-2">
                    <i class="ri-phone-fill me-2"></i>Book Consultation
                  </a>
                  <a class="btn btn-primary rounded w-100" href="#"
                    ><i class="ri-sparkling-2-fill me-2"></i> Get Started Now</a
                  >
                </div>
              </div>
            </div>

            <div class="d-none d-lg-flex align-items-center gap-3">
              <div class="text-start">
                <small class="text-muted d-block">Book Consultation</small>
                <a href="tel:+12345678901" class="text-decoration-none text-primary fw-medium">
                  +1 (234) 567-8901
                </a>
              </div>

              <a class="btn btn-lg btn-primary rounded-pill px-4" href="#">Get Started</a>
            </div>
          </div>
        </nav>

        <!-- Hero Section -->
        <section
          class="position-relative text-light text-center"
          style="background-image: url('/dist/assets/img/breederspot-images/golden-retriever-1.jpg'); background-size: cover; background-position: center; height: 500px;"
        >
          <!-- Overlay -->
          <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
          <!-- Content -->
          <div
            class="position-relative d-flex flex-column justify-content-center align-items-center h-100 px-3"
          >
            <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <h1
                  class="bg-primary-pale text-primary d-inline-flex rounded-pill fs-5 px-4 py-2 mb-2"
                >
                  Our Breeding Philosophy
                </h1>
                <h1 class="display-4 fw-bold mb-3">Raising puppies the right way</h1>
                <p class="fs-4 mb-4">
                  We believe that ethical breeding starts with love, continues with responsibility,
                  and ends in a lifelong bond between dog and human. Our breeding practices are
                  guided by transparency, veterinary excellence, and the emotional enrichment of
                  every puppy.
                </p>
                <div class="d-flex justify-content-center flex-wrap gap-2 mb-2">
                  <button class="btn btn-lg btn-primary rounded-pill px-4">
                    View Puppies <i class="ri-arrow-right-line"></i>
                  </button>
                  <button class="btn btn-lg btn-outline-light rounded-pill px-4">
                    <i class="ri-information-2-line"></i> Learn More
                  </button>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- What Sets Us Apart -->
        <section class="bg-primary-soft py-5">
          <div class="container">
            <div class="text-center mb-4">
              <h3 class="display-6 fw-bold mb-3">What sets us apart</h3>
              <p class="fs-5 mb-0">
                Our core values guide every step of the journey—from careful planning to joyful
                homecomings.
              </p>
            </div>
            <div class="row g-4">
              <div class="col-sm-6 col-lg-3">
                <div class="card bg-primary-pale card-lift rounded-5 h-100 p-4">
                  <div class="card-body">
                    <i class="ri-home-heart-fill text-primary fs-1"></i>
                    <p class="fs-4 fw-semibold mb-2">Home-Like Spaces</p>
                    <p class="fs-5 mb-2">
                      Puppies are raised in warm, home-like settings—not cages—so they grow up
                      confident and social.
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-lg-3">
                <div class="card bg-primary-pale card-lift rounded-5 h-100 p-4">
                  <div class="card-body">
                    <i class="ri-shield-check-fill text-primary fs-1"></i>
                    <p class="fs-4 fw-semibold mb-2">Health & Safety</p>
                    <p class="fs-5 mb-2">
                      Clean, climate-controlled environments maintained with veterinary-approved
                      hygiene practices.
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-lg-3">
                <div class="card bg-primary-pale card-lift rounded-5 h-100 p-4">
                  <div class="card-body">
                    <i class="ri-tree-fill text-primary fs-1"></i>
                    <p class="fs-4 fw-semibold mb-2">Outdoor Play</p>
                    <p class="fs-5 mb-2">
                      Secure outdoor spaces where puppies can run, play, and develop motor skills
                      through daily exercise.
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-lg-3">
                <div class="card bg-primary-pale card-lift rounded-5 h-100 p-4">
                  <div class="card-body">
                    <i class="ri-user-heart-fill text-primary fs-1"></i>
                    <p class="fs-4 fw-semibold mb-2">Socialization</p>
                    <p class="fs-5 mb-2">
                      Daily human interaction and sensory exposure help puppies become emotionally
                      balanced and people-loving.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Puppy Development Protocol -->
        <section class="bg-body py-5">
          <div class="container">
            <div class="text-center mb-4">
              <h3 class="display-6 fw-bold mb-3">Puppy Development Protocol</h3>
              <p class="fs-5 mb-0">
                A structured, loving approach to raise well-rounded puppies—nurtured week by week
                for optimal growth and socialization.
              </p>
            </div>
            <div class="row g-4">
              <div class="col-sm-6 col-lg-3">
                <div class="card card-lift border rounded-5 h-100 p-4">
                  <div class="card-body">
                    <div class="display-6 fw-semibold text-primary mb-1">01.</div>
                    <p class="fs-4 fw-semibold mb-2">Week 0–2</p>
                    <p class="fs-5 mb-2">
                      Puppies stay close to their mother, focusing on warmth, nursing, and bonding.
                      We monitor health and begin gentle handling.
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-lg-3">
                <div class="card card-lift border rounded-5 h-100 p-4">
                  <div class="card-body">
                    <div class="display-6 fw-semibold text-primary mb-1">02.</div>
                    <p class="fs-4 fw-semibold mb-2">Week 3–4</p>
                    <p class="fs-5 mb-2">
                      Eyes and ears open; puppies begin to walk. We introduce new textures to the
                      puppies, gentle sounds, and human interaction daily.
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-lg-3">
                <div class="card card-lift border rounded-5 h-100 p-4">
                  <div class="card-body">
                    <div class="display-6 fw-semibold text-primary mb-1">03.</div>
                    <p class="fs-4 fw-semibold mb-2">Week 5–8</p>
                    <p class="fs-5 mb-2">
                      Puppies explore more actively. We begin crate exposure, introduce solid food,
                      and increase socialization with people.
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-lg-3">
                <div class="card card-lift border rounded-5 h-100 p-4">
                  <div class="card-body">
                    <div class="display-6 fw-semibold text-primary mb-1">04.</div>
                    <p class="fs-4 fw-semibold mb-2">Week 9+</p>
                    <p class="fs-5 mb-2">
                      Puppies are ready to transition home. We offer support, resources, and
                      guidance to families for continued development.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Comprehensive Health Testing Section -->
        <section class="bg-primary-subtle py-5">
          <div class="container">
            <div class="row g-4">
              <!-- Text Column -->
              <div class="col-lg-8">
                <h3 class="display-6 fw-bold mb-3">Comprehensive Health Testing</h3>
                <p class="fs-5 mb-3">
                  The health of our dogs is our top priority. Every parent dog undergoes thorough
                  genetic screening, regular veterinary checkups, and OFA/CERF certifications where
                  applicable. We ensure each puppy starts life with the strongest foundation—free
                  from hereditary conditions and nurtured through responsible, science-backed care
                  from day one.
                </p>
                <ul class="list-unstyled fs-5 mb-4">
                  <li><i class="ri-check-line text-primary me-2"></i>Genetic Screening</li>
                  <li>
                    <i class="ri-check-line text-primary me-2"></i>Regular Veterinary Checkups
                  </li>
                  <li><i class="ri-check-line text-primary me-2"></i>OFA/CERF Certifications</li>
                </ul>
                <a href="#" class="btn btn-lg btn-primary rounded-pill text-decoration-none px-4">
                  Learn More<i class="ri-arrow-right-line ms-1"></i>
                </a>
              </div>
              <!-- Image Column -->
              <div class="col-lg-4 d-flex justify-content-center">
                <figure class="img-scale rounded-5">
                  <img
                    src="/dist/assets/img/breederspot-images/golden-retriever-2.jpg"
                    class="img-fluid"
                    alt="Golden Retriever"
                  />
                </figure>
              </div>
            </div>
          </div>
        </section>

        <!-- CTA Section -->
        <section
          class="text-light position-relative"
          style="background-image: url('/dist/assets/img/breederspot-images/gradient.jpg'); background-size: cover; background-position: center;"
        >
          <div
            class="position-absolute top-0 start-0 w-100 h-100"
            style="background-color: rgba(0, 0, 0, 0.1);"
          >
          </div>
          <div class="container py-5 position-relative">
            <div class="row">
              <div class="col-md-8 offset-md-2">
                <h2 class="display-6 fw-bold mb-3">
                  Find your perfect pup—<em>ethically, responsibly, and with love</em>.
                </h2>
                <p class="fs-5 mb-4">
                  Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum quibusdam, libero
                  corporis nemo!
                </p>
                <form class="row text-start g-3">
                  <div class="col-md-6">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      id="fullName"
                      placeholder="Jane Doe"
                      required
                    />
                  </div>
                  <div class="col-md-6">
                    <label for="email" class="form-label">Email Address</label>
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      id="email"
                      placeholder="you@example.com"
                      required
                    />
                  </div>
                  <div class="col-md-6">
                    <label for="preferredBreed" class="form-label">Preferred Breed (optional)</label
                    >
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      id="preferredBreed"
                      placeholder="e.g., Golden Retriever"
                    />
                  </div>
                  <div class="col-md-6">
                    <label for="phone" class="form-label">Phone Number (optional)</label>
                    <input
                      type="tel"
                      class="form-control form-control-lg"
                      id="phone"
                      placeholder="+1 (234) 567-8901"
                    />
                  </div>
                  <div class="col-md-12">
                    <label for="message" class="form-label">Tell us what you're looking for</label>
                    <textarea
                      class="form-control form-control-lg"
                      id="message"
                      rows="4"
                      placeholder="Age, temperament, size, etc."></textarea>
                  </div>
                  <div class="col-12 text-center">
                    <button
                      type="submit"
                      class="btn btn-outline-light btn-lg rounded-pill px-4 mt-3"
                    >
                      <i class="ri-sparkling-2-line me-1"></i> Find My Pup
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="pt-5 pb-4">
          <div class="container">
            <div class="row">
              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Quick Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/2/home" class="nav-link p-0 text-body-secondary">Home</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/2/about" class="nav-link p-0 text-body-secondary">About</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/2/contact" class="nav-link p-0 text-body-secondary">Contact</a>
                  </li>
                </ul>
              </div>

              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Other Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/2/blog" class="nav-link p-0 text-body-secondary">Blog</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/2/puppies" class="nav-link p-0 text-body-secondary">Puppies</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/2/shop" class="nav-link p-0 text-body-secondary">Shop</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/2/faq" class="nav-link p-0 text-body-secondary">FAQs</a>
                  </li>
                </ul>
              </div>

              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Legal</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Terms of Use</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Privacy Policy</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Cookies Policy</a>
                  </li>
                </ul>
              </div>

              <div class="col-md-5 offset-md-1 mb-3">
                <form>
                  <h5 class="mb-3">Newsletter</h5>
                  <p class="text-body-secondary mb-3">
                    Subscribe to our newsletter for the latest updates.
                  </p>
                  <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                    <input
                      type="email"
                      class="form-control form-control-lg rounded-pill"
                      placeholder="Email address"
                    />
                    <button class="btn btn-lg btn-primary rounded-pill" type="button"
                      >Subscribe</button
                    >
                  </div>
                </form>
              </div>
            </div>

            <div class="text-center pt-4 mt-4 border-top">
              <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
            </div>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
