---
import Head from '../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-body shadow-sm z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/2/home">
              <img
                src="/dist/assets/img/breederspot-images/logo.svg"
                alt="Logo"
                class="me-2 mt-1"
                style="height: 28px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/2/home">
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 28px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul
                  class="navbar-nav flex-grow-1 pe-3 justify-content-start justify-content-lg-center"
                >
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" aria-current="page" href="/2/home">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/2/about">About</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/2/puppies">Puppies</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/2/shop">Shop</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/2/faq">FAQs</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw active" href="/2/blog">Blog</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/2/contact">Contact</a>
                  </li>
                </ul>

                <!-- Bottom Section -->
                <div class="d-block d-lg-none mt-4">
                  <a href="tel:+12345678901" class="btn btn-outline-primary rounded w-100 mb-2">
                    <i class="ri-phone-fill me-2"></i>Book Consultation
                  </a>
                  <a class="btn btn-primary rounded w-100" href="#"
                    ><i class="ri-sparkling-2-fill me-2"></i> Get Started Now</a
                  >
                </div>
              </div>
            </div>

            <div class="d-none d-lg-flex align-items-center gap-3">
              <div class="text-start">
                <small class="text-muted d-block">Book Consultation</small>
                <a href="tel:+12345678901" class="text-decoration-none text-primary fw-medium">
                  +1 (234) 567-8901
                </a>
              </div>

              <a class="btn btn-lg btn-primary rounded-pill px-4" href="#">Get Started</a>
            </div>
          </div>
        </nav>

        <!-- Blogs Section -->
        <section class="my-5">
          <div class="container">
            <div class="text-center">
              <h1 class="bg-primary-pale d-inline-flex rounded-pill fs-5 px-4 py-2 mb-3">Blogs</h1>
              <h2 class="display-6 fw-bold mb-4">Stay informed with our latest blog posts</h2>
            </div>

            <div class="row gy-4">
              <!-- Sidebar Column -->
              <div class="col-lg-4">
                <div class="sticky-top z-1" style="top: 80px;">
                  <!-- Search Card -->
                  <div class="card shadow-sm rounded-5 p-3 mb-4">
                    <div class="card-body">
                      <h5 class="card-title mb-3">
                        <i class="ri-search-line me-2"></i>Search Blog Posts
                      </h5>
                      <form>
                        <div class="mb-3">
                          <input
                            type="text"
                            class="form-control form-control-lg rounded-pill"
                            placeholder="Search topics, titles..."
                          />
                        </div>
                        <button
                          type="submit"
                          class="btn btn-lg btn-outline-primary rounded-pill w-100">Search</button
                        >
                      </form>
                    </div>
                  </div>
                  <!-- Tags Card -->
                  <div class="card shadow-sm rounded-5 p-3 mb-4">
                    <div class="card-body">
                      <h5 class="card-title mb-3">
                        <i class="ri-price-tag-3-line me-2"></i>Browse by Tags
                      </h5>
                      <div class="d-flex flex-wrap gap-2">
                        <a
                          href="#"
                          class="badge text-primary border shadow-sm rounded-pill text-decoration-none px-3 py-2"
                          >Health</a
                        >
                        <a
                          href="#"
                          class="badge text-primary border shadow-sm rounded-pill text-decoration-none px-3 py-2"
                          >Ethics</a
                        >
                        <a
                          href="#"
                          class="badge text-primary border shadow-sm rounded-pill text-decoration-none px-3 py-2"
                          >Value</a
                        >
                        <a
                          href="#"
                          class="badge text-primary border shadow-sm rounded-pill text-decoration-none px-3 py-2"
                          >Breeders</a
                        >
                        <a
                          href="#"
                          class="badge text-primary border shadow-sm rounded-pill text-decoration-none px-3 py-2"
                          >Process</a
                        >
                        <a
                          href="#"
                          class="badge text-primary border shadow-sm rounded-pill text-decoration-none px-3 py-2"
                          >Puppies</a
                        >
                      </div>
                    </div>
                  </div>

                  <!-- Recent Posts Card -->
                  <div class="card shadow-sm rounded-5 p-3 mb-4">
                    <div class="card-body">
                      <h5 class="card-title mb-3">
                        <i class="ri-history-line me-2"></i>Recent Posts
                      </h5>
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                          <a href="#" class="text-decoration-none fw-semibold d-block mb-1">
                            Why Health Testing Matters in Dog Breeding
                          </a>
                          <small class="text-muted"
                            >12 Jan 2025 • <span class="badge text-primary border shadow-sm"
                              >Health</span
                            >
                          </small>
                        </li>
                        <li class="list-group-item">
                          <a href="#" class="text-decoration-none fw-semibold d-block mb-1">
                            Puppy Mills vs. Ethical Breeders: Learn the Difference
                          </a>
                          <small class="text-muted"
                            >20 Feb 2025 • <span class="badge text-primary border shadow-sm"
                              >Ethics</span
                            >
                          </small>
                        </li>
                        <li class="list-group-item">
                          <a href="#" class="text-decoration-none fw-semibold d-block mb-1">
                            The True Cost of a Well-Bred Puppy
                          </a>
                          <small class="text-muted"
                            >6 Jan 2025 • <span class="badge text-primary border shadow-sm"
                              >Value</span
                            >
                          </small>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <div class="text-center text-md-end">
                    <button class="btn btn-lg btn-primary rounded-pill px-4"
                      >Check all blogs <i class="ri-arrow-right-line"></i></button
                    >
                  </div>
                </div>
              </div>
              <div class="col-lg-8">
                <div class="card shadow-sm rounded-5 p-0 mb-4">
                  <img
                    src="/dist/assets/img/breederspot-images/dog-img-3.jpg"
                    class="card-img-top rounded-top-5"
                    style="max-height: 400px; object-fit: cover;"
                    alt="blog image"
                  />
                  <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                      <span class="badge text-primary border shadow-sm">Health</span>
                      <span class="text-muted small">12 Jan 2025</span>
                    </div>
                    <h5 class="card-title fs-4 mb-2">
                      <a href="#" class="text-decoration-none text-body">
                        Why Health Testing Matters in Dog Breeding
                      </a>
                    </h5>
                    <p class="text-muted mb-2">
                      Explaining the importance of genetic and health screenings in ethical breeding
                      practices.
                    </p>
                    <a href="#" class="text-decoration-none text-primary mb-0"
                      >Read more <i class="ri-arrow-right-line"></i></a
                    >
                  </div>
                </div>
                <div class="card shadow-sm rounded-5 p-0 mb-4">
                  <img
                    src="/dist/assets/img/breederspot-images/dog-img-9-wide.jpg"
                    class="card-img-top rounded-top-5"
                    style="max-height: 400px; object-fit: cover;"
                    alt="blog image"
                  />
                  <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                      <span class="badge text-primary border shadow-sm">Ethics</span>
                      <span class="text-muted small">20 Feb 2025</span>
                    </div>
                    <h5 class="card-title fs-4 mb-2">
                      <a href="#" class="text-decoration-none text-body">
                        Puppy Mills vs. Ethical Breeders: Learn the Difference
                      </a>
                    </h5>
                    <p class="text-muted mb-2">
                      Comparing unethical breeding operations to responsible ones, with clear
                      distinctions.
                    </p>
                    <a href="#" class="text-decoration-none text-primary mb-0"
                      >Read more <i class="ri-arrow-right-line"></i></a
                    >
                  </div>
                </div>
                <div class="card shadow-sm rounded-5 p-0">
                  <img
                    src="/dist/assets/img/breederspot-images/dog-img-13-wide.jpg"
                    class="card-img-top rounded-top-5"
                    style="max-height: 400px; object-fit: cover;"
                    alt="blog image"
                  />
                  <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                      <span class="badge text-primary border shadow-sm">Value</span>
                      <span class="text-muted small">6 Jan 2025</span>
                    </div>
                    <h5 class="card-title fs-4 mb-2">
                      <a href="#" class="text-decoration-none text-body">
                        The True Cost of a Well-Bred Puppy
                      </a>
                    </h5>
                    <p class="text-muted mb-2">
                      Why puppies from ethical breeders cost more and what goes into responsible
                      pricing.
                    </p>
                    <a href="#" class="text-decoration-none text-primary mb-0"
                      >Read more <i class="ri-arrow-right-line"></i></a
                    >
                  </div>
                </div>

                <!-- Pagination -->
                <nav class="mt-5 d-flex justify-content-center" aria-label="Pagination">
                  <ul class="pagination pagination-lg z-1">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </section>

        <!-- CTA Section -->
        <section
          class="text-light position-relative"
          style="background-image: url('/dist/assets/img/breederspot-images/gradient.jpg'); background-size: cover; background-position: center;"
        >
          <div
            class="position-absolute top-0 start-0 w-100 h-100"
            style="background-color: rgba(0, 0, 0, 0.1);"
          >
          </div>
          <div class="container py-5 position-relative">
            <div class="row">
              <div class="col-md-8 offset-md-2">
                <h2 class="display-6 fw-bold mb-3">
                  Find your perfect pup—<em>ethically, responsibly, and with love</em>.
                </h2>
                <p class="fs-5 mb-4">
                  Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum quibusdam, libero
                  corporis nemo!
                </p>
                <form class="row text-start g-3">
                  <div class="col-md-6">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      id="fullName"
                      placeholder="Jane Doe"
                      required
                    />
                  </div>
                  <div class="col-md-6">
                    <label for="email" class="form-label">Email Address</label>
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      id="email"
                      placeholder="you@example.com"
                      required
                    />
                  </div>
                  <div class="col-md-6">
                    <label for="preferredBreed" class="form-label">Preferred Breed (optional)</label
                    >
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      id="preferredBreed"
                      placeholder="e.g., Golden Retriever"
                    />
                  </div>
                  <div class="col-md-6">
                    <label for="phone" class="form-label">Phone Number (optional)</label>
                    <input
                      type="tel"
                      class="form-control form-control-lg"
                      id="phone"
                      placeholder="+1 (234) 567-8901"
                    />
                  </div>
                  <div class="col-md-12">
                    <label for="message" class="form-label">Tell us what you're looking for</label>
                    <textarea
                      class="form-control form-control-lg"
                      id="message"
                      rows="4"
                      placeholder="Age, temperament, size, etc."></textarea>
                  </div>
                  <div class="col-12 text-center">
                    <button
                      type="submit"
                      class="btn btn-outline-light btn-lg rounded-pill px-4 mt-3"
                    >
                      <i class="ri-sparkling-2-line me-1"></i> Find My Pup
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="pt-5 pb-4">
          <div class="container">
            <div class="row">
              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Quick Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/2/home" class="nav-link p-0 text-body-secondary">Home</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/2/about" class="nav-link p-0 text-body-secondary">About</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/2/contact" class="nav-link p-0 text-body-secondary">Contact</a>
                  </li>
                </ul>
              </div>

              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Other Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/2/blog" class="nav-link p-0 text-body-secondary">Blog</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/2/puppies" class="nav-link p-0 text-body-secondary">Puppies</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/2/shop" class="nav-link p-0 text-body-secondary">Shop</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/2/faq" class="nav-link p-0 text-body-secondary">FAQs</a>
                  </li>
                </ul>
              </div>

              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Legal</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Terms of Use</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Privacy Policy</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Cookies Policy</a>
                  </li>
                </ul>
              </div>

              <div class="col-md-5 offset-md-1 mb-3">
                <form>
                  <h5 class="mb-3">Newsletter</h5>
                  <p class="text-body-secondary mb-3">
                    Subscribe to our newsletter for the latest updates.
                  </p>
                  <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                    <input
                      type="email"
                      class="form-control form-control-lg rounded-pill"
                      placeholder="Email address"
                    />
                    <button class="btn btn-lg btn-primary rounded-pill" type="button"
                      >Subscribe</button
                    >
                  </div>
                </form>
              </div>
            </div>

            <div class="text-center pt-4 mt-4 border-top">
              <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
            </div>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
