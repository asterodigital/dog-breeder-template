              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/4/home">
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 28px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul
                  class="navbar-nav flex-grow-1 pe-3 justify-content-start justify-content-lg-center"
                >
                  <!-- Home -->
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/4/home">Home</a>
                  </li>

                  <!-- About Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="aboutDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      About
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                      <li><a class="dropdown-item" href="/4/about">About</a></li>
                      <li>
                        <a class="dropdown-item" href="/4/breeding-philosophy"
                          >Breeding Philosophy</a
                        >
                      </li>
                      <li>
                        <a class="dropdown-item active" href="/4/testimonials">Testimonials</a>
                      </li>
                    </ul>
                  </li>

                  <!-- Explore Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="exploreDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Explore
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="exploreDropdown">
                      <li><a class="dropdown-item" href="/4/puppies">Puppies</a></li>
                      <li><a class="dropdown-item" href="/4/gallery">Gallery</a></li>
                      <li><a class="dropdown-item" href="/4/shop">Shop</a></li>
                    </ul>
                  </li>

                  <!-- Blog Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="blogDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Blog
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="blogDropdown">
                      <li>
                        <a class="dropdown-item" href="/4/blog-1">Blog – No Sidebar</a>
                      </li>
                      <li><a class="dropdown-item" href="/4/blog-2">Blog – Left Sidebar</a></li>
                      <li><a class="dropdown-item" href="/4/blog-3">Blog – Right Sidebar</a></li>
                      <li><a class="dropdown-item" href="/4/post-1">Blog Post – No Sidebar</a></li>
                      <li>
                        <a class="dropdown-item" href="/4/post-2">Blog Post – Left Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/4/post-3">Blog Post – Right Sidebar</a>
                      </li>
                    </ul>
                  </li>

                  <!-- FAQs -->
                  <li class="nav-item">
                    <a class="nav-link" href="/4/faq">FAQs</a>
                  </li>

                  <!-- Contact -->
                  <li class="nav-item">
                    <a class="nav-link" href="/4/contact">Contact</a>
                  </li>
                </ul>

                <!-- Bottom Section -->
                <div class="d-block d-lg-none mt-4">
                  <a href="tel:+12345678901" class="btn btn-outline-primary rounded w-100 mb-2">
                    <i class="ri-phone-fill me-2"></i>Book Consultation
                  </a>
                  <a class="btn btn-primary rounded w-100" href="#"
                    ><i class="ri-sparkling-2-fill me-2"></i> Get Started Now</a
                  >
                </div>
              </div>
            </div>

            <div class="d-none d-lg-flex align-items-center gap-3">
              <div class="text-start">
                <small class="text-muted d-block">Book Consultation</small>
                <a href="tel:+12345678901" class="text-primary text-decoration-none fw-medium">
                  +1 (234) 567-8901
                </a>
              </div>

              <a class="btn btn-lg btn-primary rounded" href="#">Get Started</a>
            </div>
          </div>
        </nav>

        <!-- Testimonials Section -->
        <section class="bg-body py-5">
          <div class="container">
            <div class="row">
              <div class="col-lg-10 offset-lg-1">
                <h1 class="text-primary text-center text-uppercase fw-semibold fs-5 mb-2">
                  Testimonials
                </h1>
                <h2 class="display-6 text-center fw-bold mb-4">
                  What Our Puppy Families Are Saying
                </h2>
                <div class="row g-4 mb-4">
                  <!-- Testimonial 1 -->
                  <div class="col-md-6">
                    <div class="card card-lift bg-primary-subtle border h-100 p-3">
                      <div class="card-body d-flex flex-column justify-content-between">
                        <!-- Testimonial Text -->
                        <p class="card-text mb-3">
                          “We couldn’t be happier with our puppy! The entire process was smooth, and
                          it’s clear how much care goes into raising these dogs. Truly an amazing
                          experience.”
                        </p>
                        <!-- Author Info -->
                        <div class="d-flex align-items-center mt-auto">
                          <img
                            src="/dist/assets/img/avatars/avatar1.jpg"
                            alt="Avatar"
                            class="rounded-circle me-3"
                            width="64"
                            height="64"
                          />
                          <div>
                            <h6 class="fw-semibold mb-0">Jane Smith</h6>
                            <p class="text-muted mb-0">Austin, TX</p>
                            <div>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Testimonial 2 -->
                  <div class="col-md-6">
                    <div class="card card-lift bg-primary-subtle border h-100 p-3">
                      <div class="card-body d-flex flex-column justify-content-between">
                        <!-- Testimonial Text -->
                        <p class="card-text mb-3">
                          “From the first inquiry to bringing our puppy home, every step was
                          professional. You can tell these dogs are raised with love—we're grateful
                          to have found them.”
                        </p>
                        <!-- Author Info -->
                        <div class="d-flex align-items-center mt-auto">
                          <img
                            src="/dist/assets/img/avatars/avatar7.jpg"
                            alt="Avatar"
                            class="rounded-circle me-3"
                            width="64"
                            height="64"
                          />
                          <div>
                            <h6 class="fw-semibold mb-0">Nguyen Minh</h6>
                            <p class="text-muted mb-0">San Diego, CA</p>
                            <div>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-half-s-fill text-yellow"></i>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Testimonial 3 -->
                  <div class="col-md-6">
                    <div class="card card-lift bg-primary-subtle border h-100 p-3">
                      <div class="card-body d-flex flex-column justify-content-between">
                        <!-- Testimonial Text -->
                        <p class="card-text mb-3">
                          "What stood out was the transparency. Health screenings, temperament
                          evaluations, early socialization — everything was handled with care. Our
                          pup, Max, is a joy!"
                        </p>
                        <!-- Author Info -->
                        <div class="d-flex align-items-center mt-auto">
                          <img
                            src="/dist/assets/img/avatars/avatar9.jpg"
                            alt="Avatar"
                            class="rounded-circle me-3"
                            width="64"
                            height="64"
                          />
                          <div>
                            <h6 class="fw-semibold mb-0">Jack Smith</h6>
                            <p class="text-muted mb-0">Atlanta, GA</p>
                            <div>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-half-s-fill text-yellow"></i>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Testimonial 4 -->
                  <div class="col-md-6">
                    <div class="card card-lift bg-primary-subtle border h-100 p-3">
                      <div class="card-body d-flex flex-column justify-content-between">
                        <!-- Testimonial Text -->
                        <p class="card-text mb-3">
                          "We'd never bought a dog before. But this organization made sure we
                          understood every step. Our breeder was amazing, and now we have Luna —
                          healthy and well-adjusted."
                        </p>
                        <!-- Author Info -->
                        <div class="d-flex align-items-center mt-auto">
                          <img
                            src="/dist/assets/img/avatars/avatar5.jpg"
                            alt="Avatar"
                            class="rounded-circle me-3"
                            width="64"
                            height="64"
                          />
                          <div>
                            <h6 class="fw-semibold mb-0">Aaron Thomas</h6>
                            <p class="text-muted mb-0">San Francisco, CA</p>
                            <div>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Info Section -->
        <section class="bg-primary-subtle py-5">
          <div class="container">
            <div class="row g-4">
              <div class="col-sm-6">
                <div class="text-center">
                  <div>
                    <i class="ri-star-fill text-yellow fs-3"></i>
                    <i class="ri-star-fill text-yellow fs-3"></i>
                    <i class="ri-star-fill text-yellow fs-3"></i>
                    <i class="ri-star-fill text-yellow fs-3"></i>
                    <i class="ri-star-half-fill text-yellow fs-3"></i>
                  </div>
                  <div>
                    <span class="fw-semibold fs-5 ms-2">4.5/5 Average Rating</span>
                  </div>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="text-center">
                  <div>
                    <i class="ri-group-fill text-primary fs-3"></i>
                  </div>
                  <div>
                    <span class="fw-semibold fs-5 ms-2">100+ Happy Families</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Video Testimonials Section -->
        <section class="bg-body py-5">
          <div class="container">
            <div class="row">
              <div class="col-lg-10 offset-lg-1">
                <h2 class="display-6 text-center fw-bold mb-2">Video Testimonials</h2>
                <p class="text-center mb-4">
                  Heartfelt stories from real families who’ve welcomed our puppies into their
                  homes—with love, joy, and wagging tails.
                </p>
                <div class="row g-4">
                  <div class="col-md-6">
                    <div class="card bg-primary-subtle border h-100 p-0">
                      <div class="position-relative">
                        <a href="#" class="d-block">
                          <img
                            src="/dist/assets/img/breederspot-images/dog-img-10.jpg"
                            alt="Testimonial Video Thumbnail"
                            class="card-img-top"
                            style="object-fit: cover; height: 225px;"
                          />
                          <div class="position-absolute top-50 start-50 translate-middle">
                            <i
                              class="ri-play-fill fs-1 text-light bg-dark bg-opacity-75 rounded-circle p-2"
                            ></i>
                          </div>
                        </a>
                      </div>
                      <div class="card-body p-3">
                        <h5 class="card-title mb-2">The Johnson Family</h5>
                        <p class="text-muted mb-2">Austin, Texas</p>
                        <p class="card-text">
                          “We couldn’t be happier with our new pup! From the first call to pickup
                          day, the care and professionalism were unmatched.”
                        </p>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="card bg-primary-subtle border h-100 p-0">
                      <div class="position-relative">
                        <a href="#" class="d-block">
                          <img
                            src="/dist/assets/img/breederspot-images/dog-img-13.jpg"
                            alt="Testimonial Video Thumbnail"
                            class="card-img-top"
                            style="object-fit: cover; height: 225px;"
                          />
                          <div class="position-absolute top-50 start-50 translate-middle">
                            <i
                              class="ri-play-fill fs-1 text-light bg-dark bg-opacity-75 rounded-circle p-2"
                            ></i>
                          </div>
                        </a>
                      </div>
                      <div class="card-body p-3">
                        <h5 class="card-title mb-2">The Williams Family</h5>
                        <p class="text-muted mb-2">Las Vegas, Nevada</p>
                        <p class="card-text">
                          “From the first inquiry to bringing our puppy home, every step was
                          professional. We're grateful to have found these dogs.”
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Visit Us Card -->
        <section class="bg-body pb-5">
          <div class="container">
            <div class="card bg-primary-subtle border border-primary-pale p-0 p-md-3">
              <div class="card-body p-3">
                <div class="row align-items-center g-4">
                  <div class="col-md-3 text-md-center">
                    <i class="ri-map-pin-line text-primary fs-1"></i>
                    <p class="text-muted text-uppercase fw-semibold mb-0">Visit Us in</p>
                    <p class="fs-5 fw-semibold mb-0">Austin, TX</p>
                  </div>
                  <div class="col-md-3">
                    <div class="mb-2">
                      <i class="ri-phone-fill text-primary fs-5 me-2"></i>
                      <a
                        href="tel:+12345678901"
                        class="text-body-secondary text-decoration-none text-break"
                        >+1 (234) 567-8901</a
                      >
                    </div>

                    <div>
                      <address class="text-body-secondary mb-0">
                        <i class="ri-map-pin-fill text-primary fs-5 me-2"></i>
                        123 Main Street, Austin, TX
                      </address>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <p class="mb-0">
                      Visit us in Austin to see where our pups are raised and meet the newest
                      members of your family.
                      <strong>Schedule your visit today — tails are already wagging!</strong>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="pt-5 pb-4">
          <div class="container">
            <div class="row">
              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Quick Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/4/home" class="nav-link p-0 text-body-secondary">Home</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/4/about" class="nav-link p-0 text-body-secondary">About</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/4/contact" class="nav-link p-0 text-body-secondary">Contact</a>
                  </li>
                </ul>
              </div>

              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Other Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/4/blog" class="nav-link p-0 text-body-secondary">Blog</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/4/puppies" class="nav-link p-0 text-body-secondary">Puppies</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/4/shop" class="nav-link p-0 text-body-secondary">Shop</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/4/faq" class="nav-link p-0 text-body-secondary">FAQs</a>
                  </li>
                </ul>
