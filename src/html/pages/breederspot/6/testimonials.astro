                            <h6 class="fw-semibold mb-0">Jane Smith</h6>
                            <p class="text-muted mb-0">Austin, TX</p>
                            <div>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                              <i class="ri-star-s-fill text-yellow"></i>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Testimonial 2 -->
                  <div class="col-md-6">
                    <div class="card card-lift bg-primary-subtle border h-100 p-3">
