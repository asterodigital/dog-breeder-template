---
import Head from '../../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-body shadow-sm z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/breederspot/2/home">
              <img
                src="/dist/assets/img/breederspot-images/logo.svg"
                alt="Logo"
                class="me-2 mt-1"
                style="height: 28px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/breederspot/2/home">
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 28px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul
                  class="navbar-nav flex-grow-1 pe-3 justify-content-start justify-content-lg-center"
                >
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" aria-current="page" href="/breederspot/2/home"
                      >Home</a
                    >
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/breederspot/2/about">About</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/breederspot/2/puppies">Puppies</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/breederspot/2/shop">Shop</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/breederspot/2/faq">FAQs</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw" href="/breederspot/2/blog">Blog</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link nav-link-paw active" href="/breederspot/2/contact">Contact</a
                    >
                  </li>
                </ul>

                <!-- Bottom Section -->
                <div class="d-block d-lg-none mt-4">
                  <a href="tel:+12345678901" class="btn btn-outline-primary rounded w-100 mb-2">
                    <i class="ri-phone-fill me-2"></i>Book Consultation
                  </a>
                  <a class="btn btn-primary rounded w-100" href="#"
                    ><i class="ri-sparkling-2-fill me-2"></i> Get Started Now</a
                  >
                </div>
              </div>
            </div>

            <div class="d-none d-lg-flex align-items-center gap-3">
              <div class="text-start">
                <small class="text-muted d-block">Book Consultation</small>
                <a href="tel:+12345678901" class="text-decoration-none text-primary fw-medium">
                  +1 (234) 567-8901
                </a>
              </div>

              <a class="btn btn-lg btn-primary rounded-pill px-4" href="#">Get Started</a>
            </div>
          </div>
        </nav>

        <!-- Book Appointment Section -->
        <section class="mt-5 p-2 position-relative">
          <div
            class="container bg-primary-subtle rounded-5 border border-primary-pale p-4 p-md-5 position-relative overflow-hidden"
          >
            <img
              src="/dist/assets/img/breederspot-images/multiple-paws.png"
              alt="Decorative Paws Image"
              class="position-absolute paw-overlay-img"
            />

            <div class="row align-items-center position-relative">
              <div class="col-md-8">
                <div class="d-flex align-items-center gap-3 mb-1">
                  <i class="ri-calendar-line text-primary fs-3"></i>
                  <h4 class="fw-bold mb-0">Book a Free Appointment</h4>
                </div>
                <p class="fs-5 mb-0">
                  Have questions about our breeding practices or puppies? We’re happy to chat.
                </p>
              </div>
              <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a href="#" class="btn btn-primary btn-lg rounded-pill px-4 mb-1">Schedule Now</a>
                <div>
                  <small>*T&Cs Apply</small>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Contact Form -->
        <section class="my-5">
          <div class="container">
            <div class="row">
              <div class="col-md-6">
                <i class="ri-customer-service-fill text-primary fs-1"></i>
                <h1 class="display-6 fw-semibold mb-2">Contact Us</h1>
                <p class="lead mb-4">
                  Whether you have a question, need support, or just want to say hello — we’re here
                  for you.
                </p>
                <div class="d-flex align-items-start gap-3 mb-3">
                  <i class="ri-phone-fill fs-4 text-primary"></i>
                  <div>
                    <h6 class="mb-1">Phone</h6>
                    <p class="mb-0 text-muted">
                      <a href="tel:+12345678901" class="text-muted text-decoration-none"
                        >+1 (234) 567-8901</a
                      >
                    </p>
                  </div>
                </div>
                <div class="d-flex align-items-start gap-3 mb-3">
                  <i class="ri-mail-fill fs-4 text-primary"></i>
                  <div>
                    <h6 class="mb-1">Email</h6>
                    <p class="mb-0 text-muted">
                      <a href="mailto:hello@yourcompany.com" class="text-muted text-decoration-none"
                        >hello@yourcompany.com</a
                      >
                    </p>
                  </div>
                </div>
                <div class="d-flex align-items-start gap-3">
                  <i class="ri-map-pin-fill fs-4 text-primary"></i>
                  <div>
                    <h6 class="mb-1">Address</h6>
                    <p class="mb-0 text-muted">
                      1234 Market Street, Suite 500 <br />San Francisco, CA 94103, USA
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-md-6 mt-auto pt-4 pt-md-0">
                <form>
                  <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      id="name"
                      placeholder="John Doe"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      id="email"
                      placeholder="you@example.com"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea
                      class="form-control form-control-lg"
                      id="message"
                      rows="3"
                      placeholder="Write your message here..."></textarea>
                  </div>
                  <div class="d-grid">
                    <button type="submit" class="btn btn-lg btn-primary rounded-pill">Submit</button
                    >
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>

        <!-- Map Section -->
        <section class="mt-2">
          <div class="container-fluid px-0">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!2m12!1m3!1d11034.5656!2d-97.7431!3d30.2672!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b5e4c51e3b7b%3A0x8d2fd94b632cf761!2sAustin%2C%20TX!5e0!3m2!1sen!2sus!4v1615555555555"
              width="100%"
              height="400"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </section>

        <!-- CTA Section -->
        <section
          class="text-light position-relative"
          style="background-image: url('/dist/assets/img/breederspot-images/gradient.jpg'); background-size: cover; background-position: center;"
        >
          <div
            class="position-absolute top-0 start-0 w-100 h-100"
            style="background-color: rgba(0, 0, 0, 0.1);"
          >
          </div>
          <div class="container py-5 position-relative">
            <div class="row">
              <div class="col-md-8 offset-md-2">
                <h2 class="display-6 fw-bold mb-3">
                  Find your perfect pup—<em>ethically, responsibly, and with love</em>.
                </h2>
                <p class="fs-5 mb-4">
                  Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum quibusdam, libero
                  corporis nemo!
                </p>
                <form class="row text-start g-3">
                  <div class="col-md-6">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      id="fullName"
                      placeholder="Jane Doe"
                      required
                    />
                  </div>
                  <div class="col-md-6">
                    <label for="email" class="form-label">Email Address</label>
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      id="email"
                      placeholder="you@example.com"
                      required
                    />
                  </div>
                  <div class="col-md-6">
                    <label for="preferredBreed" class="form-label">Preferred Breed (optional)</label
                    >
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      id="preferredBreed"
                      placeholder="e.g., Golden Retriever"
                    />
                  </div>
                  <div class="col-md-6">
                    <label for="phone" class="form-label">Phone Number (optional)</label>
                    <input
                      type="tel"
                      class="form-control form-control-lg"
                      id="phone"
                      placeholder="+1 (234) 567-8901"
                    />
                  </div>
                  <div class="col-md-12">
                    <label for="message" class="form-label">Tell us what you're looking for</label>
                    <textarea
                      class="form-control form-control-lg"
                      id="message"
                      rows="4"
                      placeholder="Age, temperament, size, etc."></textarea>
                  </div>
                  <div class="col-12 text-center">
                    <button
                      type="submit"
                      class="btn btn-outline-light btn-lg rounded-pill px-4 mt-3"
                    >
                      <i class="ri-sparkling-2-line me-1"></i> Find My Pup
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="pt-5 pb-4">
          <div class="container">
            <div class="row">
              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Quick Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/breederspot/2/home" class="nav-link p-0 text-body-secondary">Home</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/breederspot/2/about" class="nav-link p-0 text-body-secondary">About</a
                    >
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/breederspot/2/contact" class="nav-link p-0 text-body-secondary"
                      >Contact</a
                    >
                  </li>
                </ul>
              </div>

              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Other Links</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="/breederspot/2/blog" class="nav-link p-0 text-body-secondary">Blog</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/breederspot/2/puppies" class="nav-link p-0 text-body-secondary"
                      >Puppies</a
                    >
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/breederspot/2/shop" class="nav-link p-0 text-body-secondary">Shop</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="/breederspot/2/faq" class="nav-link p-0 text-body-secondary">FAQs</a>
                  </li>
                </ul>
              </div>

              <div class="col-6 col-md-2 mb-3">
                <h5 class="mb-3">Legal</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Terms of Use</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Privacy Policy</a>
                  </li>
                  <li class="nav-item mb-2">
                    <a href="#" class="nav-link p-0 text-body-secondary">Cookies Policy</a>
                  </li>
                </ul>
              </div>

              <div class="col-md-5 offset-md-1 mb-3">
                <form>
                  <h5 class="mb-3">Newsletter</h5>
                  <p class="text-body-secondary mb-3">
                    Subscribe to our newsletter for the latest updates.
                  </p>
                  <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                    <input
                      type="email"
                      class="form-control form-control-lg rounded-pill"
                      placeholder="Email address"
                    />
                    <button class="btn btn-lg btn-primary rounded-pill" type="button"
                      >Subscribe</button
                    >
                  </div>
                </form>
              </div>
            </div>

            <div class="text-center pt-4 mt-4 border-top">
              <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
            </div>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
