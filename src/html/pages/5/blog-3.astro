---
import Head from '../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/5/home">
              <img
                src="/dist/assets/img/breederspot-images/logo.svg"
                alt="Logo"
                class="me-2 mt-1"
                style="height: 28px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/5/home">
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 28px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul
                  class="navbar-nav flex-grow-1 pe-3 justify-content-start justify-content-lg-center"
                >
                  <!-- Home -->
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/5/home">Home</a>
                  </li>

                  <!-- About Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="aboutDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      About
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                      <li><a class="dropdown-item" href="/5/about">About</a></li>
                      <li>
                        <a class="dropdown-item" href="/5/breeding-philosophy"
                          >Breeding Philosophy</a
                        >
                      </li>
                      <li><a class="dropdown-item" href="/5/testimonials">Testimonials</a></li>
                    </ul>
                  </li>

                  <!-- Explore Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="exploreDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Explore
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="exploreDropdown">
                      <li><a class="dropdown-item" href="/5/puppies">Puppies</a></li>
                      <li><a class="dropdown-item" href="/5/gallery">Gallery</a></li>
                      <li><a class="dropdown-item" href="/5/shop">Shop</a></li>
                    </ul>
                  </li>

                  <!-- Blog Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="blogDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Blog
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="blogDropdown">
                      <li>
                        <a class="dropdown-item" href="/5/blog-1">Blog – No Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/5/blog-2">Blog – Left Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item active" href="/5/blog-3">Blog – Right Sidebar</a>
                      </li>
                      <li><a class="dropdown-item" href="/5/post-1">Blog Post – No Sidebar</a></li>
                      <li>
                        <a class="dropdown-item" href="/5/post-2">Blog Post – Left Sidebar</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/5/post-3">Blog Post – Right Sidebar</a>
                      </li>
                    </ul>
                  </li>

                  <!-- FAQs -->
                  <li class="nav-item">
                    <a class="nav-link" href="/5/faq">FAQs</a>
                  </li>

                  <!-- Contact -->
                  <li class="nav-item">
                    <a class="nav-link" href="/5/contact">Contact</a>
                  </li>
                </ul>

                <!-- Bottom Section -->
                <div class="d-block d-lg-none mt-4">
                  <a href="tel:+12345678901" class="btn btn-outline-primary rounded w-100 mb-2">
                    <i class="ri-phone-fill me-2"></i>Book Consultation
                  </a>
                  <a class="btn btn-primary rounded w-100" href="#"
                    ><i class="ri-sparkling-2-fill me-2"></i> Get Started Now</a
                  >
                </div>
              </div>
            </div>

            <div class="d-none d-lg-flex align-items-center gap-3">
              <div class="text-start">
                <small class="text-gray-500 d-block">Book Consultation</small>
                <a href="tel:+12345678901" class="text-decoration-none fw-medium">
                  +1 (234) 567-8901
                </a>
              </div>

              <a class="btn btn-lg btn-primary rounded" href="#">Get Started</a>
            </div>
          </div>
        </nav>

        <!-- Blogs Section -->
        <section class="text-bg-dark py-5">
          <div class="container">
            <h1 class="text-primary text-center text-uppercase fw-semibold fs-5 mb-2">Blogs</h1>
            <h2 class="display-5 text-center fw-semibold mb-4">
              Read our latest articles and tips
            </h2>
            <div class="row gy-4">
              <!-- Sidebar Column -->
              <div class="col-lg-3 order-lg-2">
                <div class="sticky-top z-1" style="top: 80px;">
                  <!-- Search Card -->
                  <div class="card text-bg-dark border p-3 mb-4">
                    <div class="card-body">
                      <h5 class="card-title mb-3">
                        <i class="ri-search-line me-2"></i>Search Blog Posts
                      </h5>
                      <form>
                        <div class="mb-3">
                          <input
                            type="text"
                            class="form-control form-control-lg"
                            placeholder="Search topics, titles..."
                          />
                        </div>
                        <button type="submit" class="btn btn-lg btn-outline-primary w-100"
                          >Search</button
                        >
                      </form>
                    </div>
                  </div>
                  <!-- Tags Card -->
                  <div class="card text-bg-dark border p-3 mb-4">
                    <div class="card-body">
                      <h5 class="card-title mb-3">
                        <i class="ri-price-tag-3-line me-2"></i>Browse by Tags
                      </h5>
                      <div class="d-flex flex-wrap gap-2">
                        <a href="#" class="badge bg-gray-800 text-decoration-none px-3 py-2"
                          >Health</a
                        >
                        <a href="#" class="badge bg-gray-800 text-decoration-none px-3 py-2"
                          >Ethics</a
                        >
                        <a href="#" class="badge bg-gray-800 text-decoration-none px-3 py-2"
                          >Value</a
                        >
                        <a href="#" class="badge bg-gray-800 text-decoration-none px-3 py-2"
                          >Breeders</a
                        >
                        <a href="#" class="badge bg-gray-800 text-decoration-none px-3 py-2"
                          >Process</a
                        >
                        <a href="#" class="badge bg-gray-800 text-decoration-none px-3 py-2"
                          >Puppies</a
                        >
                      </div>
                    </div>
                  </div>

                  <!-- Recent Posts Card -->
                  <div class="card text-bg-dark border p-3">
                    <div class="card-body">
                      <h5 class="card-title mb-3">
                        <i class="ri-history-line me-2"></i>Recent Posts
                      </h5>
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item text-bg-dark">
                          <a href="#" class="text-decoration-none fw-semibold d-block mb-1">
                            Why Health Testing Matters in Dog Breeding
                          </a>
                          <p class="mb-2">
                            12 Jan 2025 • <span class="badge bg-gray-800">Health</span>
                          </p>
                        </li>
                        <li class="list-group-item text-bg-dark">
                          <a href="#" class="text-decoration-none fw-semibold d-block mb-1">
                            Puppy Mills vs. Ethical Breeders: Learn the Difference
                          </a>
                          <p class="mb-2">
                            20 Feb 2025 • <span class="badge bg-gray-800">Ethics</span>
                          </p>
                        </li>
                        <li class="list-group-item text-bg-dark">
                          <a href="#" class="text-decoration-none fw-semibold d-block mb-1">
                            The True Cost of a Well-Bred Puppy
                          </a>
                          <p class="mb-2">
                            6 Jan 2025 • <span class="badge bg-gray-800">Value</span>
                          </p>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-9 order-lg-1">
                <div class="card text-bg-dark border p-0 mb-4">
                  <img
                    src="/dist/assets/img/breederspot-images/dog-img-3.jpg"
                    class="card-img-top"
                    style="max-height: 400px; object-fit: cover;"
                    alt="blog image"
                  />
                  <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                      <span class="badge bg-gray-800 fs-6">Health</span>
                      <span>12 Jan 2025</span>
                    </div>
                    <h5 class="card-title fs-4 mb-2">
                      <a href="#" class="text-light text-decoration-none">
                        Why Health Testing Matters in Dog Breeding
                      </a>
                    </h5>
                    <p class="mb-2">
                      Explaining the importance of genetic and health screenings in ethical breeding
                      practices.
                    </p>
                    <a href="#" class="text-decoration-none text-primary mb-0"
                      >Read more <i class="ri-arrow-right-line"></i></a
                    >
                  </div>
                </div>
                <div class="card text-bg-dark border p-0 mb-4">
                  <img
                    src="/dist/assets/img/breederspot-images/dog-img-9-wide.jpg"
                    class="card-img-top"
                    style="max-height: 400px; object-fit: cover;"
                    alt="blog image"
                  />
                  <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                      <span class="badge bg-gray-800 fs-6">Ethics</span>
                      <span>20 Feb 2025</span>
                    </div>
                    <h5 class="card-title fs-4 mb-2">
                      <a href="#" class="text-light text-decoration-none">
                        Puppy Mills vs. Ethical Breeders: Learn the Difference
                      </a>
                    </h5>
                    <p class="mb-2">
                      Comparing unethical breeding operations to responsible ones, with clear
                      distinctions.
                    </p>
                    <a href="#" class="text-decoration-none text-primary mb-0"
                      >Read more <i class="ri-arrow-right-line"></i></a
                    >
                  </div>
                </div>
                <div class="card text-bg-dark border p-0">
                  <img
                    src="/dist/assets/img/breederspot-images/dog-img-13-wide.jpg"
                    class="card-img-top"
                    style="max-height: 400px; object-fit: cover;"
                    alt="blog image"
                  />
                  <div class="card-body p-3">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                      <span class="badge bg-gray-800 fs-6">Value</span>
                      <span>6 Jan 2025</span>
                    </div>
                    <h5 class="card-title fs-4 mb-2">
                      <a href="#" class="text-light text-decoration-none">
                        The True Cost of a Well-Bred Puppy
                      </a>
                    </h5>
                    <p class="mb-2">
                      Why puppies from ethical breeders cost more and what goes into responsible
                      pricing.
                    </p>
                    <a href="#" class="text-decoration-none text-primary mb-0"
                      >Read more <i class="ri-arrow-right-line"></i></a
                    >
                  </div>
                </div>

                <!-- Pagination -->
                <nav class="mt-5 d-flex justify-content-center" aria-label="Pagination">
                  <ul class="pagination pagination-lg z-1">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </section>

        <!-- CTA Section -->
        <section class="text-bg-dark py-5">
          <div class="container">
            <div class="card text-bg-primary p-0 p-md-3">
              <div class="card-body p-3">
                <div class="row align-items-center g-4">
                  <div class="col-lg-3 text-center">
                    <i class="ri-map-pin-line text-yellow fs-2"></i>
                    <p class="text-uppercase mb-0">Visit Us in</p>
                    <p class="fw-semibold fs-5 mb-0">Austin, TX</p>
                  </div>
                  <div class="col-lg-3 fs-5">
                    <div class="mb-2">
                      <i class="ri-phone-fill text-yellow me-2"></i>
                      <a href="tel:+12345678901" class="text-light text-decoration-none text-break"
                        >+1 (234) 567-8901</a
                      >
                    </div>
                    <div>
                      <address class="mb-0">
                        <i class="ri-map-pin-fill text-yellow me-2"></i>
                        123 Main Street, Austin, TX
                      </address>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <p class="lead mb-0">
                      Visit us in Austin to see where our pups are raised and meet the newest
                      members of your family.
                      <strong>Schedule your visit today — tails are already wagging!</strong>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="text-bg-dark">
          <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-5 px-3 px-lg-5 pt-5 pb-4">
              <div class="col mb-3">
                <a
                  href="/"
                  class="d-inline-flex align-items-center text-decoration-none mb-2"
                  aria-label="Your Company Logo"
                >
                  <img
                    src="/dist/assets/img/breederspot-images/logo.svg"
                    alt="Your Company Logo"
                    style="height: 28px;"
                    class="me-2"
                  />
                </a>
                <p class="mb-3">
                  Over 200 happy families have found their perfect pup with us — yours could be
                  next.
                </p>
                <button class="btn btn-lg btn-outline-light mb-2">Get in touch</button>
              </div>

              <div class="col mb-3"></div>

              <div class="col mb-3">
                <nav aria-label="Quick Links">
                  <h5 class="mb-3">Quick Links</h5>
                  <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                      <a href="/5/home" class="nav-link text-light p-0">Home</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/5/about" class="nav-link text-light p-0">About</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/5/puppies" class="nav-link text-light p-0">Puppies</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/5/shop" class="nav-link text-light p-0">Shop</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/5/faq" class="nav-link text-light p-0">FAQs</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/5/blog" class="nav-link text-light p-0">Blog</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/5/contact" class="nav-link text-light p-0">Contact</a>
                    </li>
                  </ul>
                </nav>
              </div>

              <div class="col mb-3">
                <nav aria-label="Legal">
                  <h5 class="mb-3">Legal</h5>
                  <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link text-light p-0">Terms of Use</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link text-light p-0">Privacy Policy</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link text-light p-0">Cookies Policy</a>
                    </li>
                  </ul>
                </nav>
              </div>

              <div class="col mb-3">
                <h5 class="mb-3">Contact</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2">
                    <i class="ri-phone-fill text-primary me-2"></i>
                    <a href="tel:+12345678901" class="text-decoration-none text-light text-break"
                      >+1 (234) 567-8901</a
                    >
                  </li>
                  <li class="nav-item mb-2">
                    <i class="ri-mail-fill text-primary me-2"></i>
                    <a
                      href="mailto:hello@email.com"
                      class="text-decoration-none text-light text-break">hello@email.com</a
                    >
                  </li>
                  <li class="nav-item mb-2">
                    <address class="text-light">
                      <i class="ri-map-pin-fill text-primary me-2"></i>
                      123 Main Street, Austin, TX
                    </address>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="text-center bg-gray-800 py-4">
            <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
