        <!-- CTA/Form Section -->
        <section
          class="text-light position-relative"
          style="background-image: url('/dist/assets/img/breederspot-images/french-bulldog-1.jpg'); background-size: cover; background-position: center;"
        >
          <div
            class="position-absolute top-0 start-0 w-100 h-100"
            style="background-color: rgba(0, 0, 0, 0.35);"
          >
          </div>
          <div class="container py-5 position-relative">
            <h2 class="display-6 fw-semibold mb-4">
              Find your perfect pup—<em>ethically, responsibly, and with love</em>.
            </h2>
            <div class="row">
              <div class="col-lg-5">
                <form class="row text-start g-3">
                  <div class="col-md-6">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      id="fullName"
