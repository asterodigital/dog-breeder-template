                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      id="email"
                      placeholder="you@example.com"
                    />
                  </div>
                  <div class="mb-4">
                    <label for="message" class="form-label">Message</label>
                    <textarea
                      class="form-control form-control-lg"
                      id="message"
                      rows="3"
                      placeholder="Write your message here..."></textarea>
