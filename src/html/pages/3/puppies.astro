        <!-- Hero Section -->
        <section
          class="position-relative text-light text-center"
          style="background-image: url('/dist/assets/img/breederspot-images/french-bulldog-3.jpg'); background-size: cover; background-position: center; height: 500px;"
        >
          <!-- Overlay -->
          <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
          <!-- Content -->
          <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
            <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <h1 class="display-4 fw-semibold mb-3">Available puppies</h1>
                <p class="fs-4 mb-0">
                  We believe that every puppy deserves a loving, responsible home. Our available
                  French Bulldog puppies have been raised with care, socialization, and respect for
                  their natural development.
                </p>
              </div>
            </div>
          </div>
        </section>

        <!-- Puppies Section -->
        <section class="bg-body py-5">
          <div class="container">
            <div class="row gy-4">
              <!-- Sidebar / Filter Column -->
              <div class="col-lg-3">
                <div class="sticky-top z-1" style="top: 80px;">
                  <div class="card rounded-5 border p-3">
                    <div class="card-body">
                      <h5 class="fs-4 fw-semibold mt-1 mb-3">Filter Puppies</h5>
                      <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input
                          type="text"
                          class="form-control form-control-lg"
                          id="location"
                          placeholder="City or ZIP"
                        />
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Gender</label>
                        <div class="form-check form-check-lg">
                          <input class="form-check-input" type="radio" name="gender" id="male" />
                          <label class="form-check-label" for="male">Male</label>
                        </div>
                        <div class="form-check form-check-lg">
                          <input class="form-check-input" type="radio" name="gender" id="female" />
                          <label class="form-check-label" for="female">Female</label>
                        </div>
                      </div>
                      <button class="btn btn-lg btn-outline-primary rounded-pill w-100 mt-2"
                        >Search</button
                      >
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-9">
                <div class="row g-4">
                  <!-- Pet 1 -->
                  <div class="col-sm-6 col-lg-4">
                    <div class="card border h-100 rounded-5 p-0 position-relative">
                      <figure class="img-scale rounded-top-5 mb-0">
                        <a href="/3/puppy-details"
                          ><img
                            src="/dist/assets/img/breederspot-images/french-bulldog-puppy-1.jpg"
                            class="card-img-top rounded-0"
                            alt="Pet Image"
                          /></a
                        >
                      </figure>
                      <span
                        class="badge bg-body text-primary rounded-pill position-absolute top-0 start-0 fs-6 m-3"
                      >
                        12 weeks
                      </span>
                      <span
                        class="badge bg-body text-primary rounded-pill position-absolute top-0 end-0 fs-5 p-2 m-3"
                      >
                        <i class="ri-men-line"></i>
                      </span>
                      <div class="card-body p-3">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                          <h5 class="card-title fs-5 mb-0">
                            <a href="/3/puppy-details" class="text-decoration-none text-body"
                              >Charlie</a
                            >
                          </h5>
                          <span class="badge text-primary rounded-pill border fs-6"
                            >French Bulldog</span
                          >
                        </div>
                        <p class="card-text text-muted mb-2">
                          <i class="ri-map-pin-line me-1"></i>Austin, TX
                        </p>
                        <p class="card-text">
                          Charlie is a playful, curious pup who loves treats and chasing
                          butterflies!
                        </p>
                        <a
                          href="/3/puppy-details"
                          class="btn btn-lg btn-primary rounded-pill w-100"
                        >
                          More Info <i class="ri-arrow-right-line"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                  <!-- Pet 2 -->
                  <div class="col-sm-6 col-lg-4">
                    <div class="card border h-100 rounded-5 p-0 position-relative">
                      <figure class="img-scale rounded-top-5 mb-0">
                        <a href="/3/puppy-details"
                          ><img
                            src="/dist/assets/img/breederspot-images/french-bulldog-puppy-1.jpg"
                            class="card-img-top rounded-0"
                            alt="Pet Image"
                          /></a
                        >
                      </figure>
                      <span
                        class="badge bg-body text-primary rounded-pill position-absolute top-0 start-0 fs-6 m-3"
                      >
                        8 weeks
                      </span>
                      <span
                        class="badge bg-body text-primary rounded-pill position-absolute top-0 end-0 fs-5 p-2 m-3"
                      >
                        <i class="ri-women-line"></i>
                      </span>
                      <div class="card-body p-3">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                          <h5 class="card-title fs-5 mb-0">
                            <a href="/3/puppy-details" class="text-decoration-none text-body"
                              >Luna</a
                            >
                          </h5>
                          <span class="badge text-primary rounded-pill border fs-6"
                            >French Bulldog</span
                          >
                        </div>
                        <p class="card-text text-muted mb-2">
                          <i class="ri-map-pin-line me-1"></i>Portland, OR
                        </p>
                        <p class="card-text">
                          Luna is a playful and loving pup with a knack for sneaking onto the couch.
                        </p>
                        <a
                          href="/3/puppy-details"
                          class="btn btn-lg btn-primary rounded-pill w-100"
                        >
                          More Info <i class="ri-arrow-right-line"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                  <!-- Pet 3 -->
                  <div class="col-sm-6 col-lg-4">
                    <div class="card border h-100 rounded-5 p-0 position-relative">
                      <figure class="img-scale rounded-top-5 mb-0">
                        <a href="/3/puppy-details"
                          ><img
                            src="/dist/assets/img/breederspot-images/french-bulldog-puppy-1.jpg"
                            class="card-img-top rounded-0"
                            alt="Pet Image"
                          /></a
                        >
                      </figure>
                      <span
                        class="badge bg-body text-primary rounded-pill position-absolute top-0 start-0 fs-6 m-3"
                      >
                        14 weeks
                      </span>
                      <span
                        class="badge bg-body text-primary rounded-pill position-absolute top-0 end-0 fs-5 p-2 m-3"
                      >
                        <i class="ri-men-line"></i>
                      </span>
                      <div class="card-body p-3">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                          <h5 class="card-title fs-5 mb-0">
                            <a href="/3/puppy-details" class="text-decoration-none text-body"
                              >Cooper</a
                            >
                          </h5>
                          <span class="badge text-primary rounded-pill border fs-6"
                            >French Bulldog</span
                          >
                        </div>
                        <p class="card-text text-muted mb-2">
                          <i class="ri-map-pin-line me-1"></i>San Diego, CA
                        </p>
                        <p class="card-text">
                          Cooper loves exploring the backyard jungle and guarding his favorite bone.
                        </p>
                        <a
                          href="/3/puppy-details"
                          class="btn btn-lg btn-primary rounded-pill w-100"
                        >
                          More Info <i class="ri-arrow-right-line"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                  <!-- Pet 4 -->
                  <div class="col-sm-6 col-lg-4">
                    <div class="card border h-100 rounded-5 p-0 position-relative">
                      <figure class="img-scale rounded-top-5 mb-0">
                        <a href="/3/puppy-details"
                          ><img
                            src="/dist/assets/img/breederspot-images/french-bulldog-puppy-1.jpg"
                            class="card-img-top rounded-0"
                            alt="Pet Image"
                          /></a
                        >
                      </figure>
                      <span
                        class="badge bg-body text-primary rounded-pill position-absolute top-0 start-0 fs-6 m-3"
                      >
                        8 weeks
                      </span>
                      <span
                        class="badge bg-body text-primary rounded-pill position-absolute top-0 end-0 fs-5 p-2 m-3"
