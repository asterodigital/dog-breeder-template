            <h6 class="text-muted text-uppercase fw-semibold border-bottom ps-2 py-2">Blocks</h6>
            <div class="row g-4">
              <div class="col-md-3">
                <a class="dropdown-item" href={getPathPrefix('/docs/components/about-us')}
                  >About Us</a
                >
                <a class="dropdown-item" href={getPathPrefix('/docs/components/blog')}>Blog</a>
